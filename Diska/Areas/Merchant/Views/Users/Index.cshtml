@model IEnumerable<Diska.Models.ApplicationUser>
@{
    ViewData["Title"] = "فريق العمل";
    Layout = "_MerchantLayout";
}

<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
    <h2 style="color:var(--primary); margin:0;">فريق العمل (Staff)</h2>
    <a asp-action="Create" class="btn btn-primary small">
        <i class="fas fa-user-plus"></i> إضافة موظف
    </a>
</div>

<div class="card border-0 shadow-sm">
    @if (!Model.Any())
    {
        <div style="text-align:center; padding:50px; color:#666;">
            <i class="fas fa-users-slash fa-3x" style="margin-bottom:15px; opacity:0.5;"></i>
            <p>لا يوجد موظفين مسجلين تحت حسابك.</p>
        </div>
    }
    else
    {
        <table class="table align-middle">
            <thead class="bg-light">
                <tr>
                    <th>الاسم</th>
                    <th>رقم الهاتف</th>
                    <th>الصلاحيات</th>
                    <th>الحالة</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.PhoneNumber</td>
                        <td><span class="badge bg-info text-dark">مخصص</span></td>
                        <td><span class="badge bg-success">نشط</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>