@model Diska.Models.Product
@{
    ViewData["Title"] = "إضافة منتج";
    Layout = "_MerchantLayout";
}

<!-- Quill CSS -->
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<!-- Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<style>

    .edit-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.06);
        background: #fff;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    /* --- Sticky Header --- */
    .card-header-actions {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 15px 30px;
        border-bottom: 1px solid #e2e8f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 70px; /* Adjust based on Merchant Navbar */
        z-index: 999;
        border-radius: 16px 16px 0 0;
        box-shadow: 0 4px 10px rgba(0,0,0,0.02);
    }

    /* --- Custom Tabs --- */
    .custom-tabs-container {
        background: #fff;
        padding: 0 30px;
        border-bottom: 1px solid #e2e8f0;
    }

    .custom-tabs {
        border-bottom: none;
        gap: 30px;
    }

        .custom-tabs .nav-link {
            border: none;
            color: #64748b;
            font-weight: 700;
            padding: 20px 0;
            position: relative;
            transition: all 0.3s ease;
            background: transparent;
            font-size: 0.95rem;
        }

            .custom-tabs .nav-link i {
                margin-inline-end: 8px;
                font-size: 1.1em;
            }

            .custom-tabs .nav-link.active {
                color: var(--primary-color);
            }

                .custom-tabs .nav-link.active::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    height: 3px;
                    background: var(--primary-color);
                    border-radius: 3px 3px 0 0;
                    box-shadow: 0 -2px 10px rgba(79, 70, 229, 0.4);
                }

            .custom-tabs .nav-link:hover {
                color: var(--primary-color);
            }

    /* --- Form Elements --- */
    .form-section {
        min-height: 1200px;
        padding: 40px 30px;
        animation: fadeIn 0.4s ease-out;
    }

    .form-label {
        font-weight: 700;
        color: #334155;
        font-size: 0.9rem;
        margin-bottom: 8px;
        display: block;
    }

    .form-control-lg-custom, .form-select-custom {
        padding: 12px 15px;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        background: #f8fafc;
        font-size: 1rem;
        transition: all 0.2s;
        width: 100%;
    }

        .form-control-lg-custom:focus, .form-select-custom:focus {
            background: #fff;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
            outline: none;
        }

    /* --- Upload Zones --- */
    .image-upload-zone {
        border: 2px dashed #cbd5e1;
        border-radius: 16px;
        padding: 20px;
        text-align: center;
        background: #f8fafc;
        cursor: pointer;
        transition: 0.3s;
        position: relative;
        min-height: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .image-upload-zone:hover {
            border-color: var(--primary-color);
            background: #eff6ff;
        }

    /* --- Gallery --- */
    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(110px, 1fr));
        gap: 15px;
        margin-top: 15px;
    }

    .gallery-thumb {
        position: relative;
        height: 110px;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #e2e8f0;
        box-shadow: 0 2px 5px rgba(0,0,0,0.03);
    }

        .gallery-thumb img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* --- Variants Table --- */
    .variants-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
    }

        .variants-table th {
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #64748b;
            font-weight: 700;
            padding: 0 15px 10px;
            border-bottom: 2px solid #e2e8f0;
        }

    .variant-row td {
        background: #fff;
        padding: 10px 15px;
        border-top: 1px solid #e2e8f0;
        border-bottom: 1px solid #e2e8f0;
        vertical-align: middle;
    }

        .variant-row td:first-child {
            border-left: 1px solid #e2e8f0;
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
        }

        .variant-row td:last-child {
            border-right: 1px solid #e2e8f0;
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
        }

    .color-picker-wrapper {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 1px #e2e8f0;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    .color-picker-input {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        cursor: pointer;
        padding: 0;
        margin: 0;
        border: none;
    }

    .ql-toolbar {
        background: #f8fafc;
        border-color: #e2e8f0 !important;
        border-radius: 12px 12px 0 0;
    }

    .ql-container {
        border-color: #e2e8f0 !important;
        border-radius: 0 0 12px 12px;
        font-family: 'Cairo', sans-serif;
        background: #fff;
        min-height: 200px;
        font-size: 1rem;
    }

    .select2-container .select2-selection--single {
        height: 50px;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        background-color: #f8fafc;
        display: flex;
        align-items: center;
    }

    .select2-container--default .select2-selection--single .select2-selection__rendered {
        color: #0f172a;
        line-height: 50px;
        padding-left: 15px;
    }

    .select2-container--default .select2-selection--single .select2-selection__arrow {
        height: 48px;
        right: 10px;
    }

    select.select2-hidden-accessible {
        position: absolute !important;
        opacity: 0 !important;
        width: 1px !important;
        height: 1px !important;
        overflow: hidden !important;
        clip: rect(0,0,0,0) !important;
        margin: 0 !important;
        padding: 0 !important;
        border: 0 !important;
        display: block !important; /* Forces browser to see it */
        pointer-events: none;
    }

    [data-bs-theme="dark"] .edit-card {
        background-color: #1e293b;
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        border: 1px solid rgba(255,255,255,0.05);
    }

    [data-bs-theme="dark"] .card-header-actions {
        background-color: rgba(30, 41, 59, 0.95);
        border-bottom-color: rgba(255,255,255,0.05);
    }

    [data-bs-theme="dark"] .custom-tabs-container {
        background-color: #1e293b;
        border-bottom-color: rgba(255,255,255,0.05);
    }

    [data-bs-theme="dark"] .text-main {
        color: #f8fafc !important;
    }

    [data-bs-theme="dark"] .text-muted {
        color: #94a3b8 !important;
    }

    [data-bs-theme="dark"] .form-control-lg-custom,
    [data-bs-theme="dark"] .form-select-custom,
    [data-bs-theme="dark"] .select2-container .select2-selection--single,
    [data-bs-theme="dark"] input.bg-white {
        background-color: #0f172a !important;
        border-color: rgba(255,255,255,0.1) !important;
        color: #f8fafc !important;
    }

    [data-bs-theme="dark"] .select2-container--default .select2-selection--single .select2-selection__rendered {
        color: #f8fafc;
    }

    [data-bs-theme="dark"] .select2-dropdown {
        background-color: #1e293b;
        border-color: rgba(255,255,255,0.1);
        color: #f8fafc;
    }

    [data-bs-theme="dark"] .select2-results__option--highlighted[aria-selected] {
        background-color: var(--primary-color);
    }

    [data-bs-theme="dark"] .select2-search__field {
        background-color: #0f172a;
        color: #fff;
    }

    [data-bs-theme="dark"] .form-control-lg-custom:focus,
    [data-bs-theme="dark"] .form-select-custom:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.2);
    }

    [data-bs-theme="dark"] .form-label {
        color: #e2e8f0;
    }

    [data-bs-theme="dark"] .bg-light {
        background-color: rgba(255,255,255,0.03) !important;
        border-color: rgba(255,255,255,0.05) !important;
    }

    [data-bs-theme="dark"] .image-upload-zone {
        background-color: rgba(15, 23, 42, 0.5) !important;
        border: 2px dashed rgba(255,255,255,0.1);
    }

        [data-bs-theme="dark"] .image-upload-zone:hover {
            background-color: rgba(99, 102, 241, 0.1) !important;
            border-color: var(--primary-color);
        }

        [data-bs-theme="dark"] .image-upload-zone .text-muted {
            color: #94a3b8 !important;
        }

    [data-bs-theme="dark"] .input-group-text {
        background-color: #0f172a !important;
        border-color: rgba(255,255,255,0.1) !important;
        color: #94a3b8 !important;
    }

    [data-bs-theme="dark"] .ql-toolbar {
        background-color: #0f172a !important;
        border-color: rgba(255,255,255,0.1) !important;
    }

    [data-bs-theme="dark"] .ql-container {
        background-color: #1e293b;
        border-color: rgba(255,255,255,0.1) !important;
        color: #f8fafc;
    }

    [data-bs-theme="dark"] .ql-stroke {
        stroke: #cbd5e1 !important;
    }

    [data-bs-theme="dark"] .ql-fill {
        fill: #cbd5e1 !important;
    }

    [data-bs-theme="dark"] .ql-picker {
        color: #cbd5e1 !important;
    }

    [data-bs-theme="dark"] .ql-picker-options {
        background-color: #1e293b !important;
        border-color: rgba(255,255,255,0.1) !important;
        color: #f8fafc !important;
    }

    [data-bs-theme="dark"] .variant-row td {
        background-color: #1e293b;
        border-color: rgba(255,255,255,0.05);
        color: #f8fafc;
    }

    [data-bs-theme="dark"] .variants-table th {
        color: #94a3b8;
        border-bottom-color: rgba(255,255,255,0.1);
    }

    [data-bs-theme="dark"] .variant-row td input.bg-transparent {
        color: #f8fafc !important;
    }

    [data-bs-theme="dark"] .color-picker-wrapper {
        border-color: rgba(255,255,255,0.1);
        box-shadow: 0 0 0 1px #0f172a;
    }

    [data-bs-theme="dark"] .modal-content {
        background-color: #1e293b;
        border: 1px solid rgba(255,255,255,0.1);
        color: #f8fafc;
    }

    [data-bs-theme="dark"] .modal-header, [data-bs-theme="dark"] .modal-footer {
        border-color: rgba(255,255,255,0.1);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<form asp-action="Create" enctype="multipart/form-data" id="productForm">
    <div class="row justify-content-center fade-up">
        <div class="col-lg-11 col-xl-10">

            <div class="edit-card">
                <!-- 1. Sticky Header Actions -->
                <div class="card-header-actions">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 d-flex align-items-center justify-content-center" style="width:50px; height:50px;">
                            <i class="fas fa-plus fa-lg"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold text-main mb-0">إضافة منتج جديد</h4>
                            <span class="badge bg-light text-muted border mt-1">New Product</span>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-action="Index" class="btn btn-light border fw-bold text-muted px-4">إلغاء</a>
                        <button type="submit" class="btn btn-primary fw-bold px-4 shadow-sm" onclick="prepareDescription()">
                            <i class="fas fa-save me-2"></i> حفظ المنتج
                        </button>
                    </div>
                </div>

                <!-- 2. Tabs Navigation -->
                <div class="custom-tabs-container">
                    <ul class="nav nav-tabs custom-tabs" id="prodTab" role="tablist">
                        <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#basic" type="button"><i class="fas fa-info-circle"></i> البيانات الأساسية</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#pricing" type="button"><i class="fas fa-tags"></i> الأسعار والمخزون</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#media" type="button"><i class="fas fa-images"></i> الصور والمتغيرات</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#seo" type="button"><i class="fas fa-search"></i> SEO والشحن</button></li>
                    </ul>
                </div>

                <!-- 3. Tab Content -->
                <div class="tab-content" id="myTabContent">

                    <!-- Tab 1: Basic Info -->
                    <div class="tab-pane fade show active" style="min-height:1000px;" id="basic">
                        <div class="form-section">
                            <div class="row g-4">
                                <div class="col-md-8">
                                    <div class="row g-3">
                                        <div class="col-12">
                                            <label class="form-label">الاسم (عربي) <span class="text-danger">*</span></label>
                                            <input asp-for="Name" class="form-control-lg-custom" required placeholder="مثال: ايفون 15 برو" />
                                            <span asp-validation-for="Name" class="text-danger small"></span>
                                        </div>
                                        <div class="col-12">
                                            <label class="form-label">الاسم (إنجليزي)</label>
                                            <input asp-for="NameEn" class="form-control-lg-custom" placeholder="iPhone 15 Pro" />
                                        </div>
                                        <div class="col-md-5">
                                            <label class="form-label">القسم</label>
                                            <div class="input-group">
                                                <select asp-for="CategoryId" class="form-select-custom select2-search" asp-items="ViewBag.Categories" required>
                                                    <option value="">-- اختر القسم --</option>
                                                </select>
                                            </div>
                                            <div class="col-md-1">
                                                <button type="button" class="btn btn-light border" data-bs-toggle="modal" data-bs-target="#addCategoryModal" title="إضافة قسم جديد">
                                                    <i class="fas fa-plus text-primary"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">الماركة</label>
                                            <input asp-for="Brand" class="form-control-lg-custom" placeholder="Apple, Samsung..." />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="p-4 bg-light rounded-4 border h-100">
                                        <h6 class="fw-bold mb-3 text-muted border-bottom pb-2">حالة المنتج</h6>
                                        <div class="mb-3">
                                            <label class="form-label">الحالة</label>
                                            <select asp-for="Status" class="form-select-custom">
                                                <option value="Active" selected>🟢 نشط</option>
                                                <option value="Draft">🟡 مسودة</option>
                                                <option value="Hidden">🔴 مخفي</option>
                                            </select>
                                        </div>
                                        <div class="alert alert-success border-0 bg-opacity-10 mb-0">
                                            <small><i class="fas fa-check-circle"></i> سيتم تفعيل المنتج مباشرة عند الحفظ.</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 my-5">
                                    <label class="form-label">الوصف (عربي)</label>
                                    <div id="editor-ar"></div>
                                    <input type="hidden" asp-for="Description" id="DescriptionHidden" />
                                </div>
                                <div class="col-12 my-5">
                                    <label class="form-label">الوصف (إنجليزي)</label>
                                    <div id="editor-en"></div>
                                    <input type="hidden" asp-for="DescriptionEn" id="DescriptionEnHidden" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tab 2: Pricing -->
                    <div class="tab-pane fade" id="pricing">
                        <div class="form-section">
                            <h6 class="text-primary fw-bold mb-4 border-bottom pb-2">بيانات التسعير</h6>
                            <div class="row g-4 mb-5">
                                <div class="col-md-4">
                                    <label class="form-label">سعر البيع <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input asp-for="Price" type="number" step="0.01" class="form-control-lg-custom fw-bold text-success" required />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">السعر قبل الخصم</label>
                                    <input asp-for="OldPrice" type="number" step="0.01" class="form-control-lg-custom text-decoration-line-through text-muted" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">سعر التكلفة</label>
                                    <input asp-for="CostPrice" type="number" step="0.01" class="form-control-lg-custom" />
                                </div>
                            </div>

                            <h6 class="text-primary fw-bold mb-4 border-bottom pb-2">بيانات المخزون الإجمالي</h6>
                            <div class="row g-4">
                                <div class="col-md-3">
                                    <label class="form-label">الكمية الكلية <span class="text-danger">*</span></label>
                                    <input asp-for="StockQuantity" type="number" class="form-control-lg-custom fw-bold" required />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">حد النواقص</label>
                                    <input asp-for="LowStockThreshold" type="number" class="form-control-lg-custom" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">SKU</label>
                                    <input asp-for="SKU" class="form-control-lg-custom" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">الباركود</label>
                                    <input asp-for="Barcode" class="form-control-lg-custom" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tab 3: Media & Variants -->
                    <div class="tab-pane fade" id="media">
                        <div class="form-section">
                            <div class="row g-5">
                                <!-- Main Image -->
                                <div class="col-md-4 border-end">
                                    <label class="form-label mb-3">الصورة الرئيسية</label>
                                    <div class="image-upload-zone" onclick="document.getElementById('mainImage').click()">
                                        <div class="upload-placeholder" id="mainPlaceholder">
                                            <i class="fas fa-cloud-upload-alt fa-3x mb-3 text-muted"></i>
                                            <span class="fw-bold text-muted d-block">اضغط لرفع الصورة</span>
                                            <small class="text-muted">JPG, PNG, WEBP (Max 2MB)</small>
                                        </div>
                                        <img id="mainPreview" style="display:none; max-width:100%; max-height:220px; object-fit:contain;" />
                                    </div>
                                    <input type="file" id="mainImage" name="mainImage" class="d-none" accept="image/*" onchange="previewSingle(this, 'mainPreview', 'mainPlaceholder')">
                                </div>

                                <!-- Gallery & Variants -->
                                <div class="col-md-8">
                                    <!-- Gallery -->
                                    <div class="mb-5">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <label class="form-label m-0">معرض الصور الإضافية</label>
                                            <button type="button" class="btn btn-sm btn-light border text-primary fw-bold" onclick="document.getElementById('galleryImages').click()">
                                                <i class="fas fa-plus me-1"></i> إضافة
                                            </button>
                                            <input type="file" id="galleryImages" name="galleryImages" class="d-none" multiple accept="image/*" onchange="previewGallery(this)">
                                        </div>

                                        <div class="p-3 bg-light rounded border" style="min-height: 120px;">
                                            <div id="newGalleryPreview" class="gallery-grid"></div>
                                        </div>
                                    </div>

                                    <!-- Variants -->
                                    <div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <label class="form-label m-0 text-primary fw-bold">المتغيرات (الألوان)</label>
                                            <button type="button" class="btn btn-sm btn-primary fw-bold" onclick="addVariantRow()">
                                                <i class="fas fa-plus me-1"></i> إضافة لون
                                            </button>
                                        </div>

                                        <div class="table-responsive border rounded bg-white" style="background-color: var(--bg-card) !important;">
                                            <table class="variants-table">
                                                <thead class="bg-light">
                                                    <tr>
                                                        <th class="ps-4">اللون</th>
                                                        <th>اسم اللون</th>
                                                        <th class="text-center">حذف</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="variantsBody">
                                                    <!-- Dynamic Rows -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tab 4: SEO -->
                    <div class="tab-pane fade" id="seo">
                        <div class="form-section">
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label class="form-label">الوزن (كجم)</label>
                                    <input asp-for="Weight" type="number" step="0.01" class="form-control-lg-custom" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">الرابط الدائم (Slug)</label>
                                    <input asp-for="Slug" class="form-control-lg-custom bg-light" placeholder="يترك فارغاً للتوليد التلقائي" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">عنوان الميتا (Meta Title)</label>
                                    <input asp-for="MetaTitle" class="form-control-lg-custom" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">وصف الميتا (Meta Description)</label>
                                    <textarea asp-for="MetaDescription" class="form-control-lg-custom" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

<!-- Add Category Modal -->
