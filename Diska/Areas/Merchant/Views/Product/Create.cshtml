@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // 1. Editors
        var toolbarOptions = [
            ['bold', 'italic', 'underline', 'strike'],
            [{ 'list': 'ordered'}, { 'list': 'bullet' }],
            [{ 'direction': 'rtl' }],
            ['clean']
        ];

        var quillAr = new Quill('#editor-ar', { theme: 'snow', modules: { toolbar: toolbarOptions }, placeholder: 'تفاصيل المنتج بالعربية...' });
        var quillEn = new Quill('#editor-en', { theme: 'snow', modules: { toolbar: toolbarOptions }, placeholder: 'Product details in English...' });

        // 2. Select2
        $(document).ready(function() {
            $('.select2-search').select2({
                dir: "rtl",
                placeholder: "اختر...",
                allowClear: true,
                dropdownParent: $('body')
            });
        });

        // 3. Form Submission
        function prepareDescription() {
            document.getElementById('DescriptionHidden').value = quillAr.root.innerHTML;
            document.getElementById('DescriptionEnHidden').value = quillEn.root.innerHTML;
        }

        // 4. Image Preview
        function previewSingle(input, imgId, phId) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var img = document.getElementById(imgId);
                    img.src = e.target.result;
                    img.style.display = 'block';
                    var ph = document.getElementById(phId);
                    if(ph) ph.style.display = 'none';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function previewGallery(input) {
            const container = document.getElementById('newGalleryPreview');
            container.innerHTML = '';
            if (input.files) {
                Array.from(input.files).forEach(file => {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        const div = document.createElement('div');
                        div.className = 'gallery-thumb';
                        div.innerHTML = `<img src="${e.target.result}"><button type="button" class="btn btn-danger btn-sm p-0 rounded-circle position-absolute top-0 end-0 m-1" style="width:24px;height:24px;display:flex;align-items:center;justify-content:center;" onclick="this.parentElement.remove()"><i class="fas fa-times" style="font-size:0.7rem;"></i></button>`;
                        container.appendChild(div);
                    }
                    reader.readAsDataURL(file);
                });
            }
        }

        // 5. Variants
        function addVariantRow() {
            const tbody = document.getElementById('variantsBody');
            const tr = document.createElement('tr');
            tr.className = 'variant-row';
            tr.innerHTML = `
                <td class="ps-4">
                    <div class="color-picker-wrapper" style="background-color: #000000">
                        <input type="color" name="productColorsHex" class="color-picker-input" value="#000000" onchange="this.parentElement.style.backgroundColor=this.value">
                    </div>
                </td>
                <td>
                    <input type="text" name="productColorsName" class="form-control border-0 bg-transparent fw-bold" placeholder="اسم اللون" required style="box-shadow:none;">
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-sm text-danger" onclick="this.closest('tr').remove()"><i class="fas fa-trash-alt"></i></button>
                </td>
            `;
            tbody.appendChild(tr);
        }

        // Add one variant row by default
        document.addEventListener('DOMContentLoaded', function() {
             if(document.getElementById('variantsBody').children.length === 0) addVariantRow();
        });

        // 6. Add Category Action (Backend Integration)
        function submitNewCategory() {
            const name = document.getElementById('newCategoryName').value;
            // Get AntiForgeryToken
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            if(name) {
                $.ajax({
                    url: '/Merchant/Product/RequestCategory',
                    type: 'POST',
                    data: { name: name, __RequestVerificationToken: token },
                    success: function(response) {
                        Swal.fire({
                            icon: 'success',
                            title: 'تم الإرسال',
                            text: 'تم إرسال طلب إضافة القسم "' + name + '" للإدارة.',
                            confirmButtonColor: '#4f46e5'
                        });
                        bootstrap.Modal.getInstance(document.getElementById('addCategoryModal')).hide();
                        document.getElementById('newCategoryName').value = '';
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'خطأ',
                            text: 'حدث خطأ أثناء إرسال الطلب.',
                            confirmButtonColor: '#ef4444'
                        });
                    }
                });
            }
        }
    </script>
}