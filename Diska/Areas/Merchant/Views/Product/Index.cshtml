@model IEnumerable<Diska.Models.Product>
@{
    ViewData["Title"] = "منتجاتي";
    Layout = "_MerchantLayout";
}

<style>
    /* Premium Table Styles */
    .table-container {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        box-shadow: var(--shadow-sm);
        overflow: hidden;
    }

    .table {
        margin-bottom: 0;
        color: var(--text-main);
    }

        .table thead th {
            background-color: rgba(0,0,0,0.02);
            color: var(--text-muted);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.75rem;
            padding: 18px 24px;
            border-bottom: 1px solid var(--border-color);
        }

    [data-bs-theme="dark"] .table thead th {
        background-color: rgba(255,255,255,0.05);
    }

    .table tbody td {
        padding: 20px 24px;
        vertical-align: middle;
        border-bottom: 1px solid var(--border-color);
    }

    .product-img {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        object-fit: cover;
        border: 1px solid var(--border-color);
        padding: 2px;
        background: var(--bg-body);
    }

    .action-btn {
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        transition: 0.2s;
        border: 1px solid var(--border-color);
        background: transparent;
        color: var(--text-muted);
    }

        .action-btn:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
            background: rgba(79, 70, 229, 0.05);
        }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1" style="color:var(--text-main)">إدارة منتجاتي</h2>
        <p class="text-muted small mb-0">قائمة المنتجات وحالة المخزون</p>
    </div>
    <a asp-action="Create" class="btn btn-primary px-4 py-2 rounded-pill fw-bold shadow-sm">
        <i class="fas fa-plus me-2"></i> إضافة منتج جديد
    </a>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5 rounded-4 border border-dashed" style="border-color: var(--border-color)!important;">
        <div class="text-muted opacity-25 mb-3"><i class="fas fa-box-open fa-4x"></i></div>
        <h4 class="text-muted">لم تقم بإضافة أي منتجات بعد</h4>
        <p class="text-muted small">ابدأ بإضافة منتجاتك لتبدأ في البيع</p>
    </div>
}
else
{
    <div class="table-container">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th class="ps-4">المنتج</th>
                        <th>القسم</th>
                        <th>السعر</th>
                        <th>المخزون</th>
                        <th>الحالة</th>
                        <th class="text-end pe-4">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center gap-3">
                                    <img src="~/@item.ImageUrl" class="product-img" onerror="this.src='/images/default.png'">
                                    <div>
                                        <div class="fw-bold">@item.Name</div>
                                        <small class="text-muted">SKU: @item.SKU</small>
                                    </div>
                                </div>
                            </td>
                            <td><span class="badge bg-light text-dark border">@item.Category?.Name</span></td>
                            <td class="fw-bold text-success">@item.Price.ToString("N0") ج.م</td>
                            <td>
                                @if (item.StockQuantity == 0)
                                {
                                    <span class="text-danger fw-bold">نافذ</span>
                                }
                                else if (item.StockQuantity < 10)
                                {
                                    <span class="text-warning fw-bold">@item.StockQuantity (منخفض)</span>
                                }
                                else
                                {
                                    <span class="text-success fw-bold">@item.StockQuantity</span>
                                }
                            </td>
                            <td>
                                @if (item.Status == "Active")
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">نشط</span>
                                }
                                else if (item.Status == "Pending")
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25">قيد المراجعة</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25">@item.Status</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <button type="button" class="action-btn" onclick="requestPriceUpdate('@item.Id', '@item.Name', '@item.Price')">
                                    <i class="fas fa-tag"></i> تعديل السعر
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- Modal -->
<div class="modal fade" id="priceModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background:var(--bg-card); color:var(--text-main); border:1px solid var(--border-color);">
            <form asp-action="RequestUpdate" method="post">
                <div class="modal-header border-bottom border-secondary border-opacity-10">
                    <h5 class="modal-title fw-bold">طلب تعديل سعر</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" style="filter: invert(var(--bs-theme) == 'dark' ? 1 : 0)"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="id" id="modalProdId">
                    <div class="mb-3 p-3 rounded bg-primary bg-opacity-10 border border-primary border-opacity-10">
                        <div class="small text-muted">المنتج</div>
                        <div class="fw-bold" id="modalProdName"></div>
                        <div class="small text-muted mt-1">السعر الحالي: <span class="fw-bold text-dark" id="modalCurrentPrice"></span></div>
                    </div>

                    <label class="form-label fw-bold small text-muted">السعر الجديد المقترح</label>
                    <input type="number" name="newPrice" class="form-control" step="0.01" required style="background:var(--bg-body); border-color:var(--border-color); color:var(--text-main);">

                    <div class="mt-3 small text-muted">
                        <i class="fas fa-info-circle me-1"></i> سيتم إرسال هذا الطلب للإدارة للموافقة عليه قبل تطبيقه.
                    </div>
                </div>
                <div class="modal-footer border-top border-secondary border-opacity-10">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-primary px-4 fw-bold">إرسال الطلب</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function requestPriceUpdate(id, name, price) {
            document.getElementById('modalProdId').value = id;
            document.getElementById('modalProdName').innerText = name;
            document.getElementById('modalCurrentPrice').innerText = price + " ج.م";
            new bootstrap.Modal(document.getElementById('priceModal')).show();
        }
    </script>
}