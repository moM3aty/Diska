@model IEnumerable<Diska.Models.Product>
@using System.Globalization
@{
    ViewData["Title"] = "منتجاتي";
    Layout = "_MerchantLayout";
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<style>
    /* Premium Table Styles */
    :root {
        --tbl-bg: #ffffff;
        --tbl-text: #0f172a;
        --tbl-border: #e2e8f0;
        --tbl-hover: #f8fafc;
        --tbl-head-bg: #f1f5f9;
        --tbl-primary: #4f46e5;
    }

    [data-bs-theme="dark"] {
        --tbl-bg: #1e293b;
        --tbl-text: #f8fafc;
        --tbl-border: rgba(255,255,255,0.08);
        --tbl-hover: rgba(255,255,255,0.03);
        --tbl-head-bg: #0f172a;
        --tbl-primary: #818cf8;
    }

    .table-card {
        background: var(--tbl-bg);
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: 1px solid var(--tbl-border);
        overflow: hidden;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
    }

        .custom-table th {
            background: var(--tbl-head-bg);
            color: var(--tbl-text);
            padding: 15px 20px;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
            border-bottom: 1px solid var(--tbl-border);
            white-space: nowrap;
        }

        .custom-table td {
            padding: 15px 20px;
            color: var(--tbl-text);
            border-bottom: 1px solid var(--tbl-border);
            vertical-align: middle;
        }

        .custom-table tr:last-child td {
            border-bottom: none;
        }

        .custom-table tr:hover {
            background: var(--tbl-hover);
        }

    .product-thumb {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        object-fit: cover;
        border: 1px solid var(--tbl-border);
        padding: 2px;
        background: #fff;
    }

    /* Stock Update Input */
    .stock-input-group {
        display: flex;
        align-items: center;
        gap: 5px;
        max-width: 140px;
    }

    .stock-input {
        width: 70px;
        padding: 8px;
        border: 1px solid var(--tbl-border);
        border-radius: 8px;
        text-align: center;
        background: var(--tbl-bg);
        color: var(--tbl-text);
        font-weight: 700;
        outline: none;
    }

        .stock-input:focus {
            border-color: var(--tbl-primary);
        }

    .btn-update-stock {
        background: var(--tbl-primary);
        color: #fff;
        border: none;
        width: 35px;
        height: 35px;
        border-radius: 8px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
    }

        .btn-update-stock:hover {
            transform: scale(1.1);
            opacity: 0.9;
        }

    .status-badge {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 800;
    }

    .st-Active {
        background: rgba(34, 197, 94, 0.15);
        color: #16a34a;
    }

    .st-Pending {
        background: rgba(245, 158, 11, 0.15);
        color: #b45309;
    }

    [data-bs-theme="dark"] .st-Active {
        color: #4ade80;
    }

    [data-bs-theme="dark"] .st-Pending {
        color: #fbbf24;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1" style="color:var(--tbl-text)">@(isAr ? "إدارة المنتجات" : "Product Management")</h2>
        <p class="text-muted small mb-0">@(isAr ? "تحكم في مخزونك وأسعارك بسهولة" : "Manage your inventory and prices")</p>
    </div>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
        <i class="fas fa-plus"></i> @(isAr ? "منتج جديد" : "New Product")
    </a>
</div>

<div class="table-card">
    <div class="table-responsive">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>@(isAr ? "المنتج" : "Product")</th>
                    <th>@(isAr ? "السعر" : "Price")</th>
                    <th>@(isAr ? "المخزون (تعديل سريع)" : "Stock (Quick Edit)")</th>
                    <th>@(isAr ? "الحالة" : "Status")</th>
                    <th class="text-end">@(isAr ? "إجراءات" : "Actions")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-3">
                                <img src="~/@item.ImageUrl" class="product-thumb" onerror="this.src='/images/default.png'">
                                <div>
                                    <div class="fw-bold">@item.Name</div>
                                    <small class="text-muted">@item.Category?.Name</small>
                                </div>
                            </div>
                        </td>
                        <td class="fw-bold text-success">@item.Price.ToString("N0")</td>

                        <!-- Quick Stock Update -->
                        <td>
                            <div class="stock-input-group">
                                <input type="number" id="stock-@item.Id" value="@item.StockQuantity" min="0" class="stock-input">
                                <button class="btn-update-stock" onclick="updateStock(@item.Id)" title="@(isAr ? "حفظ" : "Save")">
                                    <i class="fas fa-save"></i>
                                </button>
                            </div>
                        </td>

                        <td>
                            <span class="status-badge st-@item.Status">
                                @(isAr ? (item.Status == "Active" ? "نشط" : "معلق") : item.Status)
                            </span>
                        </td>
                        <td class="text-end">
                            <a href="/Product/Details/@item.Id" target="_blank" class="btn btn-sm btn-light border" title="معاينة"><i class="fas fa-eye"></i></a>
                            <!-- زر لتعديل السعر يفتح مودال (اختياري) -->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function updateStock(id) {
            const input = document.getElementById('stock-' + id);
            const qty = input.value;
            const btn = input.nextElementSibling;

            // Animation
            const originalIcon = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            btn.disabled = true;

            // استخدام fetch بدلاً من $.post
            fetch('/Merchant/Product/UpdateStockDirectly', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: `id=${id}&newQuantity=${qty}`
            })
            .then(response => response.json())
            .then(res => {
                btn.disabled = false;
                btn.innerHTML = originalIcon;

                if (res.success) {
                    Swal.fire({
                        toast: true, position: 'top-end', icon: 'success',
                        title: res.message, showConfirmButton: false, timer: 1500
                    });

                    // Visual feedback
                    input.style.borderColor = '#22c55e';
                    setTimeout(() => input.style.borderColor = '', 2000);
                } else {
                    Swal.fire({ icon: 'error', title: 'خطأ', text: res.message });
                }
            })
            .catch(error => {
                btn.disabled = false;
                btn.innerHTML = originalIcon;
                console.error('Error:', error);
                Swal.fire({ icon: 'error', title: 'خطأ', text: 'حدث خطأ في الاتصال' });
            });
        }
    </script>
}