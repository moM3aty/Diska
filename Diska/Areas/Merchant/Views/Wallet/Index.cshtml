@model IEnumerable<Diska.Models.WalletTransaction>
@{
    ViewData["Title"] = "محفظتي";
    Layout = "_MerchantLayout";
    bool isAr = System.Globalization.CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1" style="color:var(--text-main)">@(isAr ? "المحفظة المالية" : "My Wallet")</h2>
        <p class="text-muted small mb-0">@(isAr ? "إدارة الرصيد وسجل المعاملات" : "Manage balance and transactions")</p>
    </div>
</div>

<style>
    /* Premium Wallet Styles */
    .balance-card {
        background: linear-gradient(135deg, var(--primary-color), #4338ca);
        color: #fff;
        border-radius: 20px;
        padding: 30px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(79, 70, 229, 0.3);
        border: none;
    }

        .balance-card::after {
            content: '';
            position: absolute;
            bottom: -20px;
            right: -20px;
            width: 150px;
            height: 150px;
            border-radius: 50%;
            background: rgba(255,255,255,0.1);
        }

        .balance-card .btn-light {
            background: rgba(255,255,255,0.2);
            color: #fff;
            border: 1px solid rgba(255,255,255,0.3);
            backdrop-filter: blur(5px);
        }

            .balance-card .btn-light:hover {
                background: #fff;
                color: var(--primary-color);
            }

    .summary-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 30px;
        height: 100%;
        box-shadow: var(--shadow-sm);
    }

    .trans-table-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        box-shadow: var(--shadow-sm);
        overflow: hidden;
    }

    .table thead th {
        background: rgba(0,0,0,0.02);
        color: var(--text-muted);
        border-bottom: 1px solid var(--border-color);
        padding: 18px 24px;
        font-size: 0.8rem;
        text-transform: uppercase;
    }

    [data-bs-theme="dark"] .table thead th {
        background: rgba(255,255,255,0.05);
    }

    .table td {
        padding: 18px 24px;
        vertical-align: middle;
        border-bottom: 1px solid var(--border-color);
        color: var(--text-main);
    }
</style>

<div class="row g-4 mb-5">
    <!-- Balance Card -->
    <div class="col-lg-6">
        <div class="balance-card h-100 d-flex flex-column justify-content-between">
            <div>
                <span class="opacity-75 small text-uppercase fw-bold">@(isAr ? "الرصيد الحالي" : "Current Balance")</span>
                <h1 class="display-4 fw-bold mt-2 mb-0">@(((decimal)ViewBag.Balance).ToString("N0")) <span class="fs-4 opacity-75">@(isAr ? "ج.م" : "EGP")</span></h1>
            </div>

            <form asp-action="RequestWithdraw" method="post" class="mt-4">
                <div class="input-group">
                    <input type="number" name="amount" class="form-control bg-white bg-opacity-10 border-0 text-white placeholder-white" placeholder="@(isAr ? "المبلغ المراد سحبه..." : "Amount to withdraw...")" min="100" style="backdrop-filter: blur(5px);">
                    <button type="submit" class="btn btn-light fw-bold px-4">@(isAr ? "طلب سحب" : "Withdraw")</button>
                </div>
                <small class="text-white opacity-50 mt-2 d-block">
                    <i class="fas fa-info-circle me-1"></i> @(isAr ? "الحد الأدنى للسحب 100 ج.م" : "Min withdrawal: 100 EGP")
                </small>
            </form>
        </div>
    </div>

    <!-- Summary -->
    <div class="col-lg-6">
        <div class="summary-card">
            <h5 class="fw-bold mb-4" style="color:var(--text-main)">@(isAr ? "ملخص الحركة" : "Summary")</h5>

            <div class="d-flex align-items-center justify-content-between mb-4 pb-3 border-bottom" style="border-color:var(--border-color)!important;">
                <div class="d-flex align-items-center gap-3">
                    <div class="rounded-circle p-3 bg-success bg-opacity-10 text-success"><i class="fas fa-arrow-down fa-lg"></i></div>
                    <div>
                        <small class="text-muted d-block">@(isAr ? "إجمالي الأرباح" : "Total Earnings")</small>
                        <h5 class="fw-bold mb-0 text-success">@(((decimal)ViewBag.TotalEarnings).ToString("N0"))</h5>
                    </div>
                </div>
            </div>

            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <div class="rounded-circle p-3 bg-danger bg-opacity-10 text-danger"><i class="fas fa-arrow-up fa-lg"></i></div>
                    <div>
                        <small class="text-muted d-block">@(isAr ? "المسحوبات / الخصومات" : "Withdrawals")</small>
                        <h5 class="fw-bold mb-0 text-danger">@(((decimal)ViewBag.TotalWithdrawals).ToString("N0"))</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="trans-table-card">
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="text-muted opacity-25 mb-3"><i class="fas fa-receipt fa-4x"></i></div>
            <p class="text-muted">@(isAr ? "لا توجد معاملات مالية حتى الآن." : "No transactions found.")</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th class="ps-4">@(isAr ? "نوع العملية" : "Type")</th>
                        <th>@(isAr ? "القيمة" : "Amount")</th>
                        <th>@(isAr ? "البيان" : "Description")</th>
                        <th class="text-end pe-4">@(isAr ? "التاريخ" : "Date")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        bool isPositive = item.Type == "Deposit" || item.Type == "Sale";
                        <tr>
                            <td class="ps-4">
                                @if (item.Type == "Deposit" || item.Type == "Sale")
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3">@(isAr ? "إيداع / بيع" : "Deposit/Sale")</span>
                                }
                                else if (item.Type == "Withdraw")
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 px-3">@(isAr ? "سحب" : "Withdraw")</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-3">@(isAr ? "خصم" : "Deduction")</span>
                                }
                            </td>
                            <td class="fw-bold @(isPositive ? "text-success" : "text-danger")" dir="ltr">
                                @(isPositive ? "+" : "-")@Math.Abs(item.Amount).ToString("N0") <small>EGP</small>
                            </td>
                            <td class="text-muted">@item.Description</td>
                            <td class="text-end pe-4 text-muted small">
                                @item.TransactionDate.ToString("yyyy-MM-dd") <br>
                                @item.TransactionDate.ToString("hh:mm tt")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>