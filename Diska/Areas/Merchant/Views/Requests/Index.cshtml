@model IEnumerable<Diska.Models.DealRequest>
@using System.Globalization
@{
    ViewData["Title"] = "الفرص والطلبات";
    Layout = "_MerchantLayout";
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-0">@(isAr ? "طلبات الشراء الخاصة (الفرص)" : "Buying Requests (Opportunities)")</h2>
        <p class="text-muted mt-1">@(isAr ? "قدم عروض أسعارك للعملاء الذين يطلبون كميات كبيرة" : "Submit offers for bulk requests")</p>
    </div>
</div>

<div class="row g-4">
    @if (!Model.Any())
    {
        <div class="col-12 text-center py-5">
            <i class="fas fa-search-dollar fa-3x text-muted mb-3 opacity-50"></i>
            <p class="text-muted">@(isAr ? "لا توجد طلبات شراء متاحة حالياً." : "No active requests found.")</p>
        </div>
    }

    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span class="badge bg-info text-dark">@(isAr ? "طلب شراء" : "Request")</span>
                        <small class="text-muted">@item.RequestDate.ToString("dd/MM/yyyy")</small>
                    </div>

                    <h5 class="card-title fw-bold text-dark">@item.ProductName</h5>

                    <div class="d-flex justify-content-between align-items-center my-3 bg-light p-2 rounded">
                        <div class="text-center">
                            <small class="text-muted d-block">@(isAr ? "الكمية" : "Qty")</small>
                            <strong class="text-primary">@item.TargetQuantity</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="text-center">
                            <small class="text-muted d-block">@(isAr ? "السعر المستهدف" : "Target Price")</small>
                            <strong class="text-success">@item.DealPrice.ToString("N0")</strong>
                        </div>
                    </div>

                    <div class="mb-3 small text-muted">
                        <i class="fas fa-map-marker-alt me-1 text-danger"></i> @item.Location
                    </div>

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary w-100">
                        @(isAr ? "تفاصيل وتقديم عرض" : "View & Offer")
                    </a>
                </div>
            </div>
        </div>
    }
</div>