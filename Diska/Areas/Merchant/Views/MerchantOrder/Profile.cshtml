@model Diska.Models.ApplicationUser
@using System.Globalization
@{
    ViewData["Title"] = "الملف الشخصي";
    Layout = "_MerchantLayout";
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-primary">@(isAr ? "إعدادات الحساب" : "Account Settings")</h5>
            </div>
            <div class="card-body p-4">

                <form asp-action="UpdateProfile" method="post">
                    <!-- Read-only Info -->
                    <div class="alert alert-light border d-flex align-items-center mb-4">
                        <div class="bg-warning text-dark rounded-circle p-3 me-3" style="width:50px; height:50px; display:flex; align-items:center; justify-content:center;">
                            <i class="fas fa-store fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">@Model.ShopName</h5>
                            <small class="text-muted">@(isAr ? "تاجر موثق" : "Verified Merchant") <i class="fas fa-check-circle text-primary"></i></small>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label">@(isAr ? "الاسم بالكامل" : "Full Name")</label>
                            <input type="text" name="FullName" class="form-control" value="@Model.FullName" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@(isAr ? "رقم الهاتف" : "Phone Number")</label>
                            <input type="text" class="form-control bg-light" value="@Model.PhoneNumber" readonly title="تواصل مع الدعم لتغيير الرقم">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@(isAr ? "اسم المتجر" : "Shop Name")</label>
                            <input type="text" name="ShopName" class="form-control" value="@Model.ShopName" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@(isAr ? "السجل التجاري" : "Commercial Register")</label>
                            <input type="text" name="CommercialRegister" class="form-control" value="@Model.CommercialRegister">
                        </div>
                    </div>

                    <h6 class="text-muted border-bottom pb-2 mb-3">@(isAr ? "تغيير كلمة المرور" : "Change Password")</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label">@(isAr ? "كلمة المرور الحالية" : "Current Password")</label>
                            <input type="password" name="CurrentPassword" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@(isAr ? "كلمة المرور الجديدة" : "New Password")</label>
                            <input type="password" name="NewPassword" class="form-control">
                        </div>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary px-4 fw-bold">@(isAr ? "حفظ التغييرات" : "Save Changes")</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>