@model IEnumerable<Diska.Models.DealRequest>
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "طلبات الشراء الخاصة" : "Special Requests";
    Layout = "_AdminLayout";
}

<style>
    /* =========================================
           PREMIUM ADMIN TABLE STYLES
           ========================================= */
    :root {
        --adm-bg: #f8fafc;
        --adm-card-bg: #ffffff;
        --adm-text: #0f172a;
        --adm-muted: #64748b;
        --adm-border: #e2e8f0;
        --adm-primary: #0F172A;
        --adm-accent: #FACC15;
        --adm-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02);
        --adm-hover: #f1f5f9;
    }

    [data-bs-theme="dark"] {
        --adm-bg: #020617;
        --adm-card-bg: #1e293b;
        --adm-text: #f8fafc;
        --adm-muted: #94a3b8;
        --adm-border: rgba(255, 255, 255, 0.08);
        --adm-primary: #f8fafc;
        --adm-accent: #FACC15;
        --adm-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
        --adm-hover: rgba(255, 255, 255, 0.05);
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--adm-primary);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .count-badge {
        background: rgba(14, 165, 233, 0.1);
        color: #0284c7;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    .admin-card {
        background: var(--adm-card-bg);
        border-radius: 16px;
        border: 1px solid var(--adm-border);
        box-shadow: var(--adm-shadow);
        overflow: hidden;
    }

    .table-responsive {
        width: 100%;
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th {
            background: rgba(0,0,0,0.02);
            color: var(--adm-muted);
            padding: 15px 20px;
            text-align: start;
            font-weight: 700;
            font-size: 0.85rem;
            border-bottom: 1px solid var(--adm-border);
            text-transform: uppercase;
        }

        .table td {
            padding: 15px 20px;
            border-bottom: 1px solid var(--adm-border);
            color: var(--adm-text);
            vertical-align: middle;
            transition: background-color 0.2s;
        }

        .table tr:hover td {
            background-color: var(--adm-hover);
        }

    .user-info {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .avatar-circle {
        width: 35px;
        height: 35px;
        background: var(--adm-bg);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        color: var(--adm-primary);
        font-size: 0.9rem;
    }

    .status-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 800;
        display: inline-block;
    }

    .st-Pending {
        background: #fffbeb;
        color: #b45309;
    }

    .st-Approved {
        background: #e0f2fe;
        color: #0284c7;
    }

    .st-Completed {
        background: #dcfce7;
        color: #166534;
    }

    .st-Rejected {
        background: #fee2e2;
        color: #991b1b;
    }

    [data-bs-theme="dark"] .st-Pending {
        background: rgba(245, 158, 11, 0.15);
        color: #fbbf24;
    }

    [data-bs-theme="dark"] .st-Approved {
        background: rgba(14, 165, 233, 0.15);
        color: #38bdf8;
    }

    [data-bs-theme="dark"] .st-Completed {
        background: rgba(34, 197, 94, 0.15);
        color: #4ade80;
    }

    [data-bs-theme="dark"] .st-Rejected {
        background: rgba(239, 68, 68, 0.15);
        color: #f87171;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
        color: var(--adm-muted);
        background: transparent;
        border: 1px solid var(--adm-border);
    }

        .btn-action:hover {
            background: var(--adm-primary);
            color: #fff;
            border-color: var(--adm-primary);
            transform: translateY(-2px);
        }

    .empty-state {
        text-align: center;
        padding: 60px;
        color: var(--adm-muted);
    }

    .empty-icon {
        font-size: 3rem;
        margin-bottom: 15px;
        opacity: 0.3;
    }

    /* Animation */
    .fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container-fluid py-4 fade-up">

    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-bullhorn" style="color:var(--adm-accent);"></i>
            @(isAr ? "طلبات الشراء الخاصة" : "Special Deal Requests")
            <span class="count-badge ms-2">@Model.Count()</span>
        </h1>
    </div>

    <div class="admin-card">
        @if (!Model.Any())
        {
            <div class="empty-state">
                <i class="far fa-folder-open empty-icon"></i>
                <p>@(isAr ? "لا توجد طلبات شراء حتى الآن." : "No deal requests found yet.")</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>@(isAr ? "العميل" : "Customer")</th>
                            <th>@(isAr ? "المنتج المطلوب" : "Product")</th>
                            <th>@(isAr ? "الكمية / السعر" : "Qty / Target")</th>
                            <th>@(isAr ? "العروض" : "Offers")</th>
                            <th>@(isAr ? "الحالة" : "Status")</th>
                            <th>@(isAr ? "التاريخ" : "Date")</th>
                            <th class="text-end">@(isAr ? "إجراء" : "Action")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-muted">@item.Id</td>
                                <td>
                                    <div class="user-info">
                                        <div class="avatar-circle">
                                            @(item.User?.FullName?.FirstOrDefault() ?? 'U')
                                        </div>
                                        <div>
                                            <div class="fw-bold">@item.User?.FullName</div>
                                            <div style="font-size:0.75rem; color:var(--adm-muted);">@item.User?.PhoneNumber</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold d-block">@item.ProductName</span>
                                    <span style="font-size:0.8rem; color:var(--adm-muted);"><i class="fas fa-map-marker-alt"></i> @item.Location</span>
                                </td>
                                <td>
                                    <div class="fw-bold">@item.TargetQuantity <small class="text-muted">x</small> @item.DealPrice.ToString("N0")</div>
                                </td>
                                <td>
                                    @if (item.Offers != null && item.Offers.Any())
                                    {
                                        <span class="badge bg-info text-dark">@item.Offers.Count @(isAr ? "عرض" : "Offers")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var statusText = isAr ? (item.Status == "Pending" ? "قيد المراجعة" : item.Status == "Approved" ? "مقبول" : item.Status == "Completed" ? "مكتمل" : "مرفوض") : item.Status;
                                    }
                                    <span class="status-badge st-@item.Status">@statusText</span>
                                </td>
                                <td style="font-size:0.85rem; color:var(--adm-muted);">
                                    @item.RequestDate.ToString("yyyy-MM-dd")
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-action" title="@(isAr ? "التفاصيل" : "Details")">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>