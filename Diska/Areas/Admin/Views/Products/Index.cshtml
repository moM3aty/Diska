@model IEnumerable<Diska.Models.Product>
@{
    ViewData["Title"] = "إدارة المنتجات";
    Layout = "_AdminLayout";
}

<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
    <div>
        <h2 style="margin:0; color:var(--primary);">إدارة المنتجات والمخزون</h2>
        <span class="badge" style="background:#e0f2fe; color:#0284c7;">إجمالي: <span id="prodCount">@Model.Count()</span></span>
    </div>
    <div style="display:flex; gap:10px;">
        <form asp-action="ExportToCsv" method="post">
            <button type="submit" class="btn btn-outline-success"><i class="fas fa-file-csv"></i> تصدير CSV</button>
        </form>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> إضافة منتج</a>
    </div>
</div>

<div class="card" style="margin-bottom:20px; padding:15px;">
    <div style="display:flex; gap:15px; align-items:center; flex-wrap:wrap;">
        <div style="flex:1; min-width:250px;">
            <input type="text" id="prodSearch" class="form-control" placeholder="بحث بالاسم، SKU، التاجر..." onkeyup="filterProducts()">
        </div>
        <div style="width:180px;">
            <select id="stockFilter" class="form-control" onchange="filterProducts()">
                <option value="">كل المخزون</option>
                <option value="Low">منخفض (نواقص)</option>
                <option value="Out">نافذ (0)</option>
                <option value="InStock">متوفر</option>
            </select>
        </div>
        <div style="width:150px;">
            <select id="stateFilter" class="form-control" onchange="filterProducts()">
                <option value="">كل الحالات</option>
                <option value="Active">نشط</option>
                <option value="Draft">مسودة</option>
                <option value="Archived">مؤرشف</option>
            </select>
        </div>
    </div>
</div>

<div class="card">
    @if (!Model.Any())
    {
        <div style="text-align:center; padding:50px; color:#666;">
            <p>لا توجد منتجات مسجلة.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle" style="width:100%;">
                <thead>
                    <tr>
                        <th style="width:60px;">صورة</th>
                        <th>المنتج</th>
                        <th>التاجر</th>
                        <th>السعر / التكلفة</th>
                        <th>المخزون</th>
                        <th>الحالة</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string stockStatus = item.StockQuantity == 0 ? "Out" : (item.StockQuantity <= item.LowStockThreshold ? "Low" : "InStock");
                        string statusBadge = item.Status switch { "Active" => "bg-success", "Draft" => "bg-secondary", "Archived" => "bg-warning text-dark", _ => "bg-light text-dark" };

                        <tr class="prod-row" data-stock="@stockStatus" data-state="@item.Status">
                            <td>
                                <img src="~/@item.ImageUrl" style="width:50px; height:50px; object-fit:contain; border-radius:8px; border:1px solid #eee;">
                            </td>
                            <td>
                                <strong style="display:block; color:var(--primary);">@item.Name</strong>
                                <small class="text-muted">SKU: @item.SKU</small>
                                @if (!string.IsNullOrEmpty(item.Brand))
                                {
                                    <small class="d-block text-info">@item.Brand</small>
                                }
                            </td>
                            <td>@(item.Merchant?.ShopName ?? "الإدارة")</td>
                            <td>
                                <div class="fw-bold">@item.Price.ToString("N0")</div>
                                <small class="text-muted">ت: @item.CostPrice.ToString("N0")</small>
                            </td>
                            <td>
                                @if (item.StockQuantity == 0)
                                {
                                    <span style="color:#dc2626; font-weight:bold;">0 (نافذ)</span>
                                }
                                else if (item.StockQuantity <= item.LowStockThreshold)
                                {

                                    <span style="color:#d97706; font-weight:bold;">@item.StockQuantity (منخفض)</span>
                                }
                                else
                                {

                                    <span style="color:#16a34a; font-weight:bold;">@item.StockQuantity</span>
                                }
                            </td>
                            <td>
                                <span class="badge @statusBadge">@item.Status</span>
                            </td>
                            <td>
                                <div style="display:flex; gap:5px;">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline small" style="padding:5px 10px;"><i class="fas fa-edit"></i></a>
                                    <button onclick="confirmDeleteProduct(@item.Id, '@item.Name')" class="btn btn-danger small" style="padding:5px 10px;"><i class="fas fa-trash"></i></button>
                                    <form id="deleteForm-@item.Id" asp-action="Delete" method="post" style="display:none;"><input type="hidden" name="id" value="@item.Id" /></form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="noProds" style="text-align:center; padding:30px; display:none; color:#666;">لا توجد نتائج.</div>
        </div>
    }
</div>

<script>
    function filterProducts() {
        const input = document.getElementById('prodSearch').value.toLowerCase();
        const stock = document.getElementById('stockFilter').value;
        const state = document.getElementById('stateFilter').value;
        const rows = document.querySelectorAll('.prod-row');
        let count = 0;

        rows.forEach(row => {
            const text = row.innerText.toLowerCase();
            const rStock = row.getAttribute('data-stock');
            const rState = row.getAttribute('data-state');

            const textMatch = text.includes(input);
            const stockMatch = stock === "" || rStock === stock;
            const stateMatch = state === "" || rState === state;

            if (textMatch && stockMatch && stateMatch) {
                row.style.display = "";
                count++;
            } else {
                row.style.display = "none";
            }
        });
        document.getElementById('prodCount').innerText = count;
        document.getElementById('noProds').style.display = count === 0 ? 'block' : 'none';
    }

    function confirmDeleteProduct(id, name) {
        Swal.fire({
            title: 'حذف المنتج؟',
            text: `سيتم حذف ${name} نهائياً!`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            confirmButtonText: 'حذف',
            cancelButtonText: 'إلغاء'
        }).then((res) => { if(res.isConfirmed) document.getElementById('deleteForm-'+id).submit(); });
    }
</script>