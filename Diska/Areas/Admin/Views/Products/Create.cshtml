@model Diska.Models.Product
@{
    ViewData["Title"] = "إضافة منتج";
    Layout = "_AdminLayout";
}

<!-- Quill CSS -->
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">


<form asp-action="Create" enctype="multipart/form-data" id="productForm">
    <div class="row justify-content-center">
        <div class="col-lg-11 col-xl-10">

            <div class="edit-card">
                <!-- 1. Sticky Header Actions -->
                <div class="card-header-actions">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 d-flex align-items-center justify-content-center" style="width:50px; height:50px;">
                            <i class="fas fa-plus fa-lg"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold text-main mb-0">إضافة منتج جديد</h4>
                            <span class="badge bg-light text-muted border mt-1">New Product</span>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-action="Index" class="btn btn-light border fw-bold text-muted px-4">إلغاء</a>
                        <button type="submit" class="btn btn-primary fw-bold px-4 shadow-sm" onclick="prepareDescription()">
                            <i class="fas fa-save me-2"></i> حفظ المنتج
                        </button>
                    </div>
                </div>

                <!-- 2. Tabs Navigation -->
                <div class="custom-tabs-container">
                    <ul class="nav nav-tabs custom-tabs" id="prodTab" role="tablist">
                        <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#basic" type="button"><i class="fas fa-info-circle"></i> البيانات الأساسية</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#pricing" type="button"><i class="fas fa-tags"></i> الأسعار والمخزون</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#media" type="button"><i class="fas fa-images"></i> الصور والمتغيرات</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#seo" type="button"><i class="fas fa-search"></i> SEO والشحن</button></li>
                    </ul>
                </div>

                <!-- 3. Tab Content -->
                <div class="tab-content" id="myTabContent">

                    <!-- Tab 1: Basic Info -->
                    <div class="tab-pane fade show active" style="min-height:1200px;" id="basic">
                        <div class="form-section">
                            <div class="row g-4">
                                <div class="col-md-8">
                                    <div class="row g-3">
                                        <div class="col-12">
                                            <label class="form-label">الاسم (عربي) <span class="text-danger">*</span></label>
                                            <input asp-for="Name" class="form-control form-control-lg-custom" required placeholder="مثال: ايفون 15 برو" />
                                            <span asp-validation-for="Name" class="text-danger small"></span>
                                        </div>
                                        <div class="col-12">
                                            <label class="form-label">الاسم (إنجليزي)</label>
                                            <input asp-for="NameEn" class="form-control form-control-lg-custom" placeholder="iPhone 15 Pro" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">القسم</label>
                                            <select asp-for="CategoryId" class="form-select form-control-lg-custom" asp-items="ViewBag.Categories">
                                                <option value="">-- اختر القسم --</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">الماركة</label>
                                            <input asp-for="Brand" class="form-control form-control-lg-custom" placeholder="Apple, Samsung..." />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="p-4 bg-light rounded-4 border">
                                        <h6 class="fw-bold mb-3 text-muted border-bottom pb-2">الإعدادات العامة</h6>
                                        <div class="mb-3">
                                            <label class="form-label">التاجر</label>
                                            <select asp-for="MerchantId" class="form-select form-control-lg-custom" asp-items="ViewBag.Merchants">
                                                <option value="">-- اختر التاجر --</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">الحالة</label>
                                            <select asp-for="Status" class="form-select form-control-lg-custom">
                                                <option value="Active" selected>🟢 نشط</option>
                                                <option value="Draft">🟡 مسودة</option>
                                                <option value="Hidden">🔴 مخفي</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 my-5">
                                    <label class="form-label">الوصف (عربي)</label>
                                    <div id="editor-ar"></div>
                                    <input type="hidden" asp-for="Description" id="DescriptionHidden" />
                                </div>
                                <div class="col-12 my-5">
                                    <label class="form-label">الوصف (إنجليزي)</label>
                                    <div id="editor-en"></div>
                                    <input type="hidden" asp-for="DescriptionEn" id="DescriptionEnHidden" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tab 2: Pricing -->
                    <div class="tab-pane fade" id="pricing">
                        <div class="form-section">
                            <h6 class="text-primary fw-bold mb-4 border-bottom pb-2">بيانات التسعير</h6>
                            <div class="row g-4 mb-5">
                                <div class="col-md-4">
                                    <label class="form-label">سعر البيع <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input asp-for="Price" type="number" step="0.01" class="form-control form-control-lg-custom fw-bold text-success" required />
                                        <span class="input-group-text bg-light border-start-0">ج.م</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">السعر قبل الخصم</label>
                                    <input asp-for="OldPrice" type="number" step="0.01" class="form-control form-control-lg-custom text-decoration-line-through text-muted" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">سعر التكلفة</label>
                                    <input asp-for="CostPrice" type="number" step="0.01" class="form-control form-control-lg-custom" />
                                </div>
                            </div>

                            <h6 class="text-primary fw-bold mb-4 border-bottom pb-2">بيانات المخزون الإجمالي</h6>
                            <div class="row g-4">
                                <div class="col-md-3">
                                    <label class="form-label">الكمية الكلية <span class="text-danger">*</span></label>
                                    <!-- 'bg-white' removed from class to let CSS override handle background -->
                                    <input asp-for="StockQuantity" type="number" class="form-control form-control-lg-custom fw-bold" required />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">حد النواقص</label>
                                    <input asp-for="LowStockThreshold" type="number" class="form-control form-control-lg-custom" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">SKU</label>
                                    <input asp-for="SKU" class="form-control form-control-lg-custom" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">الباركود</label>
                                    <input asp-for="Barcode" class="form-control form-control-lg-custom" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tab 3: Media & Variants -->
                    <div class="tab-pane fade" id="media">
                        <div class="form-section">
                            <div class="row g-5">
                                <!-- Main Image -->
                                <div class="col-md-4 border-end">
                                    <label class="form-label mb-3">الصورة الرئيسية</label>
                                    <div class="image-upload-zone" onclick="document.getElementById('mainImage').click()">
                                        <div class="upload-placeholder" id="mainPlaceholder">
                                            <i class="fas fa-cloud-upload-alt fa-3x mb-3 text-muted"></i>
                                            <span class="fw-bold text-muted">اضغط لرفع الصورة</span>
                                        </div>
                                        <img id="mainPreview" style="display:none; max-width:100%; max-height:220px; object-fit:contain;" />
                                    </div>
                                    <input type="file" id="mainImage" name="mainImage" class="d-none" accept="image/*" onchange="previewSingle(this, 'mainPreview', 'mainPlaceholder')">
                                </div>

                                <!-- Gallery & Variants -->
                                <div class="col-md-8">
                                    <!-- Gallery -->
                                    <div class="mb-5">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <label class="form-label m-0">معرض الصور الإضافية</label>
                                            <button type="button" class="btn btn-sm btn-light border text-primary fw-bold" onclick="document.getElementById('galleryImages').click()">
                                                <i class="fas fa-plus me-1"></i> إضافة
                                            </button>
                                            <input type="file" id="galleryImages" name="galleryImages" class="d-none" multiple accept="image/*" onchange="previewGallery(this)">
                                        </div>

                                        <div class="p-3 bg-light rounded border" style="min-height: 120px;">
                                            <div id="newGalleryPreview" class="gallery-grid"></div>
                                        </div>
                                    </div>

                                    <!-- Variants -->
                                    <div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <label class="form-label m-0 text-primary fw-bold">المتغيرات (الألوان)</label>
                                            <button type="button" class="btn btn-sm btn-primary fw-bold" onclick="addVariantRow()">
                                                <i class="fas fa-plus me-1"></i> إضافة لون
                                            </button>
                                        </div>

                                        <div class="table-responsive border rounded bg-white">
                                            <table class="variants-table">
                                                <thead class="bg-light">
                                                    <tr>
                                                        <th class="ps-4">اللون</th>
                                                        <th>اسم اللون</th>
                                                        <th class="text-center">حذف</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="variantsBody">
                                                    <!-- Dynamic Rows -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tab 4: SEO -->
                    <div class="tab-pane fade" id="seo">
                        <div class="form-section">
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label class="form-label">الوزن (كجم)</label>
                                    <input asp-for="Weight" type="number" step="0.01" class="form-control form-control-lg-custom" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">الرابط الدائم (Slug)</label>
                                    <input asp-for="Slug" class="form-control form-control-lg-custom bg-light" placeholder="يترك فارغاً للتوليد التلقائي" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">عنوان الميتا (Meta Title)</label>
                                    <input asp-for="MetaTitle" class="form-control form-control-lg-custom" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">وصف الميتا (Meta Description)</label>
                                    <textarea asp-for="MetaDescription" class="form-control form-control-lg-custom" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        // 1. Editors
        var toolbarOptions = [
            ['bold', 'italic', 'underline', 'strike'],
            ['blockquote', 'code-block'],
            [{ 'header': 1 }, { 'header': 2 }],
            [{ 'list': 'ordered'}, { 'list': 'bullet' }],
            [{ 'script': 'sub'}, { 'script': 'super' }],
            [{ 'indent': '-1'}, { 'indent': '+1' }],
            [{ 'direction': 'rtl' }],
            [{ 'size': ['small', false, 'large', 'huge'] }],
            [{ 'header': [1, 2, 3, 4, 5, 6, false] }],
            [{ 'color': [] }, { 'background': [] }],
            [{ 'font': [] }],
            [{ 'align': [] }],
            ['clean'],
            ['link', 'image', 'video']
        ];

        var quillAr = new Quill('#editor-ar', { theme: 'snow', modules: { toolbar: toolbarOptions }, placeholder: 'تفاصيل المنتج بالعربية...' });
        var quillEn = new Quill('#editor-en', { theme: 'snow', modules: { toolbar: toolbarOptions }, placeholder: 'Product details in English...' });

        // 2. Form Submission Handler
        function prepareDescription() {
            document.getElementById('DescriptionHidden').value = quillAr.root.innerHTML;
            document.getElementById('DescriptionEnHidden').value = quillEn.root.innerHTML;
        }

        // 3. Image Preview Logic
        function previewSingle(input, imgId, phId) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var img = document.getElementById(imgId);
                    img.src = e.target.result;
                    img.style.display = 'block';
                    var ph = document.getElementById(phId);
                    if(ph) ph.style.display = 'none';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function previewGallery(input) {
            const container = document.getElementById('newGalleryPreview');
            container.innerHTML = '';
            if (input.files) {
                Array.from(input.files).forEach(file => {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        const div = document.createElement('div');
                        div.className = 'gallery-thumb';
                        div.innerHTML = `<img src="${e.target.result}"><button type="button" class="gallery-remove btn btn-danger btn-sm p-0 rounded-circle position-absolute top-0 end-0 m-1" style="width:24px;height:24px;" onclick="this.parentElement.remove()"><i class="fas fa-times"></i></button>`;
                        container.appendChild(div);
                    }
                    reader.readAsDataURL(file);
                });
            }
        }

        // 4. Variant Manager
        function addVariantRow() {
            const tbody = document.getElementById('variantsBody');
            const tr = document.createElement('tr');
            tr.className = 'variant-row';
            tr.innerHTML = `
                <td class="ps-4">
                    <div class="color-picker-wrapper" style="background-color: #000000">
                        <input type="color" name="productColorsHex" class="color-picker-input" value="#000000" onchange="this.parentElement.style.backgroundColor=this.value">
                    </div>
                </td>
                <td>
                    <input type="text" name="productColorsName" class="form-control border-0 bg-transparent fw-bold" placeholder="اسم اللون" required>
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-sm text-danger" onclick="this.closest('tr').remove()"><i class="fas fa-trash-alt"></i></button>
                </td>
            `;
            tbody.appendChild(tr);
        }

        // Add one variant row by default
        document.addEventListener('DOMContentLoaded', function() {
             addVariantRow();
        });
    </script>
}