@model IEnumerable<Diska.Models.Product>
@{
    ViewData["Title"] = "المنتجات";
    Layout = "_AdminLayout";
}

<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
    <h2 style="margin:0;">إدارة المنتجات والمخزون</h2>
    <span class="badge" style="background:#e0f2fe; color:#0284c7; font-size:1rem;">العدد: @Model.Count()</span>
</div>

<div class="card">
    <table style="width:100%;">
        <thead>
            <tr>
                <th>صورة</th>
                <th>اسم المنتج</th>
                <th>التاجر</th>
                <th>القسم</th>
                <th>السعر</th>
                <th>المخزون</th>
                <th>الحالة</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/@item.ImageUrl" style="width:50px; height:50px; object-fit:contain; border-radius:5px; border:1px solid #eee;">
                    </td>
                    <td>
                        <strong>@item.Name</strong>
                        @if (item.IsExpired)
                        {
                            <span class="badge" style="background:red; color:white; font-size:0.7rem;">منتهي</span>
                        }
                    </td>
                    <td>@(item.Merchant?.ShopName ?? "غير معروف")</td>
                    <td>@item.Category?.Name</td>
                    <td>@item.Price.ToString("N0")</td>
                    <td>
                        @if (item.StockQuantity == 0)
                        {
                            <span style="color:red; font-weight:bold;">نفذت</span>
                        }
                        else if (item.StockQuantity < 10)
                        {
                            <span style="color:#d97706; font-weight:bold;">@item.StockQuantity (منخفض)</span>
                        }
                        else
                        {
                            <span style="color:green;">@item.StockQuantity</span>
                        }
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge" style="background:#dcfce7; color:#166534;">نشط</span>
                        }
                        else
                        {
                            <span class="badge" style="background:#fee2e2; color:#b91c1c;">مخفي</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>