@model IEnumerable<Diska.Models.Order>
@{
    ViewData["Title"] = "لوحة القيادة";
    Layout = "_AdminLayout";
    var isAr = System.Globalization.CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<div class="page-title">
    <i class="fas fa-chart-line" style="color: var(--primary);"></i>
    @(isAr ? "نظرة عامة على النظام" : "System Overview")
</div>

<!-- Key Metrics -->
<div class="stats-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 20px; margin-bottom: 30px;">
    <div class="card" style="border-right: 4px solid #10b981;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <p style="color: #6b7280; margin: 0 0 5px;">@(isAr ? "مبيعات اليوم" : "Today's Sales")</p>
                <h2 style="margin: 0; font-size: 1.8rem;">@ViewBag.DailySales.ToString("N0") <small>ج.م</small></h2>
            </div>
            <div style="background: #ecfdf5; width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #10b981;">
                <i class="fas fa-money-bill-wave fa-lg"></i>
            </div>
        </div>
    </div>

    <div class="card" style="border-right: 4px solid #f59e0b;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <p style="color: #6b7280; margin: 0 0 5px;">@(isAr ? "طلبات قيد الانتظار" : "Pending Orders")</p>
                <h2 style="margin: 0; font-size: 1.8rem;">@ViewBag.PendingOrders</h2>
            </div>
            <div style="background: #fffbeb; width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #f59e0b;">
                <i class="fas fa-clock fa-lg"></i>
            </div>
        </div>
    </div>

    <div class="card" style="border-right: 4px solid #3b82f6;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <p style="color: #6b7280; margin: 0 0 5px;">@(isAr ? "عدد التجار" : "Merchants")</p>
                <h2 style="margin: 0; font-size: 1.8rem;">@ViewBag.TotalMerchants</h2>
            </div>
            <div style="background: #eff6ff; width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #3b82f6;">
                <i class="fas fa-store fa-lg"></i>
            </div>
        </div>
    </div>

    <div class="card" style="border-right: 4px solid #ef4444;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <p style="color: #6b7280; margin: 0 0 5px;">@(isAr ? "نواقص المخزون" : "Low Stock")</p>
                <h2 style="margin: 0; font-size: 1.8rem;">@ViewBag.LowStockItems</h2>
            </div>
            <div style="background: #fef2f2; width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #ef4444;">
                <i class="fas fa-exclamation-triangle fa-lg"></i>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders -->
<div class="card">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h3 style="margin: 0;">@(isAr ? "أحدث الطلبات" : "Recent Orders")</h3>
        <a asp-action="Orders" class="btn btn-outline">@(isAr ? "عرض الكل" : "View All")</a>
    </div>

    <div class="table-responsive">
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="background: #f9fafb; color: #374151;">
                    <th style="padding: 12px;">#ID</th>
                    <th style="padding: 12px;">@(isAr ? "العميل" : "Customer")</th>
                    <th style="padding: 12px;">@(isAr ? "القيمة" : "Amount")</th>
                    <th style="padding: 12px;">@(isAr ? "الحالة" : "Status")</th>
                    <th style="padding: 12px;">@(isAr ? "إجراء سريع" : "Quick Action")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr style="border-bottom: 1px solid #eee;">
                        <td style="padding: 12px; font-family: monospace;">@order.Id</td>
                        <td style="padding: 12px;">
                            <strong>@order.CustomerName</strong><br>
                            <small class="text-muted">@order.Phone</small>
                        </td>
                        <td style="padding: 12px; font-weight: bold;">@order.TotalAmount.ToString("N0")</td>
                        <td style="padding: 12px;">
                            @if (order.Status == "Pending")
                            {
                                <span style="background:#fffbeb; color:#d97706; padding:4px 10px; border-radius:20px; font-size:0.8rem;">قيد الانتظار</span>
                            }
                            else if (order.Status == "Confirmed")
                            {
                                <span style="background:#dbeafe; color:#2563eb; padding:4px 10px; border-radius:20px; font-size:0.8rem;">مؤكد</span>
                            }
                            else if (order.Status == "Cancelled")
                            {
                                <span style="background:#fee2e2; color:#dc2626; padding:4px 10px; border-radius:20px; font-size:0.8rem;">ملغي</span>
                            }
                            else
                            {
                                <span style="background:#d1fae5; color:#059669; padding:4px 10px; border-radius:20px; font-size:0.8rem;">@order.Status</span>
                            }
                        </td>
                        <td style="padding: 12px;">
                            <form asp-action="UpdateOrderStatus" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@order.Id" />
                                @if (order.Status == "Pending")
                                {
                                    <button type="submit" name="status" value="Confirmed" class="btn primary small" title="قبول"><i class="fas fa-check"></i></button>
                                    <button type="submit" name="status" value="Cancelled" class="btn btn-delete small" title="رفض" style="background:#fee2e2; color:red; border:none;"><i class="fas fa-times"></i></button>
                                }
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>