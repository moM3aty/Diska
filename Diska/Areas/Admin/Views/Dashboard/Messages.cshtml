@model IEnumerable<Diska.Models.ContactMessage>
@{
    ViewData["Title"] = "الرسائل";
    Layout = "_AdminLayout";
}

<h2 style="margin-bottom:20px;">رسائل التواصل والدعم</h2>

<div class="card">
    <table>
        <thead>
            <tr>
                <th>التاريخ</th>
                <th>المرسل</th>
                <th>بيانات الاتصال</th>
                <th>الموضوع</th>
                <th>الرسالة</th>
                <th>حذف</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var msg in Model)
            {
                <tr>
                    <td style="white-space:nowrap; color:#666;">@msg.DateSent.ToString("yyyy/MM/dd HH:mm")</td>
                    <td>@msg.Name</td>
                    <td>
                        <div><i class="fas fa-phone"></i> @msg.Phone</div>
                        @if (!string.IsNullOrEmpty(msg.Email))
                        {
                            <div style="font-size:0.8rem;"><i class="fas fa-envelope"></i> @msg.Email</div>
                        }
                    </td>
                    <td><strong>@msg.Subject</strong></td>
                    <td style="max-width:300px; color:#333;">@msg.Message</td>
                    <td>
                        <form asp-action="DeleteMessage" method="post" onsubmit="return confirm('حذف الرسالة؟');">
                            <input type="hidden" name="id" value="@msg.Id" />
                            <button type="submit" class="btn" style="color:red; background:none;"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>