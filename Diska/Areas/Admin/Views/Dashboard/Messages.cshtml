@model IEnumerable<Diska.Models.ContactMessage>
@{
    ViewData["Title"] = "الرسائل";
    Layout = "_AdminLayout";
}

<h2 style="margin-bottom:20px;">رسائل التواصل والدعم</h2>

<div class="card">
    @if (!Model.Any())
    {
        <div style="text-align:center; padding:30px; color:#666;">لا توجد رسائل جديدة.</div>
    }
    else
    {
        <table style="width:100%;">
            <thead>
                <tr>
                    <th>التاريخ</th>
                    <th>المرسل</th>
                    <th>الموضوع</th>
                    <th>الرسالة</th>
                    <th>حذف</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model)
                {
                    <tr>
                        <td style="white-space:nowrap; color:#666; font-size:0.9rem;">@msg.DateSent.ToString("yyyy/MM/dd")<br>@msg.DateSent.ToString("hh:mm tt")</td>
                        <td>
                            <strong>@msg.Name</strong>
                            <div style="font-size:0.8rem; color:#666;">@msg.Phone</div>
                            <div style="font-size:0.8rem; color:#666;">@msg.Email</div>
                        </td>
                        <td>@msg.Subject</td>
                        <td style="max-width:300px; line-height:1.5;">@msg.Message</td>
                        <td>
                            <form asp-action="DeleteMessage" method="post" onsubmit="return confirm('حذف الرسالة؟');">
                                <input type="hidden" name="id" value="@msg.Id" />
                                <button type="submit" class="btn" style="color:red; background:none;"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>