@model Diska.Models.Order
@using System.Globalization
@{
    ViewData["Title"] = "تفاصيل الطلب #" + Model.Id;
    Layout = "_AdminLayout";
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<!-- Header Actions -->
<div class="d-flex justify-content-between align-items-center mb-4 fade-up">
    <div class="d-flex align-items-center gap-3">
        <a href="/Admin/Orders" class="btn btn-icon btn-outline-secondary rounded-circle">
            <i class="fas @(isAr ? "fa-arrow-right" : "fa-arrow-left")"></i>
        </a>
        <div>
            <h2 class="text-main fw-bold mb-0">
                @(isAr ? "طلب رقم" : "Order") #@Model.Id
                @{
                    var statusBadge = Model.Status switch
                    {
                        "Pending" => "badge-order pending",
                        "Confirmed" => "badge-order confirmed",
                        "Shipped" => "badge-order shipped",
                        "Delivered" => "badge-order delivered",
                        "Cancelled" => "badge-order cancelled",
                        _ => "badge bg-secondary"
                    };
                }
                <span class="@statusBadge ms-2" style="font-size: 0.5em; vertical-align: middle;">@Model.Status</span>
            </h2>
            <div class="text-muted small">
                <i class="far fa-calendar-alt me-1"></i> @Model.OrderDate.ToString("dd MMMM yyyy, hh:mm tt")
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="fas fa-edit me-1"></i> @(isAr ? "تغيير الحالة" : "Change Status")
            </button>
            <ul class="dropdown-menu shadow border-0">
                <li><a class="dropdown-item" href="#">Confirm Order</a></li>
                <li><a class="dropdown-item" href="#">Ship Order</a></li>
                <li><a class="dropdown-item" href="#">Mark Delivered</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" href="#">Cancel Order</a></li>
            </ul>
        </div>
        <button class="btn btn-primary shadow-sm" onclick="window.print()">
            <i class="fas fa-print me-2"></i> @(isAr ? "طباعة الفاتورة" : "Print Invoice")
        </button>
    </div>
</div>

<div class="row g-4 fade-up" style="animation-delay: 0.1s;">

    <!-- Left Column: Items & Timeline -->
    <div class="col-lg-8">

        <!-- Order Items -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0 fw-bold"><i class="fas fa-box me-2 text-primary"></i> @(isAr ? "المنتجات" : "Order Items")</h5>
                <span class="badge bg-light text-dark border">@Model.OrderItems.Count @(isAr ? "عنصر" : "Items")</span>
            </div>
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">@(isAr ? "المنتج" : "Product")</th>
                            <th class="text-center">@(isAr ? "الكمية" : "Quantity")</th>
                            <th class="text-end">@(isAr ? "السعر" : "Unit Price")</th>
                            <th class="text-end pe-4">@(isAr ? "الإجمالي" : "Total")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="product-image-thumb bg-white">
                                            <img src="~/@item.Product?.ImageUrl" alt="" style="width:100%; height:100%; object-fit:contain;">
                                        </div>
                                        <div>
                                            <h6 class="mb-0 text-main fw-bold">@(isAr? item.Product?.Name : item.Product?.NameEn)</h6>
                                            <small class="text-muted">SKU: @item.Product?.SKU</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center fw-bold">@item.Quantity</td>
                                <td class="text-end">@item.UnitPrice.ToString("N0")</td>
                                <td class="text-end pe-4 fw-bold">@((item.Quantity * item.UnitPrice).ToString("N0"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-light border-top">
                        <tr>
                            <td colspan="3" class="text-end fw-bold pt-3">@(isAr ? "المجموع الفرعي" : "Subtotal")</td>
                            <td class="text-end pe-4 pt-3 fw-bold">@((Model.TotalAmount - Model.ShippingCost).ToString("N0"))</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-end fw-bold border-0">@(isAr ? "الشحن" : "Shipping")</td>
                            <td class="text-end pe-4 border-0">@Model.ShippingCost.ToString("N0")</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-end fw-bold text-primary fs-5 border-0 pb-3">@(isAr ? "الإجمالي الكلي" : "Grand Total")</td>
                            <td class="text-end pe-4 fw-bold text-primary fs-5 border-0 pb-3">@Model.TotalAmount.ToString("N0") @(isAr ? "ج.م" : "EGP")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <!-- Order Timeline -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0 fw-bold"><i class="fas fa-history me-2 text-info"></i> @(isAr ? "تتبع الحالة" : "Order Activity")</h5>
            </div>
            <div class="card-body">
                <div class="order-timeline">
                    <!-- Timeline Items (Dynamic based on status) -->
                    <div class="timeline-item">
                        <div class="fw-bold">@(isAr ? "تم إنشاء الطلب" : "Order Placed")</div>
                        <small class="text-muted">@Model.OrderDate.ToString("dd MMM yyyy, hh:mm tt")</small>
                    </div>

                    @if (Model.Status != "Pending")
                    {
                        <div class="timeline-item">
                            <div class="fw-bold">@(isAr ? "تم تأكيد الطلب" : "Order Confirmed")</div>
                            <small class="text-muted">@(isAr ? "بواسطة الأدمن" : "By Admin")</small>
                        </div>
                    }

                    @if (Model.Status == "Shipped" || Model.Status == "Delivered")
                    {
                        <div class="timeline-item">
                            <div class="fw-bold text-primary">@(isAr ? "تم الشحن" : "Order Shipped")</div>
                            <small class="text-muted">@(isAr ? "جاري التوصيل..." : "Out for delivery...")</small>
                        </div>
                    }

                    @if (Model.Status == "Delivered")
                    {
                        <div class="timeline-item">
                            <div class="fw-bold text-success">@(isAr ? "تم التسليم" : "Delivered")</div>
                            <small class="text-success"><i class="fas fa-check-circle"></i> @(isAr ? "اكتملت العملية" : "Completed")</small>
                        </div>
                    }

                    @if (Model.Status == "Cancelled")
                    {
                        <div class="timeline-item">
                            <div class="fw-bold text-danger">@(isAr ? "تم الإلغاء" : "Cancelled")</div>
                            <small class="text-muted">@(isAr ? "توقف الطلب" : "Order stopped")</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column: Customer & Info -->
    <div class="col-lg-4">

        <!-- Customer Info Card -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0 fw-bold"><i class="fas fa-user me-2 text-warning"></i> @(isAr ? "العميل" : "Customer")</h5>
            </div>
            <div class="card-body text-center">
                <div class="avatar-circle mx-auto mb-3" style="width: 70px; height: 70px; font-size: 1.5rem;">
                    @(Model.CustomerName?.FirstOrDefault())
                </div>
                <h5 class="fw-bold text-main mb-1">@Model.CustomerName</h5>
                <p class="text-muted mb-3">@Model.User?.Email</p>

                <div class="d-flex justify-content-center gap-2">
                    <a href="tel:@Model.Phone" class="btn btn-sm btn-outline-primary rounded-pill">
                        <i class="fas fa-phone me-1"></i> @Model.Phone
                    </a>
                    <a href="/Admin/Users/Details/@Model.UserId" class="btn btn-sm btn-light rounded-pill">
                        <i class="fas fa-user me-1"></i> @(isAr ? "البروفايل" : "Profile")
                    </a>
                </div>
            </div>
            <div class="card-footer bg-light border-top">
                <div class="row text-center">
                    <div class="col-6 border-end">
                        <small class="text-muted d-block">@(isAr ? "طلبات سابقة" : "Total Orders")</small>
                        <span class="fw-bold">12</span>
                    </div>
                    <div class="col-6">
                        <small class="text-muted d-block">@(isAr ? "إجمالي الإنفاق" : "Total Spent")</small>
                        <span class="fw-bold text-success">54k</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Shipping Info -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0 fw-bold"><i class="fas fa-truck me-2 text-secondary"></i> @(isAr ? "الشحن" : "Shipping")</h5>
            </div>
            <div class="card-body">
                <div class="d-flex mb-3">
                    <i class="fas fa-map-marker-alt mt-1 me-3 text-danger"></i>
                    <div>
                        <strong class="d-block text-main">@(isAr ? "العنوان" : "Address")</strong>
                        <p class="text-muted mb-0 small">@Model.Address</p>
                        <p class="text-muted mb-0 small">@Model.City, @Model.Governorate</p>
                    </div>
                </div>

                <div class="d-flex">
                    <i class="fas fa-clock mt-1 me-3 text-info"></i>
                    <div>
                        <strong class="d-block text-main">@(isAr ? "وقت التوصيل" : "Slot")</strong>
                        <p class="text-muted mb-0 small">@Model.DeliverySlot</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notes -->
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="card border-0 shadow-sm bg-warning-subtle border-warning">
                <div class="card-body">
                    <h6 class="fw-bold text-warning-emphasis mb-2"><i class="fas fa-sticky-note me-2"></i> @(isAr ? "ملاحظات العميل" : "Customer Notes")</h6>
                    <p class="mb-0 text-dark small">@Model.Notes</p>
                </div>
            </div>
        }

    </div>
</div>