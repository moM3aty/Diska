@model IEnumerable<Diska.Models.Category>
@{
    ViewData["Title"] = "التصنيفات";
    Layout = "_AdminLayout";
}

<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
    <h2 style="margin:0;">أقسام المتجر</h2>

    <!-- Quick Add Form -->
    <form asp-action="CreateCategory" method="post" style="display:flex; gap:10px; background:#fff; padding:10px; border-radius:8px; box-shadow:0 2px 5px rgba(0,0,0,0.05);">
        <input type="text" name="Name" placeholder="اسم القسم بالعربي" required style="padding:8px; border:1px solid #ddd; border-radius:5px;">
        <input type="text" name="NameEn" placeholder="Name in English" style="padding:8px; border:1px solid #ddd; border-radius:5px;">
        <input type="text" name="IconClass" placeholder="fa-icon (ex: fas fa-box)" style="padding:8px; border:1px solid #ddd; border-radius:5px;">
        <button type="submit" class="btn btn-primary" style="padding:8px 15px;">إضافة</button>
    </form>
</div>

<div class="card">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>الأيقونة</th>
                <th>الاسم (عربي)</th>
                <th>الاسم (إنجليزي)</th>
                <th>عدد المنتجات</th>
                <th>إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><i class="@item.IconClass fa-lg" style="color:#555;"></i></td>
                    <td>@item.Name</td>
                    <td>@item.NameEn</td>
                    <td>@(item.Products?.Count ?? 0)</td>
                    <td>
                        <form asp-action="DeleteCategory" method="post" onsubmit="return confirm('حذف هذا القسم؟ قد يؤثر على المنتجات المرتبطة.');">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn" style="color:red; background:none; padding:0;"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>