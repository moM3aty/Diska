@model IEnumerable<Diska.Models.Category>
@{
    ViewData["Title"] = "التصنيفات";
    Layout = "_AdminLayout";
}

<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
    <h2 style="margin:0;">أقسام المتجر</h2>
</div>

<div style="display:grid; grid-template-columns: 2fr 1fr; gap:20px;">
    <!-- القائمة -->
    <div class="card">
        <table style="width:100%;">
            <thead>
                <tr>
                    <th>الأيقونة</th>
                    <th>الاسم (عربي)</th>
                    <th>الاسم (إنجليزي)</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="@item.IconClass fa-lg" style="color:#555;"></i></td>
                        <td>@item.Name</td>
                        <td>@item.NameEn</td>
                        <td>
                            <form asp-action="DeleteCategory" method="post" onsubmit="return confirm('حذف هذا القسم؟');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn" style="color:red; background:none; padding:0;"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- إضافة جديد -->
    <div class="card" style="height:fit-content;">
        <h4 style="margin-top:0; color:var(--primary);">إضافة قسم جديد</h4>
        <form asp-action="CreateCategory" method="post">
            <div style="margin-bottom:10px;">
                <label style="display:block; margin-bottom:5px; font-size:0.9rem;">الاسم بالعربي</label>
                <input type="text" name="Name" required style="width:100%; padding:8px; border:1px solid #ddd; border-radius:5px;">
            </div>
            <div style="margin-bottom:10px;">
                <label style="display:block; margin-bottom:5px; font-size:0.9rem;">الاسم بالإنجليزي</label>
                <input type="text" name="NameEn" style="width:100%; padding:8px; border:1px solid #ddd; border-radius:5px;">
            </div>
            <div style="margin-bottom:15px;">
                <label style="display:block; margin-bottom:5px; font-size:0.9rem;">الأيقونة (FontAwesome)</label>
                <input type="text" name="IconClass" placeholder="fas fa-box" style="width:100%; padding:8px; border:1px solid #ddd; border-radius:5px;">
            </div>
            <button type="submit" class="btn btn-primary" style="width:100%;">إضافة</button>
        </form>
    </div>
</div>