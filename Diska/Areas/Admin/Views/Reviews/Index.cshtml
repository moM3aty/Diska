@model IEnumerable<Diska.Models.ProductReview>
@{
    ViewData["Title"] = "إدارة التقييمات";
    Layout = "_AdminLayout";
}

<h2 style="margin-bottom:20px;">مراجعة تقييمات العملاء</h2>

<div class="card">
    @if (!Model.Any())
    {
        <div style="text-align:center; padding:30px; color:#666;">لا توجد تقييمات حتى الآن.</div>
    }
    else
    {
        <table style="width:100%;">
            <thead>
                <tr>
                    <th>المنتج</th>
                    <th>العميل</th>
                    <th>التقييم</th>
                    <th>التعليق</th>
                    <th>التاريخ</th>
                    <th>حذف</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.Product?.Name ?? "منتج محذوف")</td>
                        <td>@(item.User?.FullName ?? "مستخدم")</td>
                        <td style="color:#f59e0b;">
                            @for (int i = 0; i < item.Rating; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                        </td>
                        <td style="max-width:300px;">@item.Comment</td>
                        <td style="font-size:0.85rem; color:#666;">@item.CreatedAt.ToString("yyyy/MM/dd")</td>
                        <td>
                            <form asp-action="Delete" method="post" onsubmit="return confirm('حذف هذا التقييم؟');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn" style="color:red; background:none;"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>