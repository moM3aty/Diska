@model IEnumerable<Diska.Models.RestockSubscription>
@{
    ViewData["Title"] = "طلبات التوفر";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-0">إدارة المخزون والتنبيهات</h2>
        <p class="text-muted small">متابعة نواقص المخزون وطلبات العملاء</p>
    </div>
</div>

<!-- Tabs -->
<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link active fw-bold" href="#">طلبات العملاء (Waitlist)</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-muted" asp-action="LowStock">نواقص المخزون (Low Stock)</a>
    </li>
</ul>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 text-primary">قائمة انتظار العملاء</h5>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="fas fa-user-clock fa-3x mb-3 opacity-50"></i>
                <p>لا يوجد عملاء في قائمة الانتظار حالياً.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">المنتج</th>
                            <th>التاجر</th>
                            <th>حالة المخزون</th>
                            <th>العميل</th>
                            <th>تاريخ الطلب</th>
                            <th>الحالة</th>
                            <th class="text-end pe-4">الإجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            bool isAvailable = item.Product.StockQuantity > 0;
                            <tr class="@(isAvailable ? "table-success bg-opacity-10" : "")">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="~/@item.Product?.ImageUrl" class="rounded me-2 border" style="width:40px; height:40px; object-fit:cover;">
                                        <span class="fw-bold">@item.Product?.Name</span>
                                    </div>
                                </td>
                                <td>@item.Product?.Merchant?.ShopName</td>
                                <td>
                                    @if (isAvailable)
                                    {
                                        <span class="badge bg-success">متوفر (@item.Product.StockQuantity)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">نافذ</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.UserId))
                                    {
                                        <span class="badge bg-light text-dark border"><i class="fas fa-user"></i> مسجل</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">@item.Email</span>
                                    }
                                </td>
                                <td class="text-muted small">@item.RequestDate.ToString("yyyy/MM/dd")</td>
                                <td>
                                    @if (item.IsNotified)
                                    {
                                        <span class="badge bg-info text-dark">تم الإشعار</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">في الانتظار</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    @if (!item.IsNotified && isAvailable)
                                    {
                                        <form asp-action="MarkAsNotified" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-primary">
                                                <i class="fas fa-bell me-1"></i> إشعار
                                            </button>
                                        </form>
                                    }
                                    else if (!isAvailable)
                                    {
                                        <button disabled class="btn btn-sm btn-outline-secondary">انتظار التوفر</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>