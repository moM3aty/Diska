@{
    ViewData["Title"] = "التقارير والتحليلات";
    Layout = "_AdminLayout";
}

<div class="page-title mb-4">
    <h2 style="color:var(--primary);"><i class="fas fa-chart-line"></i> مركز التقارير</h2>
    <p class="text-muted">نظرة شاملة على أداء المتجر والمخزون</p>
</div>

<div class="row g-4 mb-4">
    <!-- Sales Summary Card -->
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
                <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle mx-auto mb-3" style="width:60px; height:60px; display:flex; align-items:center; justify-content:center;">
                    <i class="fas fa-coins fa-2x"></i>
                </div>
                <h3>@(((decimal)ViewBag.TotalSales).ToString("N0")) <small class="fs-6">ج.م</small></h3>
                <p class="text-muted">إجمالي المبيعات</p>
                <a asp-action="Sales" class="btn btn-outline-success w-100 mt-2">عرض تقرير المبيعات</a>
            </div>
        </div>
    </div>

    <!-- Inventory Summary Card -->
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
                <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-circle mx-auto mb-3" style="width:60px; height:60px; display:flex; align-items:center; justify-content:center;">
                    <i class="fas fa-boxes fa-2x"></i>
                </div>
                <h3>@ViewBag.LowStockProducts <small class="fs-6 text-danger">نواقص</small></h3>
                <p class="text-muted">حالة المخزون (إجمالي @ViewBag.TotalProducts منتج)</p>
                <a asp-action="Inventory" class="btn btn-outline-warning w-100 mt-2">عرض تقرير المخزون</a>
            </div>
        </div>
    </div>

    <!-- Activity Summary Card -->
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
                <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-circle mx-auto mb-3" style="width:60px; height:60px; display:flex; align-items:center; justify-content:center;">
                    <i class="fas fa-history fa-2x"></i>
                </div>
                <h3>@ViewBag.TotalOrders <small class="fs-6">عملية</small></h3>
                <p class="text-muted">نشاط المتجر والطلبات</p>
                <a asp-action="Activity" class="btn btn-outline-primary w-100 mt-2">سجل النشاط</a>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <h5 class="card-title text-primary mb-3">إجراءات سريعة</h5>
        <div class="d-flex gap-2 flex-wrap">
            <form asp-action="ExportInventory" method="post">
                <button class="btn btn-light border"><i class="fas fa-file-csv text-success"></i> تحميل جرد المخزون</button>
            </form>
            <form asp-action="ExportSales" method="post">
                <button class="btn btn-light border"><i class="fas fa-file-excel text-success"></i> تحميل تقرير المبيعات الشامل</button>
            </form>
        </div>
    </div>
</div>