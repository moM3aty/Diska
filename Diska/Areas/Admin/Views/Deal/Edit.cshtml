@model Diska.Models.GroupDeal
@{
    ViewData["Title"] = "تعديل صفقة";
    Layout = "_AdminLayout";
    string applyTo = Model.CategoryId.HasValue ? "Category" : "Product";
}

<!-- Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<style>
    /* =========================================
           ULTIMATE PREMIUM STYLES (Enforced)
           ========================================= */

    :root {
        --card-radius: 20px;
        --input-radius: 12px;
        --input-height: 56px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        --primary-glow: 0 0 20px rgba(79, 70, 229, 0.3);
    }

    /* --- Main Card --- */
    .edit-card {
        border: 0;
        border-radius: var(--card-radius);
        position: relative;
        overflow: hidden;
        transition: var(--transition);
    }

    [data-bs-theme="light"] .edit-card {
        background: #ffffff;
        box-shadow: 0 20px 60px -10px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0,0,0,0.05);
    }

    [data-bs-theme="dark"] .edit-card {
        background: #1e293b;
        box-shadow: 0 20px 60px -10px rgba(0, 0, 0, 0.5);
        border: 1px solid rgba(255,255,255,0.08);
    }

    /* --- Modern Header --- */
    .card-header-actions {
        padding: 25px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 75px;
        z-index: 999;
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-bottom: 1px solid;
    }

    [data-bs-theme="light"] .card-header-actions {
        background: rgba(255, 255, 255, 0.9);
        border-color: #f1f5f9;
    }

    [data-bs-theme="dark"] .card-header-actions {
        background: rgba(30, 41, 59, 0.9);
        border-color: rgba(255, 255, 255, 0.05);
    }

    /* --- Scope Cards (The Big Buttons) --- */
    .scope-btn {
        position: relative;
        width: 100%;
        padding: 30px 20px;
        border-radius: 16px;
        font-weight: 700;
        border: 2px solid transparent;
        transition: var(--transition);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        cursor: pointer;
        text-align: center;
    }

    /* Light Scope */
    [data-bs-theme="light"] .scope-btn {
        background: #f8fafc;
        border-color: #e2e8f0;
        color: #64748b;
    }

        [data-bs-theme="light"] .scope-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
            background: #fff;
            border-color: var(--color-primary);
            color: var(--color-primary);
        }

        [data-bs-theme="light"] .scope-btn.active {
            background: #fff;
            border-color: var(--color-primary);
            color: var(--color-primary);
            box-shadow: 0 15px 35px rgba(79, 70, 229, 0.15);
        }

    /* Dark Scope */
    [data-bs-theme="dark"] .scope-btn {
        background: rgba(255,255,255,0.03);
        border-color: rgba(255,255,255,0.08);
        color: #94a3b8;
    }

        [data-bs-theme="dark"] .scope-btn:hover {
            background: rgba(255,255,255,0.06);
            border-color: rgba(255,255,255,0.2);
            color: #fff;
            transform: translateY(-5px);
        }

        [data-bs-theme="dark"] .scope-btn.active {
            background: rgba(99, 102, 241, 0.15);
            border-color: var(--color-primary);
            color: #fff;
            box-shadow: 0 0 0 1px var(--color-primary), 0 15px 40px rgba(0,0,0,0.4);
        }

    .scope-btn i {
        font-size: 2.5rem;
        transition: transform 0.3s;
    }

    .scope-btn.active i {
        transform: scale(1.1);
    }

    .scope-btn span {
        font-size: 1.1rem;
        letter-spacing: 0.5px;
    }

    /* Indicator Circle */
    .scope-indicator {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        border: 2px solid;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 15px;
        right: 15px;
        opacity: 0;
        transition: var(--transition);
    }

    .scope-btn.active .scope-indicator {
        opacity: 1;
        background: var(--color-primary);
        border-color: var(--color-primary);
    }

        .scope-btn.active .scope-indicator::after {
            content: '✓';
            color: #fff;
            font-size: 0.8rem;
            font-weight: bold;
        }

    /* --- Form Controls --- */
    .form-label {
        font-weight: 700;
        font-size: 0.95rem;
        margin-bottom: 10px;
        display: block;
        letter-spacing: 0.3px;
    }

    [data-bs-theme="light"] .form-label {
        color: #334155;
    }

    [data-bs-theme="dark"] .form-label {
        color: #e2e8f0;
    }

    .form-control, .form-select, .select2-container .select2-selection--single {
        height: var(--input-height) !important;
        border-radius: var(--input-radius) !important;
        font-size: 1rem;
        font-weight: 500;
        transition: var(--transition);
        padding-left: 15px;
        padding-right: 15px;
        box-shadow: none;
    }

    /* Light Inputs */
    [data-bs-theme="light"] .form-control,
    [data-bs-theme="light"] .form-select,
    [data-bs-theme="light"] .select2-container .select2-selection--single {
        background-color: #f8fafc;
        border: 1px solid #e2e8f0;
        color: #0f172a;
    }

        [data-bs-theme="light"] .form-control:focus,
        [data-bs-theme="light"] .form-select:focus,
        [data-bs-theme="light"] .select2-container--open .select2-selection--single {
            background-color: #fff;
            border-color: var(--color-primary);
            box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
        }

    /* Dark Inputs */
    [data-bs-theme="dark"] .form-control,
    [data-bs-theme="dark"] .form-select,
    [data-bs-theme="dark"] .select2-container .select2-selection--single {
        background-color: #0f172a !important;
        border: 1px solid rgba(255,255,255,0.1) !important;
        color: #f8fafc !important;
    }

        [data-bs-theme="dark"] .form-control:focus,
        [data-bs-theme="dark"] .form-select:focus,
        [data-bs-theme="dark"] .select2-container--open .select2-selection--single {
            border-color: var(--color-primary) !important;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.25) !important;
            background-color: #0f172a !important;
        }

    /* --- Select2 Overrides --- */
    .select2-container {
        width: 100% !important;
    }

        .select2-container .select2-selection--single {
            display: flex;
            align-items: center;
        }

    .select2-container--default .select2-selection--single .select2-selection__rendered {
        color: inherit;
        font-weight: 600;
        width: 100%;
        line-height: var(--input-height);
        padding: 0 15px;
    }

    .select2-container--default .select2-selection--single .select2-selection__arrow {
        height: var(--input-height);
        right: 10px;
    }

    /* Dropdown */
    .select2-dropdown {
        border-radius: var(--input-radius);
        border: 1px solid;
        overflow: hidden;
        z-index: 9999;
        padding: 8px;
    }

    [data-bs-theme="light"] .select2-dropdown {
        background: #fff;
        border-color: #e2e8f0;
        box-shadow: 0 15px 40px rgba(0,0,0,0.12);
    }

    [data-bs-theme="dark"] .select2-dropdown {
        background: #1e293b;
        border-color: rgba(255,255,255,0.1);
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    }

    .select2-results__option {
        padding: 12px 15px;
        border-radius: 8px;
        font-size: 0.95rem;
        margin-bottom: 4px;
        transition: 0.1s;
    }

    [data-bs-theme="dark"] .select2-results__option {
        color: #cbd5e1;
    }

    [data-bs-theme="dark"] .select2-results__option--highlighted[aria-selected] {
        background-color: var(--color-primary);
        color: #fff;
    }

    [data-bs-theme="dark"] .select2-search__field {
        background-color: #0f172a;
        color: #fff;
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 8px;
        padding: 10px;
    }

    /* --- Dynamic Section Card --- */
    .dynamic-section {
        padding: 30px;
        border-radius: 16px;
        border: 1px dashed;
        transition: var(--transition);
        margin-bottom: 40px;
    }

    [data-bs-theme="light"] .dynamic-section {
        background-color: #f8fafc;
        border-color: #cbd5e1;
    }

    [data-bs-theme="dark"] .dynamic-section {
        background-color: rgba(255,255,255,0.02);
        border-color: rgba(255,255,255,0.1);
    }

    /* --- Premium Switch --- */
    .form-switch .form-check-input {
        width: 3.5em;
        height: 1.8em;
        cursor: pointer;
        background-color: rgba(0,0,0,0.1);
        border: none;
        transition: background-position .15s ease-in-out, background-color 0.2s;
    }

    [data-bs-theme="dark"] .form-switch .form-check-input {
        background-color: rgba(255,255,255,0.1);
    }

    .form-switch .form-check-input:checked {
        background-color: var(--color-primary);
    }

    .switch-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 25px;
        border-radius: 16px;
        border: 1px solid;
        cursor: pointer;
        transition: var(--transition);
    }

    /* Updated Premium Light Mode for Switch */
    [data-bs-theme="light"] .switch-card {
        background: #ffffff;
        border-color: #e2e8f0;
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
    }

        [data-bs-theme="light"] .switch-card:hover {
            border-color: var(--color-primary);
            box-shadow: 0 8px 25px rgba(79, 70, 229, 0.12);
            transform: translateY(-2px);
        }

    [data-bs-theme="dark"] .switch-card {
        background: rgba(255,255,255,0.03);
        border-color: rgba(255,255,255,0.08);
    }

        [data-bs-theme="dark"] .switch-card:hover {
            background: rgba(255,255,255,0.05);
            border-color: rgba(255,255,255,0.15);
        }

    [data-bs-theme="dark"] .switch-text {
        color: #f8fafc;
        font-weight: 700;
        font-size: 1.05rem;
    }

    [data-bs-theme="light"] .switch-text {
        color: #0f172a;
        font-weight: 700;
        font-size: 1.05rem;
    }

    .switch-desc {
        font-size: 0.85rem;
        color: var(--color-text-muted);
        display: block;
        margin-top: 4px;
    }

    /* --- Footer & Buttons --- */
    .form-footer {
        border-top: 1px solid;
        padding-top: 30px;
        margin-top: 40px;
        text-align: end;
    }

    [data-bs-theme="light"] .form-footer {
        border-color: #f1f5f9;
    }

    [data-bs-theme="dark"] .form-footer {
        border-color: rgba(255,255,255,0.05);
    }

    .btn-save {
        min-width: 220px;
        height: 56px;
        font-size: 1.1rem;
        border-radius: 50px;
        background: linear-gradient(135deg, var(--color-primary), #4338ca);
        border: none;
        box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-save:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(79, 70, 229, 0.4);
            background: linear-gradient(135deg, #4338ca, #3730a3);
        }

    .btn-cancel {
        min-width: 120px;
        height: 48px;
        border-radius: 12px;
        border: 1px solid;
        background: transparent;
        font-weight: 700;
        transition: var(--transition);
    }

    [data-bs-theme="light"] .btn-cancel {
        border-color: #e2e8f0;
        color: #64748b;
    }

        [data-bs-theme="light"] .btn-cancel:hover {
            background: #f8fafc;
            color: #334155;
        }

    [data-bs-theme="dark"] .btn-cancel {
        border-color: rgba(255,255,255,0.1);
        color: #94a3b8;
    }

        [data-bs-theme="dark"] .btn-cancel:hover {
            background: rgba(255,255,255,0.05);
            color: #f8fafc;
        }

    /* Animation */
    .fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }
    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="row justify-content-center fade-up">
    <div class="col-lg-8">
        <div class="edit-card card">

            <!-- Header -->
            <div class="card-header-actions">
                <div class="d-flex align-items-center gap-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 d-flex align-items-center justify-content-center" style="width:60px; height:60px;">
                        <i class="fas fa-edit fa-xl"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-1" style="color: var(--color-text-main);">تعديل العرض: @Model.Title</h4>
                        <span class="badge bg-opacity-10 border" style="background-color: rgba(var(--color-primary-rgb), 0.1); color: var(--color-primary); padding: 5px 12px; font-size: 0.75rem;">Edit Campaign</span>
                    </div>
                </div>
                <a asp-action="Index" class="btn btn-cancel d-flex align-items-center justify-content-center">إلغاء</a>
            </div>

            <div class="card-body p-4 p-md-5">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 rounded-3 border-0 shadow-sm"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ReservedQuantity" />

                    <!-- Scope Selection -->
                    <div class="mb-5">
                        <label class="form-label mb-3 ps-1">ينطبق على (Scope):</label>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="scope-btn @(applyTo == "Product" ? "active" : "")" id="btnProduct" onclick="setScope('Product')">
                                    <div class="scope-indicator"></div>
                                    <i class="fas fa-box-open"></i>
                                    <span>منتج محدد</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="scope-btn @(applyTo == "Category" ? "active" : "")" id="btnCategory" onclick="setScope('Category')">
                                    <div class="scope-indicator"></div>
                                    <i class="fas fa-layer-group"></i>
                                    <span>قسم كامل</span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" name="ApplyTo" id="ApplyToInput" value="@applyTo">
                    </div>

                    <!-- Dynamic Selection -->
                    <div class="dynamic-section">
                        <!-- Product Select -->
                        <div id="divProduct" style="@(applyTo == "Product" ? "" : "display:none;")">
                            <label class="form-label">اختر المنتج <span class="text-danger">*</span></label>
                            <select asp-for="ProductId" class="form-control select2-search" asp-items="ViewBag.ProductId">
                                <option value="">-- ابحث عن المنتج... --</option>
                            </select>
                        </div>

                        <!-- Category Select -->
                        <div id="divCategory" style="@(applyTo == "Category" ? "" : "display:none;")">
                            <label class="form-label">اختر القسم <span class="text-danger">*</span></label>
                            <select asp-for="CategoryId" class="form-control select2-search" asp-items="ViewBag.CategoryId">
                                <option value="">-- ابحث عن القسم... --</option>
                            </select>
                        </div>
                    </div>

                    <!-- Deal Info -->
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Title" class="form-label">عنوان العرض (عربي)</label>
                            <input asp-for="Title" class="form-control" placeholder="مثال: خصم خاص على الايفون" required />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TitleEn" class="form-label">عنوان العرض (انجليزي)</label>
                            <input asp-for="TitleEn" class="form-control" placeholder="Example: Special iPhone Deal" required />
                        </div>
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <label class="form-label">نوع الخصم</label>
                            <select asp-for="IsPercentage" class="form-select" onchange="toggleDiscountLabel()">
                                <option value="true">نسبة مئوية (%)</option>
                                <option value="false">مبلغ ثابت (ج.م)</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" id="lblDiscount">@(Model.IsPercentage ? "قيمة الخصم (%)" : "قيمة الخصم (ج.م)")</label>
                            <div class="input-group">
                                <input asp-for="DiscountValue" type="number" step="0.01" class="form-control fw-bold text-success" required />
                                <span class="input-group-text bg-transparent border-start-0 text-muted" style="border-radius: 0 12px 12px 0;"><i class="fas fa-tag"></i></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="DealPrice" />
                    </div>

                    <!-- Conditions -->
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <label asp-for="TargetQuantity" class="form-label">الهدف (Target)</label>
                            <input asp-for="TargetQuantity" type="number" class="form-control" value="10" />
                            <small class="text-muted mt-2 d-block ps-1"><i class="fas fa-info-circle me-1"></i> الكمية المطلوبة لتفعيل الصفقة</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="UsageLimit" class="form-label">حد الاستخدام</label>
                            <input asp-for="UsageLimit" type="number" class="form-control" placeholder="اختياري (الكل)" />
                        </div>
                    </div>

                    <!-- Timing -->
                    <div class="row g-4 mb-5">
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label">تاريخ البدء</label>
                            <input asp-for="StartDate" class="form-control" type="datetime-local" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label">تاريخ الانتهاء</label>
                            <input asp-for="EndDate" class="form-control" type="datetime-local" />
                        </div>
                    </div>

                    <!-- Premium Switch -->
                    <div class="switch-card" onclick="document.getElementById('IsActive').click()">
                        <div class="form-switch-content">
                            <div class="switch-text">تفعيل العرض</div>
                            <span class="switch-desc">حالة العرض الحالية.</span>
                        </div>
                        <div class="form-check form-switch m-0">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive" id="IsActive">
                        </div>
                    </div>

                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary btn-save">
                            <i class="fas fa-save"></i> حفظ التعديلات
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add jQuery before Select2 -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            // تفعيل Select2 للقوائم
            $('.select2-search').select2({
                dir: "rtl", // لدعم العربية
                placeholder: "اختر...",
                allowClear: true,
                width: '100%' // Ensure full width
            });
        });

        function setScope(scope) {
            document.getElementById('ApplyToInput').value = scope;

            // Toggle visual active state
            const btnProduct = document.getElementById('btnProduct');
            const btnCategory = document.getElementById('btnCategory');

            if(scope === 'Product') {
                btnProduct.classList.add('active');
                btnCategory.classList.remove('active');
                $('#divProduct').fadeIn(300);
                $('#divCategory').hide();
            } else {
                btnCategory.classList.add('active');
                btnProduct.classList.remove('active');
                $('#divCategory').fadeIn(300);
                $('#divProduct').hide();
            }
        }

        function toggleDiscountLabel() {
            const isPercent = document.querySelector('select[name="IsPercentage"]').value === 'true';
            document.getElementById('lblDiscount').innerText = isPercent ? 'قيمة الخصم (%)' : 'قيمة الخصم (ج.م)';
        }
    </script>
}