@model Diska.Areas.Admin.Controllers.SystemSettingsViewModel
@{
    ViewData["Title"] = "إعدادات النظام";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary fw-bold"><i class="fas fa-cogs"></i> إعدادات النظام</h2>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <form asp-action="Save" method="post">

                    <!-- إعدادات عامة -->
                    <h5 class="border-bottom pb-2 mb-3 text-secondary">إعدادات عامة</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label">اسم الموقع</label>
                            <input asp-for="SiteName" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">البريد الإلكتروني للدعم</label>
                            <input asp-for="SupportEmail" class="form-control" type="email" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">هاتف الدعم</label>
                            <input asp-for="SupportPhone" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">رقم الواتساب (للتواصل)</label>
                            <input asp-for="WhatsappNumber" class="form-control" placeholder="201xxxxxxxxx" />
                        </div>
                    </div>

                    <!-- إعدادات مالية -->
                    <h5 class="border-bottom pb-2 mb-3 text-secondary">الإعدادات المالية والشحن</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label">رسوم الشحن الأساسية (ج.م)</label>
                            <input asp-for="ShippingBaseFee" class="form-control" type="number" step="0.01" />
                        </div>
                    </div>

                    <!-- التواصل الاجتماعي -->
                    <h5 class="border-bottom pb-2 mb-3 text-secondary">روابط التواصل الاجتماعي</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-12">
                            <label class="form-label">رابط فيسبوك</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fab fa-facebook"></i></span>
                                <input asp-for="FacebookLink" class="form-control" placeholder="https://facebook.com/..." />
                            </div>
                        </div>
                    </div>

                    <!-- الصيانة -->
                    <div class="alert alert-warning d-flex align-items-center">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="EnableMaintenanceMode">
                            <label class="form-check-label fw-bold" for="EnableMaintenanceMode">تفعيل وضع الصيانة (إيقاف الموقع مؤقتاً)</label>
                        </div>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary px-4 fw-bold">حفظ التغييرات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>