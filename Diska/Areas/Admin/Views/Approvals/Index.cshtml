@model IEnumerable<Diska.Models.PendingMerchantAction>
@{
    ViewData["Title"] = "طلبات الموافقات";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-0">طلبات التجار المعلقة</h2>
        <p class="text-muted small">مراجعة التعديلات الحساسة (الأسعار، السحب) قبل التنفيذ</p>
    </div>
    <span class="badge bg-warning text-dark fs-6">@Model.Count() طلب معلق</span>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">التاريخ</th>
                        <th>التاجر</th>
                        <th>نوع الإجراء</th>
                        <th>التفاصيل</th>
                        <th>الحالة</th>
                        <th class="text-end pe-4">معاينة</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-check-circle fa-3x mb-3 text-success opacity-50"></i>
                                <p>لا توجد طلبات معلقة.</p>
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-muted small">
                                <div>@item.RequestDate.ToString("yyyy-MM-dd")</div>
                                <div>@item.RequestDate.ToString("hh:mm tt")</div>
                            </td>
                            <td>
                                <div class="fw-bold">@item.Merchant?.ShopName</div>
                                <div class="small text-muted">@item.Merchant?.FullName</div>
                            </td>
                            <td>
                                @if (item.ActionType == "UpdateProductPrice")
                                {
                                    <span class="badge bg-info text-dark"><i class="fas fa-tag me-1"></i> تغيير سعر</span>
                                }
                                else if (item.ActionType == "WithdrawRequest")
                                {
                                    <span class="badge bg-success"><i class="fas fa-money-bill me-1"></i> سحب رصيد</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.ActionType</span>
                                }
                            </td>
                            <td>
                                <span class="fw-bold">@item.EntityName</span> <small class="text-muted">#@item.EntityId</small>
                            </td>
                            <td><span class="badge bg-warning text-dark">بانتظار الموافقة</span></td>
                            <td class="text-end pe-4">
                                <a asp-action="Review" asp-route-id="@item.Id" class="btn btn-sm btn-primary px-3">
                                    مراجعة <i class="fas fa-arrow-left ms-1"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>