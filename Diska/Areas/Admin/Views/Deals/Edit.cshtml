@model Diska.Models.GroupDeal
@{
    ViewData["Title"] = "تعديل الصفقة";
    Layout = "_AdminLayout";
    string applyTo = Model.CategoryId.HasValue ? "Category" : "Product";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-primary">تعديل: @Model.Title</h5>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">إلغاء</a>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ReservedQuantity" />

                    <div class="form-group mb-4">
                        <label asp-for="Title" class="form-label">عنوان العرض</label>
                        <input asp-for="Title" class="form-control" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold d-block mb-2">ينطبق على:</label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="ApplyTo" id="applyProduct" value="Product" @(applyTo == "Product" ? "checked" : "") onchange="toggleScope()">
                            <label class="btn btn-outline-primary" for="applyProduct"><i class="fas fa-box me-2"></i> منتج</label>

                            <input type="radio" class="btn-check" name="ApplyTo" id="applyCategory" value="Category" @(applyTo == "Category" ? "checked" : "") onchange="toggleScope()">
                            <label class="btn btn-outline-primary" for="applyCategory"><i class="fas fa-layer-group me-2"></i> قسم</label>
                        </div>
                    </div>

                    <div id="productSelectDiv" class="mb-4" style="@(applyTo == "Product" ? "" : "display:none;")">
                        <label class="form-label">اختر المنتج</label>
                        <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products">
                            <option value="">-- اختر --</option>
                        </select>
                    </div>

                    <div id="categorySelectDiv" class="mb-4" style="@(applyTo == "Category" ? "" : "display:none;")">
                        <label class="form-label">اختر القسم</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                            <option value="">-- اختر --</option>
                        </select>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label">نوع الخصم</label>
                            <select asp-for="IsPercentage" class="form-select" onchange="updatePriceLabel()">
                                <option value="false">مبلغ ثابت (ج.م)</option>
                                <option value="true">نسبة مئوية (%)</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" id="priceLabel">@(Model.IsPercentage ? "نسبة الخصم (%)" : "قيمة الخصم (ج.م)")</label>
                            <input asp-for="DiscountValue" type="number" step="0.01" class="form-control" required />
                        </div>
                        <input type="hidden" asp-for="DealPrice" />
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label">الهدف (Target)</label>
                            <input asp-for="TargetQuantity" type="number" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">حد الاستخدام</label>
                            <input asp-for="UsageLimit" type="number" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label">تاريخ البدء</label>
                            <input asp-for="StartDate" type="datetime-local" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">تاريخ الانتهاء</label>
                            <input asp-for="EndDate" type="datetime-local" class="form-control" />
                        </div>
                    </div>

                    <div class="form-check form-switch mb-4">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive">
                        <label class="form-check-label">تفعيل</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">حفظ التعديلات</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleScope() {
            const isProduct = document.getElementById('applyProduct').checked;
            document.getElementById('productSelectDiv').style.display = isProduct ? 'block' : 'none';
            document.getElementById('categorySelectDiv').style.display = isProduct ? 'none' : 'block';
        }

        function updatePriceLabel() {
            const isPercent = document.querySelector('select[name="IsPercentage"]').value === 'true';
            document.getElementById('priceLabel').innerText = isPercent ? 'نسبة الخصم (%)' : 'قيمة الخصم (ج.م)';
        }
    </script>
}