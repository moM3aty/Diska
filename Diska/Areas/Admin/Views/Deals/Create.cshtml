@model Diska.Models.GroupDeal
@{
    ViewData["Title"] = "إنشاء صفقة";
    Layout = "_AdminLayout";
}

<div class="card" style="max-width:600px; margin:0 auto;">
    <h2 style="margin-bottom:20px;">طرح صفقة جديدة</h2>

    <form asp-action="Create" method="post">
        <div class="form-group" style="margin-bottom:15px;">
            <label>اختر المنتج</label>
            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" required>
                <option value="">-- اختر --</option>
            </select>
        </div>

        <div class="form-row" style="display:grid; grid-template-columns: 1fr 1fr; gap:20px; margin-bottom:15px;">
            <div class="form-group">
                <label>سعر الصفقة (المخفض)</label>
                <input asp-for="DealPrice" type="number" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" required />
            </div>
            <div class="form-group">
                <label>الكمية المستهدفة (Target)</label>
                <input asp-for="TargetQuantity" type="number" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" required />
            </div>
        </div>

        <div class="form-row" style="display:grid; grid-template-columns: 1fr 1fr; gap:20px; margin-bottom:20px;">
            <div class="form-group">
                <label>تاريخ البدء</label>
                <input asp-for="StartDate" type="date" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <label>تاريخ الانتهاء</label>
                <input asp-for="EndDate" type="date" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="width:100%; padding:12px;">نشر الصفقة</button>
    </form>
</div>