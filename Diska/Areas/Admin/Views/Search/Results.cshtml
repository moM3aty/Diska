@model Diska.Areas.Admin.Controllers.GlobalSearchResultsViewModel
@{
    ViewData["Title"] = "نتائج البحث";
    Layout = "_AdminLayout";
    bool hasResults = Model.Products.Any() || Model.Orders.Any() || Model.Users.Any();
}

<div class="d-flex align-items-center mb-4">
    <div class="me-3">
        <span class="stat-icon bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
            <i class="fas fa-search"></i>
        </span>
    </div>
    <div>
        <h2 class="mb-0 fw-bold">نتائج البحث</h2>
        <p class="text-muted mb-0">عن: <span class="text-primary fw-bold">"@Model.Query"</span></p>
    </div>
</div>

@if (!hasResults)
{
    <div class="card text-center p-5 border-0 shadow-sm">
        <div class="card-body">
            <div class="text-muted mb-3 opacity-25">
                <i class="fas fa-search fa-4x"></i>
            </div>
            <h4 class="fw-bold">لا توجد نتائج مطابقة</h4>
            <p class="text-muted">لم نعثر على أي منتجات، طلبات، أو مستخدمين يطابقون بحثك.</p>
            <a href="/Admin/Dashboard" class="btn btn-outline-secondary mt-2">عودة للرئيسية</a>
        </div>
    </div>
}
else
{
    <div class="row g-4">

        <!-- 1. نتائج المنتجات -->
        @if (Model.Products.Any())
        {
            <div class="col-12">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-box me-2 text-primary"></i> المنتجات (@Model.Products.Count)</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th style="width: 60px;">صورة</th>
                                    <th>الاسم</th>
                                    <th>التاجر</th>
                                    <th>السعر</th>
                                    <th>الحالة</th>
                                    <th class="text-end">إجراء</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Products)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/@item.ImageUrl" class="product-image-thumb" onerror="this.src='/images/default.png'">
                                        </td>
                                        <td>
                                            <div class="fw-bold text-dark">@item.Name</div>
                                            <small class="text-muted">SKU: @item.SKU</small>
                                        </td>
                                        <td>@item.Merchant?.ShopName</td>
                                        <td class="fw-bold">@item.Price.ToString("N0")</td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge badge-soft-success">نشط</span>
                                            }
                                            else
                                            {

                                                <span class="badge badge-soft-danger">مخفي</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- 2. نتائج الطلبات -->
        @if (Model.Orders.Any())
        {
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-shopping-bag me-2 text-success"></i> الطلبات (@Model.Orders.Count)</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-bold">#@order.Id</div>
                                            <small class="text-muted">@order.OrderDate.ToString("yyyy-MM-dd")</small>
                                        </td>
                                        <td>
                                            <div class="text-dark">@order.CustomerName</div>
                                            <small class="text-muted">@order.Phone</small>
                                        </td>
                                        <td>
                                            <span class="badge badge-soft-info">@order.Status</span>
                                        </td>
                                        <td class="text-end">
                                            <a asp-controller="Dashboard" asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-light">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- 3. نتائج المستخدمين -->
        @if (Model.Users.Any())
        {
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-users me-2 text-info"></i> المستخدمين (@Model.Users.Count)</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        @foreach (var user in Model.Users)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="avatar-circle bg-light text-primary border">
                                        @(user.FullName?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-bold">@user.FullName</h6>
                                        <small class="text-muted">@user.PhoneNumber</small>
                                        @if (!string.IsNullOrEmpty(user.ShopName))
                                        {
                                            <span class="badge badge-soft-warning ms-2">@user.ShopName</span>
                                        }
                                    </div>
                                </div>
                                <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-light">
                                    <i class="fas fa-user-cog"></i>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

    </div>
}