@model IEnumerable<Diska.Models.Survey>
@{
    ViewData["Title"] = "إدارة الاستبيانات";
    Layout = "_AdminLayout";
}

<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
    <div>
        <h2 style="margin:0; color:var(--primary);">إدارة الاستبيانات</h2>
        <p style="color:#64748b; margin-top:5px;">إنشاء استطلاعات رأي وجمع ملاحظات العملاء</p>
    </div>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> إنشاء استبيان جديد</a>
</div>

<div class="card">
    @if (!Model.Any())
    {
        <div style="text-align:center; padding:50px; color:#64748b;">
            <i class="fas fa-poll-h fa-3x" style="margin-bottom:15px; color:#cbd5e1;"></i>
            <p>لا توجد استبيانات مسجلة حالياً.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>العنوان</th>
                        <th>الجمهور</th>
                        <th>الفترة</th>
                        <th>المشاركات</th>
                        <th>الحالة</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Title</strong>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <div class="small text-muted">@item.Description</div>
                                }
                            </td>
                            <td>
                                @if (item.TargetAudience == "All")
                                {
                                    <span class="badge bg-secondary">الكل</span>
                                }
                                else if (item.TargetAudience == "Merchant")
                                {

                                    <span class="badge bg-warning text-dark">تجار</span>
                                }
                                else
                                {

                                    <span class="badge bg-info text-dark">عملاء</span>
                                }
                            </td>
                            <td>
                                <div class="small">@item.StartDate.ToString("dd/MM") - @item.EndDate.ToString("dd/MM")</div>
                            </td>
                            <td>
                                <span class="fw-bold text-primary">@item.Responses.Count</span>
                            </td>
                            <td>
                                @if (item.IsActive && item.EndDate > DateTime.Now)
                                {
                                    <span class="badge bg-success">نشط</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark border">@(item.IsActive ? "منتهي" : "متوقف")</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Results" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-chart-pie me-1"></i> النتائج
                                    </a>

                                    <form asp-action="ToggleStatus" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary" title="@(item.IsActive ? "إيقاف" : "تفعيل")">
                                            <i class="fas @(item.IsActive ? "fa-pause" : "fa-play")"></i>
                                        </button>
                                    </form>

                                    <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('حذف الاستبيان وجميع نتائجه؟');">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>