@model IEnumerable<Diska.Models.Survey>
@{
    ViewData["Title"] = "الاستبيانات";
    Layout = "_AdminLayout";
}

<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
    <h2 style="margin:0;">إدارة الاستبيانات</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> إنشاء استبيان جديد</a>
</div>

<div class="card">
    @if (!Model.Any())
    {
        <div style="text-align:center; padding:30px; color:#666;">
            <p>لا توجد استبيانات مسجلة حالياً.</p>
            <small class="text-muted">(تأكد من ترحيل قاعدة البيانات لإضافة جداول الاستبيانات)</small>
        </div>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>العنوان</th>
                    <th>الجمهور المستهدف</th>
                    <th>تاريخ الانتهاء</th>
                    <th>الاستجابات</th>
                    <th>الحالة</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>
                            @if(item.TargetAudience == "All") { <span class="badge" style="background:#e2e8f0; color:#333;">الكل</span> }
                            else if(item.TargetAudience == "Merchant") { <span class="badge" style="background:#7c3aed; color:#fff;">تجار</span> }
                            else { <span class="badge" style="background:#2563eb; color:#fff;">عملاء</span> }
                        </td>
                        <td>@item.EndDate.ToString("yyyy/MM/dd")</td>
                        <td>@item.Responses.Count</td>
                        <td>
                            @if(item.IsActive) { <span class="badge" style="background:#dcfce7; color:#166534;">نشط</span> }
                            else { <span class="badge" style="background:#fee2e2; color:#b91c1c;">متوقف</span> }
                        </td>
                        <td>
                            <a asp-action="Results" asp-route-id="@item.Id" class="btn btn-outline" style="font-size:0.8rem; padding:5px 10px;">النتائج</a>
                            <form asp-action="ToggleStatus" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn" style="font-size:0.8rem; padding:5px 10px; background:#f1f5f9;">
                                    @(item.IsActive ? "إيقاف" : "تفعيل")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>