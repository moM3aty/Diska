@model Diska.Models.Survey
@{
    ViewData["Title"] = "نتائج الاستبيان";
    Layout = "_AdminLayout";
    int totalResponses = Model.Responses?.Count ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-1">نتائج: @Model.Title</h2>
        <span class="text-muted">إجمالي المشاركات: <strong class="text-dark">@totalResponses</strong></span>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">عودة</a>
</div>

<div class="row g-4">
    @foreach (var q in Model.Questions)
    {
        <div class="col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 pb-0 pt-3">
                    <h6 class="fw-bold mb-0">@q.QuestionText</h6>
                    <small class="text-muted">Type: @q.Type</small>
                </div>
                <div class="card-body">

                    @if (totalResponses == 0)
                    {
                        <p class="text-muted small">لا توجد بيانات.</p>
                    }
                    else
                    {
                        var answers = new List<string>();
                        foreach (var r in Model.Responses)
                        {
                            try
                            {
                                var json = System.Text.Json.JsonSerializer.Deserialize<Dictionary<string, string>>(r.AnswerJson);
                                var key = $"q_{q.Id}"; // المفتاح المستخدم في الـ Form سابقاً
                                // لاحظ: في الكنترولر حفظنا الـ Id في الـ Form كـ name="q_ID"
                                // لذا نبحث عنه هنا

                                // بما أننا لم نستخدم اسم ثابت في Create، سنفترض أننا حفظنا البيانات بصيغة معينة
                                // للتبسيط، سنقوم بعمل Loop بسيط للوصول للبيانات
                                if (json != null && json.ContainsKey(key))
                                {
                                    answers.Add(json[key]);
                                }
                            }
                            catch { }
                        }

                        if (q.Type == "Star" || q.Type == "YesNo" || q.Type == "MCQ")
                        {
                            var groups = answers.GroupBy(x => x)
                            .Select(g => new { Answer = g.Key, Count = g.Count(), Percent = (g.Count() * 100) / totalResponses })
                            .OrderByDescending(g => g.Count);

                            foreach (var g in groups)
                            {
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between small mb-1">
                                        <span>@g.Answer</span>
                                        <span class="fw-bold">@g.Count (@g.Percent%)</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: @g.Percent%"></div>
                                    </div>
                                </div>
                            }
                        }
                        else // Text
                        {
                            <div class="bg-light p-2 rounded" style="max-height: 150px; overflow-y: auto;">
                                <ul class="list-unstyled mb-0 small">
                                    @foreach (var txt in answers.Take(10))
                                    {
                                        <li class="border-bottom py-1">@txt</li>
                                    }
                                </ul>
                                @if (answers.Count > 10)
                                {
                                    <span class="text-muted x-small">... والمزيد</span>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    }
</div>