@model Diska.Models.DealRequest
@{
    ViewData["Title"] = "تفاصيل الطلب";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <a asp-action="Index" class="text-decoration-none text-muted small"><i class="fas fa-arrow-right"></i> عودة للقائمة</a>
        <h2 class="text-primary fw-bold mt-1">تفاصيل الطلب #@Model.Id</h2>
    </div>

    <div class="d-flex gap-2">
        <!-- Delete Action -->
        <form asp-action="Delete" method="post" onsubmit="return confirm('حذف هذا الطلب نهائياً؟');">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-outline-danger"><i class="fas fa-trash"></i> حذف</button>
        </form>
    </div>
</div>

<div class="row">
    <!-- Left Column: Info -->
    <div class="col-lg-8">
        <!-- Request Info -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-primary">بيانات الطلب</h5>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="text-muted small">المنتج المطلوب</label>
                        <div class="fw-bold fs-5">@Model.ProductName</div>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">الحالة الحالية</label>
                        <div><partial name="_StatusBadge" model="@Model.Status" /></div>
                    </div>
                    <div class="col-md-4">
                        <label class="text-muted small">الكمية المستهدفة</label>
                        <div class="fw-bold">@Model.TargetQuantity</div>
                    </div>
                    <div class="col-md-4">
                        <label class="text-muted small">السعر المقترح</label>
                        <div class="fw-bold text-success">@Model.DealPrice.ToString("N0") ج.م</div>
                    </div>
                    <div class="col-md-4">
                        <label class="text-muted small">الموقع</label>
                        <div>@Model.Location</div>
                    </div>
                    <div class="col-12">
                        <label class="text-muted small">تاريخ الطلب</label>
                        <div>@Model.RequestDate.ToString("dd MMMM yyyy - hh:mm tt")</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Info -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-primary">بيانات العميل</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-light rounded-circle p-3 me-3">
                        <i class="fas fa-user fa-lg text-secondary"></i>
                    </div>
                    <div>
                        <div class="fw-bold">@Model.User?.FullName</div>
                        <div class="text-muted">@Model.User?.PhoneNumber</div>
                        <div class="small text-muted">@Model.User?.Email</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Offers Received (Optional view for admin) -->
        @if (Model.Offers != null && Model.Offers.Any())
        {
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">العروض المقدمة من التجار (@Model.Offers.Count)</h5>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>التاجر</th>
                                <th>السعر</th>
                                <th>الحالة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var offer in Model.Offers)
                            {
                                <tr>
                                    <td>@offer.Merchant?.ShopName</td>
                                    <td>@offer.OfferPrice.ToString("N0")</td>
                                    <td>
                                        @if (offer.IsAccepted)
                                        {
                                            <span class="badge bg-success">مقبول</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-light text-dark">انتظار</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <!-- Right Column: Actions -->
    <div class="col-lg-4">

        <!-- Workflow Actions -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-primary">تغيير الحالة (Workflow)</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">الحالة الجديدة</label>
                        <select name="status" class="form-select">
                            <option value="Pending" selected="@(Model.Status == "Pending")">جديد (Pending)</option>
                            <option value="InReview" selected="@(Model.Status == "InReview")">قيد المراجعة (In Review)</option>
                            <option value="Approved" selected="@(Model.Status == "Approved")">موافقة (نشر للتجار)</option>
                            <option value="Rejected" selected="@(Model.Status == "Rejected")">رفض</option>
                            <option value="Completed" selected="@(Model.Status == "Completed")">مكتمل</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">ملاحظات إدارية (للعميل)</label>
                        <textarea name="notes" class="form-control" rows="3" placeholder="سبب الرفض أو تعليمات...">@Model.AdminNotes</textarea>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">تحديث الحالة</button>
                </form>
            </div>
        </div>

        <!-- Internal Admin Notes -->
        <div class="card border-0 shadow-sm bg-light">
            <div class="card-body">
                <h6 class="fw-bold mb-3"><i class="fas fa-sticky-note text-warning"></i> ملاحظات سريعة</h6>
                <form asp-action="SaveNotes" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <textarea name="notes" class="form-control mb-2" rows="4" placeholder="ملاحظات داخلية فقط...">@Model.AdminNotes</textarea>
                    <button type="submit" class="btn btn-sm btn-secondary w-100">حفظ الملاحظات</button>
                </form>
            </div>
        </div>

    </div>
</div>