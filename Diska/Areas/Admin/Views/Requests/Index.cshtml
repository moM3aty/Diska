@model IEnumerable<Diska.Models.DealRequest>
@{
    ViewData["Title"] = "إدارة الطلبات الخاصة";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-0">طلبات الشراء الخاصة</h2>
        <p class="text-muted small">إدارة طلبات العملاء والكميات الكبيرة</p>
    </div>
</div>

<!-- Filters -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="fas fa-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="بحث باسم المنتج أو العميل..." value="@Context.Request.Query["search"]">
                </div>
            </div>
            <div class="col-md-3">
                <select name="status" class="form-select" onchange="this.form.submit()">
                    <option value="All" selected="@(ViewBag.CurrentStatus == "All")">كل الحالات</option>
                    <option value="Pending" selected="@(ViewBag.CurrentStatus == "Pending")">جديد (Pending)</option>
                    <option value="InReview" selected="@(ViewBag.CurrentStatus == "InReview")">قيد المراجعة (In Review)</option>
                    <option value="Approved" selected="@(ViewBag.CurrentStatus == "Approved")">مقبول (Approved)</option>
                    <option value="Rejected" selected="@(ViewBag.CurrentStatus == "Rejected")">مرفوض (Rejected)</option>
                    <option value="Completed" selected="@(ViewBag.CurrentStatus == "Completed")">مكتمل (Completed)</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">بحث</button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">المنتج</th>
                        <th>العميل</th>
                        <th>الكمية / السعر</th>
                        <th>الحالة</th>
                        <th>تاريخ الطلب</th>
                        <th class="text-end pe-4">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-inbox fa-3x mb-3 opacity-50"></i>
                                <p>لا توجد طلبات مطابقة</p>
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@item.ProductName</div>
                                <div class="small text-muted"><i class="fas fa-map-marker-alt me-1"></i> @item.Location</div>
                            </td>
                            <td>
                                <div>@item.User?.FullName</div>
                                <div class="small text-muted">@item.User?.PhoneNumber</div>
                            </td>
                            <td>
                                <div class="fw-bold">@item.TargetQuantity <small>قطعة</small></div>
                                <div class="text-primary small">بسعر @item.DealPrice.ToString("N0") ج.م</div>
                            </td>
                            <td>
                                <partial name="_StatusBadge" model="@item.Status" />
                            </td>
                            <td>
                                <div class="small">@item.RequestDate.ToString("yyyy/MM/dd")</div>
                                <div class="small text-muted">@item.RequestDate.ToString("hh:mm tt")</div>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i> معاينة
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>