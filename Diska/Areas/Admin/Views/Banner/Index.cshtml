@model IEnumerable<Diska.Models.Banner>
@using System.Globalization
@{
    ViewData["Title"] = "إدارة البنرات";
    Layout = "_AdminLayout";
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<style>
    /* --- Premium Banner Styles --- */
    :root {
        --b-card-bg: #ffffff;
        --b-border: #f1f5f9;
        --b-text: #0f172a;
        --b-muted: #64748b;
        --b-primary: #4f46e5;
        --b-danger: #ef4444;
        --b-success: #10b981;
        --b-warning: #f59e0b;
        --st-active-bg: rgba(16, 185, 129, 0.1);
        --st-active-txt: #10b981;
        --st-pending-bg: rgba(245, 158, 11, 0.1);
        --st-pending-txt: #d97706;
        --st-rejected-bg: rgba(239, 68, 68, 0.1);
        --st-rejected-txt: #ef4444;
    }

    [data-bs-theme="dark"] {
        --b-card-bg: #1e293b;
        --b-border: #334155;
        --b-text: #f8fafc;
        --b-muted: #94a3b8;
        --st-active-bg: rgba(16, 185, 129, 0.15);
        --st-active-txt: #4ade80;
        --st-pending-bg: rgba(245, 158, 11, 0.15);
        --st-pending-txt: #fbbf24;
        --st-rejected-bg: rgba(239, 68, 68, 0.15);
        --st-rejected-txt: #f87171;
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        margin: 0;
        color: var(--b-text);
        font-weight: 800;
        font-size: 1.8rem;
    }

    .page-desc {
        color: var(--b-muted);
        margin: 5px 0 0;
        font-size: 0.95rem;
    }

    .btn-create {
        background: var(--b-primary);
        color: #fff;
        padding: 10px 24px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: 0.3s;
    }

        .btn-create:hover {
            transform: translateY(-2px);
            opacity: 0.9;
            color: #fff;
        }

    /* Grid Layout */
    .banners-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 25px;
    }

    /* Banner Card */
    .banner-card {
        background: var(--b-card-bg);
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.03);
        border: 1px solid var(--b-border);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .banner-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px -5px rgba(0,0,0,0.08);
            border-color: var(--b-primary);
        }

    .banner-preview {
        height: 160px;
        background: #f8fafc;
        position: relative;
        overflow: hidden;
        border-bottom: 1px solid var(--b-border);
    }

        .banner-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .banner-card:hover .banner-preview img {
        transform: scale(1.05);
    }

    .banner-overlay {
        position: absolute;
        top: 10px;
        right: 10px;
        display: flex;
        gap: 5px;
    }

    .device-badge {
        background: rgba(0,0,0,0.6);
        color: #fff;
        padding: 4px 8px;
        border-radius: 6px;
        font-size: 0.7rem;
        backdrop-filter: blur(4px);
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .banner-body {
        padding: 20px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .banner-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--b-text);
        margin-bottom: 5px;
        line-height: 1.4;
    }

    .banner-subtitle {
        font-size: 0.9rem;
        color: var(--b-muted);
        margin-bottom: 15px;
        height: 20px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .meta-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.8rem;
        color: var(--b-muted);
        margin-bottom: 15px;
        padding-top: 15px;
        border-top: 1px dashed var(--b-border);
    }

    .status-badge {
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .st-Active {
        background: var(--st-active-bg);
        color: var(--st-active-txt);
    }

    .st-Scheduled {
        background: rgba(59, 130, 246, 0.1);
        color: #3b82f6;
    }

    .st-Expired {
        background: var(--st-pending-bg);
        color: var(--st-pending-txt);
    }

    .st-Inactive {
        background: rgba(100, 116, 139, 0.1);
        color: var(--b-muted);
    }

    .priority-badge {
        background: var(--b-border);
        color: var(--b-text);
        font-weight: 700;
        padding: 4px 10px;
        border-radius: 8px;
        font-size: 0.8rem;
    }

    .card-footer {
        padding: 15px 20px;
        border-top: 1px solid var(--b-border);
        background: var(--b-card-bg);
        display: flex;
        justify-content: flex-end;
        gap: 8px;
        margin-top: auto;
    }

    .action-btn {
        width: 35px;
        height: 35px;
        border-radius: 8px;
        border: 1px solid var(--b-border);
        background: transparent;
        color: var(--b-muted);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-edit:hover {
        background: var(--b-primary);
        color: #fff;
        border-color: var(--b-primary);
    }

    .btn-delete:hover {
        background: #fef2f2;
        color: var(--b-danger);
        border-color: #fee2e2;
    }

    /* Admin Note */
    .admin-note {
        margin-top: 10px;
        padding: 10px;
        border-radius: 8px;
        background: rgba(239, 68, 68, 0.05);
        border: 1px dashed var(--b-danger);
        color: var(--b-danger);
        font-size: 0.85rem;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: var(--b-muted);
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.3;
    }

    /* Animation */
    .fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* --- Media Queries --- */
    @("@media") (max-width: 768px) {
        .page-header

    {
        flex-direction: column;
        align-items: stretch;
        gap: 15px;
        text-align: center;
    }

    .btn-create {
        justify-content: center;
        width: 100%;
    }

    .banners-grid {
        grid-template-columns: 1fr; /* Single column on mobile */
    }

    .banner-preview {
        height: 180px; /* Taller image on mobile */
    }

    }
</style>

<div class="container-fluid px-0 py-4 fade-up">

    <!-- Header -->
    <div class="page-header">
        <div>
            <h2 class="mb-1">@(isAr ? "إدارة البنرات" : "Banners Management")</h2>
            <p class="page-desc">@(isAr ? "التحكم في العروض والشرائح الإعلانية" : "Manage homepage sliders and promotional banners")</p>
        </div>
        <a asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> @(isAr ? "إضافة بنر" : "Add Banner")
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success rounded-3 mb-4 border-0 shadow-sm d-flex align-items-center gap-2" style="background:#dcfce7; color:#166534;">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm empty-state" style="background:var(--b-card-bg);">
            <i class="fas fa-images empty-icon"></i>
            <h4>@(isAr ? "لا توجد بنرات" : "No Banners Found")</h4>
            <p>@(isAr ? "ابدأ بإضافة أول بنر إعلاني لمتجرك" : "Start by adding the first promotional banner to your store")</p>
            <a asp-action="Create" class="btn btn-outline-primary rounded-pill px-4 mt-3">
                @(isAr ? "إنشاء بنر جديد" : "Create New Banner")
            </a>
        </div>
    }
    else
    {
        <div class="banners-grid">
            @foreach (var item in Model.OrderBy(b => b.Priority))
            {
                string statusClass = "st-Inactive";
                string statusLabel = isAr ? "معطل" : "Inactive";

                if (item.IsActive)
                {
                    if (item.StartDate > DateTime.Now)
                    {
                        statusClass = "st-Scheduled";
                        statusLabel = isAr ? "مجدول" : "Scheduled";
                    }
                    else if (item.EndDate < DateTime.Now)
                    {
                        statusClass = "st-Expired";
                        statusLabel = isAr ? "منتهي" : "Expired";
                    }
                    else
                    {
                        statusClass = "st-Active";
                        statusLabel = isAr ? "نشط" : "Active";
                    }
                }

                <div class="banner-card">
                    <div class="banner-preview">
                        <img src="~/@item.ImageDesktop" onerror="this.src='/images/default-banner.png'" alt="@item.Title">
                        <div class="banner-overlay">
                            @if (!string.IsNullOrEmpty(item.ImageMobile))
                            {
                                <span class="device-badge"><i class="fas fa-mobile-alt"></i> Mobile</span>
                            }
                            <span class="device-badge"><i class="fas fa-desktop"></i> Desktop</span>
                        </div>
                    </div>

                    <div class="banner-body">
                        <h5 class="banner-title">@item.Title</h5>
                        <p class="banner-subtitle">@item.Subtitle</p>

                        <div class="meta-row">
                            <span class="status-badge @statusClass">@statusLabel</span>
                            <span class="priority-badge" title="@(isAr ? "الترتيب" : "Priority")">#@item.Priority</span>
                        </div>

                        <div class="small text-muted mb-2 d-flex align-items-center gap-2">
                            <i class="far fa-calendar-alt text-primary"></i>
                            <span>@item.StartDate.ToString("dd MMM") - @item.EndDate.ToString("dd MMM")</span>
                        </div>

                        @if (item.Status == "Rejected" && !string.IsNullOrEmpty(item.AdminComment))
                        {
                            <div class="admin-note">
                                <strong><i class="fas fa-exclamation-circle"></i> @(isAr ? "سبب الرفض" : "Rejection Reason"):</strong><br>
                                @item.AdminComment
                            </div>
                        }
                    </div>

                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-icon btn-edit" title="@(isAr ? "تعديل" : "Edit")">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form asp-action="Delete" method="post" onsubmit="return confirmDelete(@item.Id, '@item.Title')">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn-icon btn-delete" title="@(isAr ? "حذف" : "Delete")">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id, title) {
            const isAr = '@isAr' === 'True';
            event.preventDefault(); // Stop form submit

            Swal.fire({
                title: isAr ? 'هل أنت متأكد؟' : 'Are you sure?',
                text: isAr ? `سيتم حذف البنر "${title}" نهائياً!` : `Delete banner "${title}" permanently?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#64748b',
                confirmButtonText: isAr ? 'نعم، حذف' : 'Yes, delete',
                cancelButtonText: isAr ? 'إلغاء' : 'Cancel',
                reverseButtons: true,
                customClass: {
                    popup: 'rounded-4 shadow-lg'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // Manually submit the form
                    const form = document.querySelector(`input[name="id"][value="${id}"]`).closest('form');
                    form.submit();
                }
            });
            return false;
        }

        // Auto-hide alerts
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                alert.style.transition = "opacity 0.5s ease";
                alert.style.opacity = 0;
                setTimeout(function() { alert.style.display = 'none'; }, 500);
            });
        }, 4000);
    </script>
}