@model Diska.Models.Banner
@{
    ViewData["Title"] = "إضافة بنر";
    Layout = "_AdminLayout";
}

<div class="card" style="max-width:800px; margin:0 auto;">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
        <h2 style="margin:0;">إضافة بنر إعلاني</h2>
        <a asp-action="Index" class="btn btn-outline">إلغاء</a>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="form-group" style="margin-bottom:20px; text-align:center; border:2px dashed #ccc; padding:20px; border-radius:10px;">
            <label for="imageFile" style="cursor:pointer; display:block;">
                <i class="fas fa-cloud-upload-alt fa-3x" style="color:#cbd5e1;"></i>
                <p style="margin:10px 0;">اضغط لرفع صورة البنر</p>
                <input type="file" name="imageFile" id="imageFile" accept="image/*" style="display:none;" onchange="previewBanner(this)" required>
                <img id="bannerPreview" style="max-width:100%; max-height:200px; margin-top:10px; display:none; border-radius:10px;">
            </label>
        </div>

        <div class="form-row" style="display:grid; grid-template-columns: 1fr 1fr; gap:20px; margin-bottom:15px;">
            <div class="form-group">
                <label>العنوان الرئيسي</label>
                <input asp-for="Title" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" required />
            </div>
            <div class="form-group">
                <label>النص الفرعي</label>
                <input asp-for="Subtitle" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" />
            </div>
        </div>

        <div class="form-row" style="display:grid; grid-template-columns: 1fr 1fr; gap:20px; margin-bottom:15px;">
            <div class="form-group">
                <label>نص الزر</label>
                <input asp-for="ButtonText" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" value="تسوق الآن" />
            </div>
            <div class="form-group">
                <label>رابط التوجيه (Link)</label>
                <input asp-for="LinkUrl" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" value="#" />
            </div>
        </div>

        <div class="form-row" style="display:grid; grid-template-columns: 1fr 1fr; gap:20px; margin-bottom:20px;">
            <div class="form-group">
                <label>الترتيب</label>
                <input asp-for="DisplayOrder" type="number" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" value="0" />
            </div>
            <div class="form-group" style="display:flex; align-items:center; gap:10px; padding-top:30px;">
                <input asp-for="IsActive" type="checkbox" style="width:20px; height:20px;" checked />
                <label style="margin:0;">تفعيل البنر فوراً</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="width:100%; padding:12px;">حفظ البنر</button>
    </form>
</div>

<script>
    function previewBanner(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('bannerPreview').src = e.target.result;
                document.getElementById('bannerPreview').style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>