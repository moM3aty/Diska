@model IEnumerable<Diska.Models.Banner>
@{
    ViewData["Title"] = "إدارة البنرات";
    Layout = "_AdminLayout";
}

<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
    <h2 style="margin:0;">بنرات الصفحة الرئيسية</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> إضافة بنر جديد</a>
</div>

<div class="card">
    @if (!Model.Any())
    {
        <div style="text-align:center; padding:30px; color:#666;">
            <p>لا توجد بنرات مضافة حالياً.</p>
        </div>
    }
    else
    {
        <table style="width:100%;">
            <thead>
                <tr>
                    <th>الصورة</th>
                    <th>العنوان</th>
                    <th>الحالة</th>
                    <th>الترتيب</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/@item.ImageUrl" style="width:120px; height:auto; border-radius:8px; border:1px solid #eee;"></td>
                        <td>
                            <strong>@item.Title</strong><br>
                            <small class="text-muted">@item.Subtitle</small>
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge" style="background:#dcfce7; color:green;">نشط</span>
                            }
                            else
                            {

                                <span class="badge" style="background:#fee2e2; color:red;">غير نشط</span>
                            }
                        </td>
                        <td>@item.DisplayOrder</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn" style="color:#0284c7; background:#e0f2fe; padding:5px 10px; margin-left:5px;">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="Delete" method="post" onsubmit="return confirm('حذف هذا البنر؟');" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn" style="color:red; background:none;"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>