@model IEnumerable<Diska.Models.Category>
@{
    ViewData["Title"] = "إدارة الأقسام";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-0">الأقسام والتصنيفات</h2>
        <p class="text-muted small">هيكلة المنتجات والأقسام الفرعية</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> إضافة قسم جديد
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">المعلومات</th>
                        <th>المستوى (الأب)</th>
                        <th>الحالة</th>
                        <th>الترتيب</th>
                        <th>SEO Slug</th>
                        <th class="text-end pe-4">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-layer-group fa-3x mb-3 opacity-50"></i>
                                <p>لا توجد أقسام مضافة</p>
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        bool isParent = item.ParentId == null;
                        <tr class="@(isParent ? "bg-white fw-bold" : "")">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="~/@item.ImageUrl" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                            <i class="@(item.IconClass ?? "fas fa-folder") text-muted"></i>
                                        </div>
                                    }
                                    <div>
                                        <div class="text-dark">@item.Name</div>
                                        <small class="text-muted">@item.NameEn</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (item.Parent != null)
                                {
                                    <span class="badge bg-light text-dark border">
                                        <i class="fas fa-level-up-alt me-1"></i> @item.Parent.Name
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-primary bg-opacity-10 text-primary">رئيسي</span>
                                }
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">نشط</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">معطل</span>
                                }
                            </td>
                            <td>@item.DisplayOrder</td>
                            <td><code class="text-muted small">@item.Slug</code></td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('حذف القسم؟');">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>