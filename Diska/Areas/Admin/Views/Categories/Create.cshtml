@model Diska.Models.Category
@{
    ViewData["Title"] = "إضافة قسم";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-lg-9">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-primary">إضافة تصنيف جديد</h5>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">إلغاء</a>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" enctype="multipart/form-data">

                    <!-- Tabs Navigation -->
                    <ul class="nav nav-tabs mb-4" id="catTab" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button">بيانات أساسية</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" id="seo-tab" data-bs-toggle="tab" data-bs-target="#seo" type="button">SEO و محركات البحث</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" id="media-tab" data-bs-toggle="tab" data-bs-target="#media" type="button">الصور والأيقونات</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">

                        <!-- General Tab -->
                        <div class="tab-pane fade show active" id="general">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Name" class="form-label">الاسم (عربي)</label>
                                    <input asp-for="Name" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="NameEn" class="form-label">الاسم (إنجليزي)</label>
                                    <input asp-for="NameEn" class="form-control" required />
                                    <span asp-validation-for="NameEn" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">القسم الرئيسي (الأب)</label>
                                    <select asp-for="ParentId" class="form-select" asp-items="ViewBag.Parents">
                                        <option value="">-- قسم رئيسي --</option>
                                    </select>
                                    <div class="form-text">اتركه فارغاً ليكون قسماً رئيسياً</div>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="DisplayOrder" class="form-label">الترتيب</label>
                                    <input asp-for="DisplayOrder" type="number" class="form-control" value="0" />
                                </div>
                                <div class="col-md-3 pt-4">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                                        <label class="form-check-label">تفعيل</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- SEO Tab -->
                        <div class="tab-pane fade" id="seo">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="Slug" class="form-label">رابط القسم (Slug)</label>
                                    <input asp-for="Slug" class="form-control" placeholder="auto-generated-if-empty" />
                                </div>
                                <div class="col-12">
                                    <label asp-for="MetaTitle" class="form-label">عنوان الميتا (Meta Title)</label>
                                    <input asp-for="MetaTitle" class="form-control" />
                                </div>
                                <div class="col-12">
                                    <label asp-for="MetaDescription" class="form-label">وصف الميتا (Meta Description)</label>
                                    <textarea asp-for="MetaDescription" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Media Tab -->
                        <div class="tab-pane fade" id="media">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">صورة القسم</label>
                                    <input type="file" name="imageFile" class="form-control" accept="image/*">
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="IconClass" class="form-label">رمز الأيقونة (FontAwesome)</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i id="iconPreview" class="fas fa-cube"></i></span>
                                        <input asp-for="IconClass" class="form-control" placeholder="fas fa-shopping-cart" oninput="updateIcon(this.value)">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="mt-4 pt-3 border-top text-end">
                        <button type="submit" class="btn btn-primary px-4 fw-bold">حفظ القسم</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateIcon(val) {
            document.getElementById('iconPreview').className = val;
        }
    </script>
}