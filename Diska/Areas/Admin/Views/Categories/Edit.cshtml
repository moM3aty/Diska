@model Diska.Models.Category
@{
    ViewData["Title"] = "تعديل القسم";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-lg-9">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-primary">تعديل: @Model.Name</h5>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">إلغاء</a>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <ul class="nav nav-tabs mb-4" id="catTab" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#general" type="button">بيانات أساسية</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#seo" type="button">SEO</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#media" type="button">الصور</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">

                        <!-- General -->
                        <div class="tab-pane fade show active" id="general">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Name" class="form-label">الاسم (عربي)</label>
                                    <input asp-for="Name" class="form-control" required />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="NameEn" class="form-label">الاسم (إنجليزي)</label>
                                    <input asp-for="NameEn" class="form-control" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">القسم الرئيسي</label>
                                    <select asp-for="ParentId" class="form-select" asp-items="ViewBag.Parents">
                                        <option value="">-- قسم رئيسي --</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="DisplayOrder" class="form-label">الترتيب</label>
                                    <input asp-for="DisplayOrder" type="number" class="form-control" />
                                </div>
                                <div class="col-md-3 pt-4">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" asp-for="IsActive">
                                        <label class="form-check-label">تفعيل</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- SEO -->
                        <div class="tab-pane fade" id="seo">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="Slug" class="form-label">Slug</label>
                                    <input asp-for="Slug" class="form-control" />
                                </div>
                                <div class="col-12">
                                    <label asp-for="MetaTitle" class="form-label">Meta Title</label>
                                    <input asp-for="MetaTitle" class="form-control" />
                                </div>
                                <div class="col-12">
                                    <label asp-for="MetaDescription" class="form-label">Meta Description</label>
                                    <textarea asp-for="MetaDescription" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Media -->
                        <div class="tab-pane fade" id="media">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">صورة القسم</label>
                                    <input type="file" name="imageFile" class="form-control" accept="image/*">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <div class="mt-2">
                                            <img src="~/@Model.ImageUrl" class="rounded border p-1" style="height: 80px;">
                                        </div>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="IconClass" class="form-label">رمز الأيقونة</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i id="iconPreview" class="@(Model.IconClass ?? "fas fa-cube")"></i></span>
                                        <input asp-for="IconClass" class="form-control" oninput="updateIcon(this.value)">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="mt-4 pt-3 border-top text-end">
                        <button type="submit" class="btn btn-primary px-4 fw-bold">حفظ التعديلات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateIcon(val) {
            document.getElementById('iconPreview').className = val;
        }
    </script>
}