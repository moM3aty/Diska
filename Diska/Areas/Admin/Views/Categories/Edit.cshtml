@model Diska.Models.Category
@{
    ViewData["Title"] = "تعديل القسم";
    Layout = "_AdminLayout";
}

<style>
    /* Upload Box Style (Same as Create) */
    .upload-box {
        border: 2px dashed var(--border-color);
        border-radius: 16px;
        padding: 30px;
        text-align: center;
        background-color: var(--bg-body);
        transition: 0.3s;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

        .upload-box:hover {
            border-color: var(--primary-color);
            background-color: rgba(79, 70, 229, 0.05);
        }

    .preview-img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        background: #fff;
        padding: 10px;
        z-index: 2;
    }
</style>

<div class="row justify-content-center fade-up">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm" style="border-radius: 16px; background: var(--bg-card);">
            <div class="card-header bg-transparent py-3 border-bottom d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-primary fw-bold">تعديل: @Model.Name</h5>
                <a asp-action="Index" class="btn btn-sm btn-light border fw-bold text-muted">إلغاء</a>
            </div>

            <div class="card-body p-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Image Upload with Current Image -->
                    <div class="mb-4">
                        <label class="form-label fw-bold small text-muted">صورة القسم</label>
                        <div class="upload-box" onclick="document.getElementById('imageFile').click()">
                            <input type="file" name="imageFile" id="imageFile" class="d-none" accept="image/*" onchange="previewImage(this)">

                            <!-- Display Current Image if exists -->
                            <img id="imgPreview" src="~/@(Model.ImageUrl ?? "images/default-category.png")" class="preview-img" alt="Category Image">

                            <div class="position-absolute bottom-0 w-100 text-center py-1 bg-dark bg-opacity-50 text-white" style="z-index: 3;">
                                <small>اضغط لتغيير الصورة</small>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <!-- Names -->
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">الاسم (عربي)</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">الاسم (إنجليزي)</label>
                            <input asp-for="NameEn" class="form-control" />
                            <span asp-validation-for="NameEn" class="text-danger small"></span>
                        </div>

                        <!-- Parent Category -->
                        <div class="col-md-12">
                            <label class="form-label fw-bold small text-muted">القسم الرئيسي (Parent)</label>
                            <select asp-for="ParentId" class="form-select" asp-items="ViewBag.Parents">
                                <option value="">-- هذا قسم رئيسي --</option>
                            </select>
                        </div>

                        <!-- Other Fields -->
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">Slug (رابط)</label>
                            <input asp-for="Slug" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold small text-muted">الترتيب</label>
                            <input asp-for="DisplayOrder" type="number" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold small text-muted">الحالة</label>
                            <select asp-for="IsActive" class="form-select">
                                <option value="true">نشط</option>
                                <option value="false">مخفي</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <hr class="text-muted opacity-25">
                            <label class="form-label fw-bold small text-muted">وصف الميتا (SEO)</label>
                            <textarea asp-for="MetaDescription" class="form-control" rows="2"></textarea>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top text-end">
                        <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm">
                            <i class="fas fa-save me-2"></i> حفظ التغييرات
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var img = document.getElementById('imgPreview');
                    img.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}