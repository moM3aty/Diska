@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "إنشاء حساب تاجر" : "Register Merchant";
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(isAr ? "ar" : "en")" dir="@(isAr ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | DISKA</title>
    @if (isAr)
    {
        <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
        <style>
            body {
                font-family: 'Cairo';
            }</style>
 }
    else
    {
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
        <style>
            body {
                font-family: 'Roboto';
            }</style>
 }
    <link rel="stylesheet" href="~/style.css">
    <style>
        .auth-logo-img {
            height: 70px;
            width: auto;
            margin: 0 auto 15px;
            display: block;
        }
    </style>
</head>
<body class="auth-body">

    <div class="auth-container" style="margin-top:50px;">
        <div class="auth-header">
            <img src="~/images/logo.png" alt="DISKA Logo" class="auth-logo-img" onerror="this.style.display='none'">
            <h2>@(isAr ? "إنشاء حساب جديد" : "Create Account")</h2>
            <p>@(isAr ? "انضم لأكبر شبكة تجار جملة" : "Join the largest wholesale network")</p>
        </div>

        <form class="auth-form" asp-action="Signup" method="post">
            @if (ViewBag.Error != null)
            {
                <div style="color:red; text-align:center; margin-bottom:10px;">@ViewBag.Error</div>
            }

            <div class="form-group">
                <label>@(isAr ? "الاسم بالكامل" : "Full Name")</label>
                <input type="text" name="fullName" placeholder="@(isAr ? "أدخل اسمك الثلاثي" : "Full Name")" required>
            </div>

            <div class="form-group">
                <label>@(isAr ? "اسم المحل / النشاط" : "Shop Name")</label>
                <input type="text" name="shopName" placeholder="@(isAr ? "مثال: سوبر ماركت الأمانة" : "Ex: Al-Amana Market")" required>
            </div>

            <div class="form-group">
                <label>@(isAr ? "رقم السجل التجاري (اختياري)" : "Commercial Register (Optional)")</label>
                <input type="text" name="commercialReg" placeholder="123456">
            </div>

            <div class="form-group">
                <label>@(isAr ? "رقم الموبايل" : "Phone Number")</label>
                <input type="tel" name="phone" placeholder="01xxxxxxxxx" required>
            </div>

            <div class="form-group">
                <label>@(isAr ? "كلمة المرور" : "Password")</label>
                <input type="password" name="password" placeholder="********" required>
            </div>

            <button class="btn primary w-100">@(isAr ? "تسجيل حساب" : "Register")</button>
        </form>

        <div class="auth-footer">
            <p>@(isAr ? "لديك حساب بالفعل؟" : "Already have an account?") <a asp-action="Login">@(isAr ? "تسجيل الدخول" : "Login")</a></p>
        </div>

        <a asp-controller="Home" asp-action="Index" class="back-home">@(isAr ? "العودة للرئيسية" : "Back to Home")</a>
    </div>

</body>
</html>