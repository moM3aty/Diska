@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "إنشاء حساب" : "Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(isAr ? "ar" : "en")" dir="@(isAr ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DISKA</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        .type-toggle {
            display: flex;
            background: #f1f5f9;
            padding: 5px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

            .type-toggle label {
                flex: 1;
                text-align: center;
                padding: 10px;
                cursor: pointer;
                border-radius: 8px;
                transition: 0.3s;
                font-weight: bold;
                color: #64748b;
                margin: 0;
            }

            .type-toggle input {
                display: none;
            }

                .type-toggle input:checked + label {
                    background: #fff;
                    color: var(--primary); /* Uses CSS var from style.css */
                    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
                }
        /* Fallback for primary color if var not loaded yet */
        :root {
            --primary: #0F172A;
        }
    </style>
</head>
<body class="auth-body">

    <div class="auth-container">
        <div class="auth-header">
            <h2>@(isAr ? "إنشاء حساب جديد" : "Create Account")</h2>
            <p>@(isAr ? "انضم لعائلة ديسكا" : "Join Diska Family")</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div style="background:#fee2e2; color:#ef4444; padding:10px; border-radius:8px; margin-bottom:20px; text-align:center; border:1px solid #fecaca;">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Signup" method="post">

            <div class="type-toggle">
                <input type="radio" name="type" id="typeCust" value="Customer" checked onchange="toggleShop(false)">
                <label for="typeCust">👤 @(isAr ? "عميل / مشتري" : "Customer")</label>

                <input type="radio" name="type" id="typeMerch" value="Merchant" onchange="toggleShop(true)">
                <label for="typeMerch">🏪 @(isAr ? "تاجر / مورد" : "Merchant")</label>
            </div>

            <div class="form-group">
                <label>@(isAr ? "الاسم بالكامل" : "Full Name")</label>
                <input type="text" name="fullName" required>
            </div>

            <div class="form-group">
                <label>@(isAr ? "رقم الهاتف" : "Phone Number")</label>
                <input type="tel" name="phone" placeholder="01xxxxxxxxx" required style="direction:ltr; text-align:@(isAr ? "right" : "left");">
            </div>

            <div class="form-group" id="shopField" style="display:none;">
                <label>@(isAr ? "اسم المحل / النشاط" : "Shop Name")</label>
                <input type="text" name="shopName">
            </div>

            <div class="form-group" id="regField" style="display:none;">
                <label>@(isAr ? "السجل التجاري (اختياري)" : "Commercial Register")</label>
                <input type="text" name="commercialReg">
            </div>

            <div class="form-group">
                <label>@(isAr ? "كلمة المرور" : "Password")</label>
                <input type="password" name="password" placeholder="********" required>
            </div>

            <button type="submit" class="btn primary add-btn" style="width:100%;">@(isAr ? "إنشاء الحساب" : "Register")</button>
        </form>

        <div class="auth-footer">
            @(isAr ? "لديك حساب بالفعل؟" : "Already registered?")
            <a asp-action="Login" style="font-weight:bold;">@(isAr ? "تسجيل الدخول" : "Login")</a>
        </div>
    </div>

    <script>
        function toggleShop(show) {
            document.getElementById('shopField').style.display = show ? 'block' : 'none';
            document.getElementById('regField').style.display = show ? 'block' : 'none';
        }
    </script>

</body>
</html>