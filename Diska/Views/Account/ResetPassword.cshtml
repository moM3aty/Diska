@model Diska.Controllers.ResetPasswordViewModel
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تعيين كلمة المرور" : "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(isAr ? "ar" : "en")" dir="@(isAr ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DISKA</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body class="auth-body">
    <div class="auth-container">
        <div class="auth-header">
            <h2>@(isAr ? "كلمة المرور الجديدة" : "New Password")</h2>
            <p>@(isAr ? "أدخل كلمة المرور الجديدة لحسابك" : "Enter your new password")</p>
        </div>

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Code" />
            <input type="hidden" asp-for="Phone" />

            <div class="form-group">
                <label>@(isAr ? "كلمة المرور الجديدة" : "New Password")</label>
                <input asp-for="Password" type="password" required>
            </div>

            <div class="form-group">
                <label>@(isAr ? "تأكيد كلمة المرور" : "Confirm Password")</label>
                <input asp-for="ConfirmPassword" type="password" required>
            </div>

            <button type="submit" class="btn primary add-btn" style="width:100%;">@(isAr ? "حفظ التغيير" : "Reset Password")</button>
        </form>
    </div>
</body>
</html>