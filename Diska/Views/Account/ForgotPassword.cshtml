@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "نسيت كلمة المرور" : "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(isAr ? "ar" : "en")" dir="@(isAr ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DISKA</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body class="auth-body">
    <div class="auth-container">
        <div class="auth-header">
            <h2>@(isAr ? "استعادة كلمة المرور" : "Reset Password")</h2>
            <p>@(isAr ? "أدخل رقم هاتفك لاستلام رمز التحقق" : "Enter your phone to receive reset code")</p>
        </div>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <label>@(isAr ? "رقم الهاتف" : "Phone Number")</label>
                <input type="tel" name="phone" required style="direction:ltr; text-align:@(isAr ? "right" : "left");">
            </div>
            <button type="submit" class="btn primary add-btn" style="width:100%;">@(isAr ? "إرسال" : "Submit")</button>
        </form>

        <div class="auth-footer">
            <a asp-action="Login" class="back-home">@(isAr ? "العودة لتسجيل الدخول" : "Back to Login")</a>
        </div>
    </div>
</body>
</html>