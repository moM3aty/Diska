@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تم الإرسال" : "Check Your Messages";
    Layout = null;

    string currentTheme = Context.Request.Cookies["theme"] ?? "light";
}

<!DOCTYPE html>
<html lang="@(isAr ? "ar" : "en")" dir="@(isAr ? "rtl" : "ltr")" data-bs-theme="@currentTheme">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DISKA</title>
    <link rel="icon" type="image/x-icon" href="~/images/logo2.png">

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* =========================================
                   PREMIUM AUTH STYLES (Standalone)
                   ========================================= */
        :root {
            --auth-bg: #f8fafc;
            --auth-card-bg: #ffffff;
            --auth-text-main: #0f172a;
            --auth-text-muted: #64748b;
            --auth-border: #e2e8f0;
            --auth-primary: #0F172A;
            --auth-accent: #FACC15;
            --auth-shadow: 0 20px 40px -10px rgba(0,0,0,0.1);
        }

        [data-bs-theme="dark"] {
            --auth-bg: #020617;
            --auth-card-bg: #1e293b;
            --auth-text-main: #f8fafc;
            --auth-text-muted: #94a3b8;
            --auth-border: rgba(255,255,255,0.05);
            --auth-primary: #6366f1;
            --auth-accent: #FACC15;
            --auth-shadow: 0 20px 40px -10px rgba(0,0,0,0.5);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: var(--auth-bg);
            color: var(--auth-text-main);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s, color 0.3s;
        }

        .auth-container {
            width: 100%;
            max-width: 480px;
            padding: 20px;
        }

        .auth-card {
            background: var(--auth-card-bg);
            border: 1px solid var(--auth-border);
            border-radius: 24px;
            padding: 40px;
            text-align: center;
            box-shadow: var(--auth-shadow);
            position: relative;
            overflow: hidden;
            transition: background-color 0.3s, border-color 0.3s;
        }

            /* Decorative Top Line */
            .auth-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 6px;
                background: linear-gradient(90deg, var(--auth-primary), var(--auth-accent));
            }

        .auth-icon {
            width: 80px;
            height: 80px;
            background: rgba(15, 23, 42, 0.05);
            color: var(--auth-primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            font-size: 2.5rem;
            transition: 0.3s;
        }

        [data-bs-theme="dark"] .auth-icon {
            background: rgba(255, 255, 255, 0.05);
            color: #fff;
        }

        .auth-title {
            font-size: 1.8rem;
            font-weight: 800;
            margin-bottom: 10px;
            color: var(--auth-text-main);
        }

        .auth-desc {
            color: var(--auth-text-muted);
            font-size: 1rem;
            margin-bottom: 30px;
            line-height: 1.6;
        }

        .btn-submit {
            width: 100%;
            padding: 14px;
            border-radius: 12px;
            background: var(--auth-primary);
            color: #fff;
            border: none;
            font-weight: 700;
            font-size: 1rem;
            cursor: pointer;
            transition: 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-decoration: none;
        }

            .btn-submit:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px -5px rgba(0,0,0,0.2);
                opacity: 0.95;
                color: #fff;
            }
    </style>
</head>
<body>

    <div class="auth-container">
        <div class="auth-card">

            <div class="auth-icon">
                <i class="fas fa-envelope-open-text"></i>
            </div>

            <h1 class="auth-title">@(isAr ? "تم الإرسال" : "Check Your Messages")</h1>
            <p class="auth-desc">
                @(isAr ? "إذا كان الرقم مسجلاً لدينا، فقد تم إرسال التعليمات." : "If the number is registered, instructions have been sent.")
            </p>

            <a asp-action="Login" class="btn-submit">
                <i class="fas @(isAr ? "fa-arrow-right" : "fa-arrow-left")"></i>
                @(isAr ? "عودة للدخول" : "Back to Login")
            </a>

        </div>
    </div>

</body>
</html>