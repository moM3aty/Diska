@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تسجيل الدخول" : "Login";
    Layout = null;

    string currentTheme = Context.Request.Cookies["theme"] ?? "light";
}

<!DOCTYPE html>
<html lang="@(isAr ? "ar" : "en")" dir="@(isAr ? "rtl" : "ltr")" data-bs-theme="@currentTheme">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DISKA</title>

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* =========================================
                   PREMIUM AUTH STYLES (Standalone)
                   ========================================= */
        :root {
            --auth-bg: #f8fafc;
            --auth-card-bg: #ffffff;
            --auth-text-main: #0f172a;
            --auth-text-muted: #64748b;
            --auth-border: #e2e8f0;
            --auth-primary: #0F172A;
            --auth-accent: #FACC15;
            --auth-shadow: 0 20px 40px -10px rgba(0,0,0,0.1);
            --input-bg: #f1f5f9;
            --focus-ring: rgba(15, 23, 42, 0.1);
            --danger-bg: #fee2e2;
            --danger-text: #ef4444;
            --danger-border: #fecaca;
        }

        [data-bs-theme="dark"] {
            --auth-bg: #020617;
            --auth-card-bg: #1e293b;
            --auth-text-main: #f8fafc;
            --auth-text-muted: #94a3b8;
            --auth-border: rgba(255,255,255,0.05);
            --auth-primary: #6366f1;
            --auth-accent: #FACC15;
            --auth-shadow: 0 20px 40px -10px rgba(0,0,0,0.5);
            --input-bg: #0f172a;
            --focus-ring: rgba(99, 102, 241, 0.25);
            --danger-bg: rgba(239, 68, 68, 0.1);
            --danger-text: #f87171;
            --danger-border: rgba(239, 68, 68, 0.2);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: var(--auth-bg);
            color: var(--auth-text-main);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s, color 0.3s;
        }

        .auth-container {
            width: 100%;
            max-width: 450px;
            padding: 20px;
        }

        .auth-card {
            background: var(--auth-card-bg);
            border: 1px solid var(--auth-border);
            border-radius: 24px;
            padding: 40px;
            text-align: center;
            box-shadow: var(--auth-shadow);
            position: relative;
            overflow: hidden;
            transition: background-color 0.3s, border-color 0.3s;
        }

            /* Decorative Top Line */
            .auth-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 6px;
                background: linear-gradient(90deg, var(--auth-primary), var(--auth-accent));
            }

        .logo-icon {
            width: 70px;
            height: auto;
            margin: 0 auto 20px;
            display: block;
            filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
        }

        .auth-title {
            font-size: 1.8rem;
            font-weight: 800;
            margin-bottom: 8px;
            color: var(--auth-text-main);
        }

        .auth-desc {
            color: var(--auth-text-muted);
            font-size: 0.95rem;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: start;
        }

        .form-label {
            display: block;
            font-weight: 700;
            margin-bottom: 8px;
            font-size: 0.9rem;
            color: var(--auth-text-main);
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border-radius: 12px;
            border: 2px solid var(--auth-border);
            background-color: var(--input-bg);
            color: var(--auth-text-main);
            font-size: 1rem;
            font-family: inherit;
            transition: all 0.3s ease;
            outline: none;
        }

            .form-control:focus {
                border-color: var(--auth-primary);
                background-color: var(--auth-card-bg);
                box-shadow: 0 0 0 4px var(--focus-ring);
            }

        .auth-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            font-size: 0.9rem;
        }

        .remember-me {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--auth-text-muted);
            cursor: pointer;
        }

            .remember-me input {
                accent-color: var(--auth-primary);
                width: 16px;
                height: 16px;
                cursor: pointer;
            }

        .forgot-pass {
            color: var(--auth-primary);
            font-weight: 600;
            text-decoration: none;
            transition: 0.2s;
        }

            .forgot-pass:hover {
                text-decoration: underline;
            }

        .btn-submit {
            width: 100%;
            padding: 14px;
            border-radius: 12px;
            background: var(--auth-primary);
            color: #fff;
            border: none;
            font-weight: 700;
            font-size: 1rem;
            cursor: pointer;
            transition: 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .btn-submit:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px -5px rgba(0,0,0,0.2);
                opacity: 0.95;
                color: #fff;
            }

        .auth-footer {
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid var(--auth-border);
            color: var(--auth-text-muted);
            font-size: 0.9rem;
        }

            .auth-footer a {
                color: var(--auth-primary);
                font-weight: 700;
                text-decoration: none;
                transition: 0.2s;
            }

                .auth-footer a:hover {
                    text-decoration: underline;
                }

        .back-home {
            display: block;
            margin-top: 15px;
            color: var(--auth-text-muted) !important;
            font-size: 0.85rem;
            font-weight: 600 !important;
        }

            .back-home:hover {
                color: var(--auth-primary) !important;
            }

        .alert-error {
            background: var(--danger-bg);
            color: var(--danger-text);
            padding: 12px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
            font-size: 0.9rem;
            border: 1px solid var(--danger-border);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
    </style>
</head>
<body>

    <div class="auth-container">
        <div class="auth-card">

            <img src="~/images/logo2.png" class="logo-icon" alt="Logo" onerror="this.style.display='none'; this.parentElement.insertAdjacentHTML('afterbegin', '<i class=\'fas fa-user-circle fa-3x mb-3\' style=\'color:var(--auth-primary)\'></i>')">

            <h1 class="auth-title">@(isAr ? "مرحباً بعودتك" : "Welcome Back")</h1>
            <p class="auth-desc">@(isAr ? "سجل دخولك للمتابعة" : "Sign in to continue")</p>

            @if (ViewBag.Error != null)
            {
                <div class="alert-error">
                    <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
                </div>
            }

            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="form-group">
                    <label class="form-label">@(isAr ? "رقم الهاتف" : "Phone Number")</label>
                    <input type="tel" name="phone" class="form-control" placeholder="01xxxxxxxxx" required style="direction:ltr; text-align:@(isAr ? "right" : "left");">
                </div>

                <div class="form-group">
                    <label class="form-label">@(isAr ? "كلمة المرور" : "Password")</label>
                    <input type="password" name="password" class="form-control" placeholder="********" required>
                </div>

                <div class="auth-options">
                    <label class="remember-me">
                        <input type="checkbox" name="rememberMe" value="true"> @(isAr ? "تذكرني" : "Remember me")
                    </label>
                    <a asp-action="ForgotPassword" class="forgot-pass">@(isAr ? "نسيت كلمة المرور؟" : "Forgot Password?")</a>
                </div>

                <button type="submit" class="btn-submit">
                    @(isAr ? "دخول" : "Login")
                    <i class="fas fa-sign-in-alt"></i>
                </button>
            </form>

            <div class="auth-footer">
                @(isAr ? "ليس لديك حساب؟" : "Don't have an account?")
                <a asp-action="Signup">@(isAr ? "إنشاء حساب جديد" : "Sign Up")</a>

                <a asp-controller="Home" asp-action="Index" class="back-home">
                    <i class="fas @(isAr ? "fa-arrow-right" : "fa-arrow-left")"></i> @(isAr ? "العودة للرئيسية" : "Back to Home")
                </a>
            </div>

        </div>
    </div>

</body>
</html>