@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تسجيل الدخول" : "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(isAr ? "ar" : "en")" dir="@(isAr ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | DISKA</title>
    @if (isAr)
    {
        <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
        <style>
            body {
                font-family: 'Cairo';
            }</style>
    }
    else
    {
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
        <style>
            body {
                font-family: 'Roboto';
            }</style>
    }
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        .auth-logo-img {
            height: 80px;
            width: auto;
            margin: 0 auto 15px;
            display: block;
        }

        .auth-container {
            max-width: 400px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: bold;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #ddd;
                border-radius: 8px;
                outline: none;
            }

        .btn.primary {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            background: #0F172A;
            color: #FACC15;
            font-weight: bold;
            cursor: pointer;
        }
    </style>
</head>
<body style="background-color: #F8FAFC;">

    <div class="auth-container">
        <div class="auth-header" style="text-align: center; margin-bottom: 30px;">
            <img src="~/images/logo.png" alt="DISKA" class="auth-logo-img" onerror="this.style.display='none'">
            <h2 style="color: #0F172A;">@(isAr ? "تسجيل الدخول" : "Welcome Back")</h2>
            <p style="color: #666;">@(isAr ? "أدخل رقم الموبايل وكلمة المرور" : "Login with your phone number")</p>
        </div>

        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            @if (ViewBag.Error != null)
            {
                <div style="background-color: #fee2e2; color: #dc2626; padding: 10px; border-radius: 8px; margin-bottom: 20px; text-align: center; border: 1px solid #fecaca;">
                    @ViewBag.Error
                </div>
            }

            <div class="form-group">
                <label>@(isAr ? "رقم الموبايل" : "Phone Number")</label>
                <input type="tel" name="phone" placeholder="01xxxxxxxxx" required style="direction: ltr; text-align: right;">
            </div>
            <div class="form-group">
                <label>@(isAr ? "كلمة المرور" : "Password")</label>
                <input type="password" name="password" placeholder="********" required>
            </div>

            <div class="form-group" style="display: flex; align-items: center; gap: 10px;">
                <input type="checkbox" name="rememberMe" id="rememberMe" value="true" style="width: auto; margin: 0;">
                <label for="rememberMe" style="margin: 0; font-weight: normal; cursor: pointer;">@(isAr ? "تذكرني دائماً" : "Keep me signed in")</label>
            </div>

            <button type="submit" class="btn primary">@(isAr ? "دخول" : "Login")</button>
        </form>

        <div style="text-align: center; margin-top: 20px; font-size: 0.9rem;">
            <p>@(isAr ? "ليس لديك حساب؟" : "New to Diska?") <a asp-action="Signup" style="color: #0F172A; font-weight: bold;">@(isAr ? "إنشاء حساب جديد" : "Create Account")</a></p>
            <a asp-controller="Home" asp-action="Index" style="display: block; margin-top: 15px; color: #666; text-decoration: none;">@(isAr ? "العودة للرئيسية" : "Back to Home")</a>
        </div>
    </div>

</body>
</html>