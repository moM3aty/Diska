@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تسجيل الدخول" : "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(isAr ? "ar" : "en")" dir="@(isAr ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | DISKA</title>
    @if (isAr)
    {
        <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
        <style>
            body {
                font-family: 'Cairo';
            }</style>
 }
    else
    {
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
        <style>
            body {
                font-family: 'Roboto';
            }</style>
 }
    <link rel="stylesheet" href="~/style.css">
    <style>
        .auth-logo-img {
            height: 80px;
            width: auto;
            margin: 0 auto 15px;
            display: block;
        }
    </style>
</head>
<body class="auth-body">

    <div class="auth-container">
        <div class="auth-header">
            <img src="~/images/logo.png" alt="DISKA Logo" class="auth-logo-img" onerror="this.style.display='none'">
            <h2>@(isAr ? "مرحباً بك في DISKA" : "Welcome to DISKA")</h2>
            <p>@(isAr ? "سجل دخولك برقم الموبايل" : "Log in with your phone number")</p>
        </div>

        <form class="auth-form" asp-action="Login" method="post">
            @if (ViewBag.Error != null)
            {
                <div style="background-color: #fee2e2; color: #dc2626; padding: 10px; border-radius: 8px; margin-bottom: 15px; font-size: 0.9rem; border: 1px solid #fecaca;">
                    @ViewBag.Error
                </div>
            }

            <div class="form-group">
                <label>@(isAr ? "رقم الموبايل" : "Phone Number")</label>
                <!-- تم التأكد أن الاسم phone ليتطابق مع الكنترولر -->
                <input type="tel" name="phone" placeholder="@(isAr ? "أدخل رقم الموبايل" : "Enter phone number")" required>
            </div>
            <div class="form-group">
                <label>@(isAr ? "كلمة المرور" : "Password")</label>
                <input type="password" name="password" placeholder="********" required>
            </div>

            <button type="submit" class="btn primary w-100">@(isAr ? "تسجيل الدخول" : "Login")</button>
        </form>

        <div class="auth-footer">
            <p>@(isAr ? "ليس لديك حساب؟" : "Don't have an account?") <a asp-action="Signup">@(isAr ? "إنشاء حساب جديد" : "Create new account")</a></p>
            <!-- <a href="#" class="forgot-pass">@(isAr ? "نسيت كلمة المرور؟" : "Forgot Password?")</a> -->
        </div>

        <div style="margin-top: 20px; border-top: 1px solid #eee; padding-top: 15px;">
            <p>@(isAr ? "هل تريد بيع منتجاتك؟" : "Want to sell your products?") <a asp-controller="Account" asp-action="Signup" style="color: var(--accent); font-weight: bold;">@(isAr ? "سجل كتاجر الآن" : "Register as Merchant")</a></p>
        </div>

        <a asp-controller="Home" asp-action="Index" class="back-home">@(isAr ? "العودة للرئيسية" : "Back to Home")</a>
    </div>

</body>
</html>