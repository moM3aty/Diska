@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تسجيل الدخول" : "Login";
    Layout = null; // صفحة كاملة بدون Layout
}

<!DOCTYPE html>
<html lang="@(isAr ? "ar" : "en")" dir="@(isAr ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DISKA</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body class="auth-body">

    <div class="auth-container">
        <div class="auth-header">
            <img src="~/images/logo.png" class="logo-icon" alt="Logo" style="width:60px; display:block;" onerror="this.style.display='none'">
            <h2>@(isAr ? "مرحباً بعودتك" : "Welcome Back")</h2>
            <p>@(isAr ? "سجل دخولك للمتابعة" : "Sign in to continue")</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div style="background:#fee2e2; color:#ef4444; padding:10px; border-radius:8px; margin-bottom:20px; text-align:center; font-size:0.9rem; border:1px solid #fecaca;">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <div class="form-group">
                <label>@(isAr ? "رقم الهاتف" : "Phone Number")</label>
                <input type="tel" name="phone" placeholder="01xxxxxxxxx" required style="direction:ltr; text-align:@(isAr ? "right" : "left");">
            </div>

            <div class="form-group">
                <label>@(isAr ? "كلمة المرور" : "Password")</label>
                <input type="password" name="password" placeholder="********" required>
            </div>

            <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px; font-size:0.9rem;">
                <label style="display:flex; align-items:center; gap:5px; cursor:pointer;">
                    <input type="checkbox" name="rememberMe" value="true"> @(isAr ? "تذكرني" : "Remember me")
                </label>
                <a asp-action="ForgotPassword" class="forgot-pass">@(isAr ? "نسيت كلمة المرور؟" : "Forgot Password?")</a>
            </div>

            <button type="submit" class="btn primary add-btn" style="width:100%;">@(isAr ? "دخول" : "Login")</button>
        </form>

        <div class="auth-footer">
            @(isAr ? "ليس لديك حساب؟" : "Don't have an account?")
            <a asp-action="Signup" style="font-weight:bold;">@(isAr ? "إنشاء حساب جديد" : "Sign Up")</a>

            <a asp-controller="Home" asp-action="Index" class="back-home" style="display:block; margin-top:15px; font-size:0.9rem;">@(isAr ? "العودة للرئيسية" : "Back to Home")</a>
        </div>
    </div>

</body>
</html>