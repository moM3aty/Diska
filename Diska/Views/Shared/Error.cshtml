@model ErrorViewModel
@{
    ViewData["Title"] = "خطأ";
}

<div class="container" style="text-align: center; padding: 100px 20px;">
    <h1 class="text-danger" style="font-size: 3rem; margin-bottom: 20px;">عذراً!</h1>
    <h2 class="text-danger">حدث خطأ أثناء معالجة طلبك.</h2>

    @if (Model.ShowRequestId)
    {
        <p style="color: #777; margin-top: 20px;">
            <strong>معرف الطلب:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a href="/" class="btn primary" style="margin-top: 30px; display: inline-block;">العودة للصفحة الرئيسية</a>
</div>