@model IEnumerable<Diska.Models.GroupDeal>
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "العروض والصفقات" : "Deals & Offers";
    // Ensure theme is read if needed for initial server-side rendering logic
    string currentTheme = Context.Request.Cookies["theme"] ?? "light";
}

<style>
    /* =========================================
           PREMIUM DEALS STYLES (Light & Dark)
           ========================================= */
    :root {
        --d-bg-body: #f8fafc;
        --d-card-bg: #ffffff;
        --d-text-main: #0f172a;
        --d-text-muted: #64748b;
        --d-border: #e2e8f0;
        --d-primary: #0F172A;
        --d-accent: #FACC15;
        --d-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
        --d-progress-bg: #e2e8f0;
    }

    [data-bs-theme="dark"] {
        --d-bg-body: #020617; /* Deep Dark */
        --d-card-bg: #1e293b; /* Slate 800 */
        --d-text-main: #f8fafc; /* Light Text */
        --d-text-muted: #94a3b8; /* Muted Text */
        --d-border: rgba(255, 255, 255, 0.08);
        --d-primary: #f8fafc; /* White/Light for headings */
        --d-accent: #FACC15; /* Gold remains */
        --d-shadow: 0 10px 40px -5px rgba(0, 0, 0, 0.4);
        --d-progress-bg: rgba(255, 255, 255, 0.1);
    }

    body {
        background-color: var(--d-bg-body);
        transition: background-color 0.3s ease;
    }

    .section-padding {
        padding: 60px 0;
        min-height: 80vh;
    }

    .section-header {
        margin-bottom: 50px;
        text-align: center;
        position: relative;
    }

        .section-header h2 {
            color: var(--d-primary);
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 10px;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .section-header p {
            color: var(--d-text-muted);
            font-size: 1.1rem;
        }

    /* Products Grid */
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
    }

    /* Deal Card */
    .deal-card {
        background: var(--d-card-bg);
        border-radius: 20px;
        overflow: hidden;
        position: relative;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: var(--d-shadow);
        border: 2px solid var(--d-accent); /* Accent Border for Deals */
        display: flex;
        flex-direction: column;
    }

        .deal-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px -5px rgba(250, 204, 21, 0.15); /* Gold Glow */
        }

    [data-bs-theme="dark"] .deal-card:hover {
        box-shadow: 0 20px 40px -5px rgba(250, 204, 21, 0.1);
    }

    /* Flash Badge */
    .flash-badge {
        position: absolute;
        top: 15px;
        left: 15px; /* Left aligned for badge usually */
        z-index: 10;
        background: var(--d-accent);
        color: #000;
        font-weight: 800;
        padding: 6px 12px;
        border-radius: 50px;
        font-size: 0.8rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        align-items: center;
        gap: 5px;
    }

    html[dir="rtl"] .flash-badge {
        left: auto;
        right: 15px;
    }

    /* Image */
    .product-img {
        height: 220px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff; /* Keep image bg white */
        padding: 20px;
        border-bottom: 1px solid var(--d-border);
        position: relative;
        overflow: hidden;
    }

        .product-img img {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
            transition: transform 0.5s ease;
        }

    .deal-card:hover .product-img img {
        transform: scale(1.08);
    }

    /* Info */
    .product-info {
        padding: 25px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

        .product-info h4 {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--d-text-main);
            margin-bottom: 8px;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            height: 3em; /* Approximate height for 2 lines */
        }

        .product-info p {
            color: var(--d-text-muted);
            font-size: 0.9rem;
            margin-bottom: 15px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    /* Pricing */
    .pricing {
        margin-bottom: 15px;
    }

    .discount-badge {
        background: #ef4444; /* Red for discount */
        color: #fff;
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 800;
        font-size: 0.9rem;
        display: inline-block;
    }

    /* Progress Bar */
    .progress-container {
        margin-top: auto; /* Push to bottom before button */
        margin-bottom: 20px;
    }

    .progress-stats {
        display: flex;
        justify-content: space-between;
        font-size: 0.8rem;
        margin-bottom: 6px;
        color: var(--d-text-muted);
        font-weight: 600;
    }

    .progress-bar-bg {
        height: 8px;
        background-color: var(--d-progress-bg);
        border-radius: 4px;
        overflow: hidden;
    }

    .progress-bar-fill {
        height: 100%;
        background: linear-gradient(90deg, #22c55e, #4ade80);
        border-radius: 4px;
        transition: width 1s ease;
    }

    /* Button */
    .card-actions {
        margin-top: auto;
    }

    .btn.primary {
        background-color: var(--d-primary);
        color: var(--d-card-bg); /* Contrast */
        width: 100%;
        padding: 12px;
        border-radius: 10px;
        font-weight: 700;
        text-align: center;
        text-decoration: none;
        transition: 0.3s;
        display: block;
        border: 2px solid transparent;
    }

    [data-bs-theme="dark"] .btn.primary {
        background-color: var(--d-accent);
        color: #000;
    }

    .btn.primary:hover {
        background-color: transparent;
        color: var(--d-primary);
        border-color: var(--d-primary);
    }

    [data-bs-theme="dark"] .btn.primary:hover {
        background-color: transparent;
        color: var(--d-accent);
        border-color: var(--d-accent);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: var(--d-card-bg);
        border-radius: 24px;
        border: 2px dashed var(--d-border);
        box-shadow: var(--d-shadow);
        max-width: 600px;
        margin: 0 auto;
    }

    .empty-icon {
        color: var(--d-text-muted);
        opacity: 0.5;
        margin-bottom: 25px;
        font-size: 4rem;
    }

    .empty-text {
        color: var(--d-text-muted);
        font-size: 1.1rem;
        margin-bottom: 30px;
    }

    /* Animation */
    .fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }
    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<section class="section-padding fade-up">
    <div class="container">

        <div class="section-header">
            <div>
                <h2>
                    <i class="fas fa-fire" style="color: #f59e0b;"></i> @(isAr ? "أقوى العروض والصفقات" : "Hot Deals & Offers")
                </h2>
                <p>@(isAr ? "اغتنم الفرصة وتسوق بأفضل الأسعار قبل انتهاء الوقت" : "Grab the chance and shop with best prices before time runs out")</p>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="empty-state">
                <i class="fas fa-hourglass-end empty-icon"></i>
                <h3 style="color:var(--d-text-main); font-weight:700; margin-bottom:10px;">@(isAr ? "لا توجد عروض نشطة حالياً." : "No active deals at the moment.")</h3>
                <p class="empty-text">@(isAr ? "تابعنا لاحقاً للحصول على عروض حصرية." : "Check back later for exclusive deals.")</p>
                <a asp-controller="Home" asp-action="Index" class="btn primary small" style="display:inline-block; width:auto; padding: 12px 30px; border-radius:50px;">
                    @(isAr ? "تصفح المنتجات" : "Browse Products")
                </a>
            </div>
        }
        else
        {
            <div class="products-grid">
                @foreach (var deal in Model)
                {
                    var timeLeft = deal.EndDate - DateTime.Now;
                    var percent = deal.TargetQuantity > 0 ? Math.Min((double)deal.ReservedQuantity / deal.TargetQuantity * 100, 100) : 0;

                    <div class="deal-card">

                        <div class="flash-badge">
                            <i class="far fa-clock"></i>
                            <span>@timeLeft.Days @(isAr ? "يوم باقي" : "Days left")</span>
                        </div>

                        <a asp-action="Details" asp-route-id="@deal.Id" class="product-img">
                            @if (deal.Product != null)
                            {
                                <img src="~/@deal.Product.ImageUrl" alt="@deal.Title" onerror="this.src='/images/default.png'">
                            }
                            else
                            {
                                <!-- صورة افتراضية للعروض العامة -->
                                <div style="display:flex; align-items:center; justify-content:center; width:100%; height:100%; color:#cbd5e1;">
                                    <i class="fas fa-tags fa-5x"></i>
                                </div>
                            }
                        </a>

                        <div class="product-info">
                            <a asp-action="Details" asp-route-id="@deal.Id" style="text-decoration:none; color:inherit;">
                                <h4>@deal.Title</h4>
                            </a>

                            <p>
                                @if (deal.Product != null)
                                {
                                    <span>@(isAr? deal.Product.Name : deal.Product.NameEn)</span>
                                }
                                else if (deal.Category != null)
                                {
                                    <span>@(isAr ? "خصم على قسم " + deal.Category.Name : "Discount on " + deal.Category.NameEn)</span>
                                }
                            </p>

                            <div class="pricing">
                                <span class="discount-badge">
                                    @(deal.IsPercentage ? $"{deal.DiscountValue:0}% OFF" : (isAr ? $"خصم {deal.DiscountValue:N0} ج.م" : $"{deal.DiscountValue:N0} EGP OFF"))
                                </span>
                            </div>

                            @if (deal.TargetQuantity > 0)
                            {
                                <div class="progress-container">
                                    <div class="progress-stats">
                                        <span>@(isAr ? "المحجوز" : "Reserved"): @deal.ReservedQuantity</span>
                                        <span>@(isAr ? "الهدف" : "Target"): @deal.TargetQuantity</span>
                                    </div>
                                    <div class="progress-bar-bg">
                                        <div class="progress-bar-fill" style="width:@percent%"></div>
                                    </div>
                                </div>
                            }

                            <div class="card-actions">
                                <a asp-action="Details" asp-route-id="@deal.Id" class="btn primary">
                                    @(isAr ? "عرض التفاصيل" : "View Details")
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>