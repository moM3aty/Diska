@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تواصل معنا" : "Contact Us";
}
<style>
    .contact-page-wrapper {
        display: grid;
        grid-template-columns: 1fr 1.5fr;
        gap: 40px;
        margin-top: 30px;
    }

    .contact-info-card {
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        border: 1px solid var(--border);
        height: fit-content;
    }

    .c-item {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        margin-bottom: 25px;
    }

        .c-item .icon {
            width: 50px;
            height: 50px;
            background: #f0f9ff;
            color: var(--primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .c-item h4 {
            margin: 0 0 5px;
            color: var(--text-dark);
        }

        .c-item p {
            margin: 0;
            color: #666;
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .c-item a {
            color: var(--primary);
            font-weight: bold;
        }

    .map-container {
        margin-top: 20px;
        border-radius: 10px;
        overflow: hidden;
        height: 250px;
        border: 1px solid var(--border);
    }

    .contact-form-card {
        background: #fff;
        padding: 40px;
        border-radius: 15px;
        border: 1px solid var(--border);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.02);
    }

        .contact-form-card h2 {
            color: var(--primary);
            margin-bottom: 10px;
        }

        .contact-form-card p {
            color: #666;
            margin-bottom: 30px;
        }

    @@media (max-width: 768px) {
        .contact-page-wrapper

    {
        grid-template-columns: 1fr;
    }

    .contact-form-card {
        order: -1;
    }

    .header-actions a.action-item {
        display: none !important;
    }

    .mobile-menu-btn {
        display: block !important;
    }

    }
</style>
<section class="section-padding">
    <div class="container">

        <div class="breadcrumb">
            <a asp-controller="Home" asp-action="Index">@(isAr ? "الرئيسية" : "Home")</a> / <span>@(isAr ? "تواصل معنا" : "Contact Us")</span>
        </div>

        <div class="contact-page-wrapper">

            <div class="contact-info-card">
                <div class="c-item">
                    <div class="icon"><i class="fas fa-map-marker-alt"></i></div>
                    <div>
                        <h4>@(isAr ? "المقر الرئيسي" : "Headquarters")</h4>
                        <p>@(isAr ? "123 شارع التسعين، التجمع الخامس، القاهرة، مصر." : "123 El Teseen St, 5th Settlement, Cairo, Egypt.")</p>
                    </div>
                </div>

                <div class="c-item">
                    <div class="icon"><i class="fas fa-phone-alt"></i></div>
                    <div>
                        <h4>@(isAr ? "أرقام الهاتف" : "Phone Numbers")</h4>
                        <p>@(isAr ? "المبيعات" : "Sales"): <a href="tel:01000000000">01000000000</a></p>
                        <p>@(isAr ? "الدعم الفني" : "Technical Support"): <a href="tel:01100000000">01100000000</a></p>
                    </div>
                </div>

                <div class="c-item">
                    <div class="icon"><i class="fas fa-envelope"></i></div>
                    <div>
                        <h4>@(isAr ? "البريد الإلكتروني" : "Email Address")</h4>
                        <p><a href="mailto:support@diska.com">support@diska.com</a></p>
                        <p><a href="mailto:sales@diska.com">sales@diska.com</a></p>
                    </div>
                </div>

                <div class="c-item">
                    <div class="icon"><i class="fas fa-clock"></i></div>
                    <div>
                        <h4>@(isAr ? "مواعيد العمل" : "Working Hours")</h4>
                        <p>@(isAr ? "من السبت إلى الخميس" : "Saturday to Thursday")<br>@(isAr ? "من الساعة 9:00 صباحاً حتى 6:00 مساءً" : "From 9:00 AM to 6:00 PM")</p>
                    </div>
                </div>

                <div class="map-container">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3453.665363714578!2d31.343167!3d30.046534!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzDCsDAyJzQ3LjUiTiAzMcKwMjAnMzUuNCJF!5e0!3m2!1sar!2seg!4v1635000000000!5m2!1sar!2seg"
                            width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>

            <div class="contact-form-card">
                <h2>@(isAr ? "هل لديك استفسار؟" : "Have an Inquiry?")</h2>
                <p>@(isAr ? "املأ النموذج التالي وسيتم الرد عليك في أقرب وقت ممكن." : "Fill out the form below and we will get back to you as soon as possible.")</p>

                <form asp-controller="Contact" asp-action="SendMessage" method="post"
                      onsubmit="alert('@(isAr ? "تم إرسال رسالتك بنجاح! سيتم التواصل معك قريباً." : "Your message has been sent successfully! We will contact you soon.")');">
                    <div class="form-row" style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div class="form-group">
                            <label>@(isAr ? "الاسم بالكامل" : "Full Name")</label>
                            <input type="text" name="Name" class="form-control" placeholder="@(isAr ? "أدخل اسمك" : "Enter your name")" required>
                        </div>
                        <div class="form-group">
                            <label>@(isAr ? "رقم الموبايل" : "Mobile Number")</label>
                            <input type="tel" name="Phone" class="form-control" placeholder="01xxxxxxxxx" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>@(isAr ? "البريد الإلكتروني" : "Email Address")</label>
                        <input type="email" name="Email" class="form-control" placeholder="email@example.com">
                    </div>

                    <div class="form-group">
                        <label>@(isAr ? "نوع الاستفسار" : "Inquiry Type")</label>
                        <select name="Subject" class="form-control" style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px;">
                            <option value="Complaint">@(isAr ? "شكوى بخصوص طلب" : "Order Complaint")</option>
                            <option value="Inquiry">@(isAr ? "استفسار عن منتج" : "Product Inquiry")</option>
                            <option value="MerchantRequest">@(isAr ? "طلب تسجيل تاجر" : "Merchant Registration Request")</option>
                            <option value="Suggestion">@(isAr ? "اقتراح" : "Suggestion")</option>
                            <option value="Other">@(isAr ? "أخرى" : "Other")</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>@(isAr ? "الرسالة" : "Message")</label>
                        <textarea name="Message" rows="5" class="form-control" placeholder="@(isAr ? "اكتب تفاصيل رسالتك هنا..." : "Write your message details here...")" required
                                  style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px;"></textarea>
                    </div>

                    <button type="submit" class="btn primary w-100">@(isAr ? "إرسال الرسالة" : "Send Message")</button>
                </form>
            </div>

        </div>
    </div>
</section>