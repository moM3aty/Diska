@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تواصل معنا" : "Contact Us";
}

<section class="section-padding">
    <div class="container">
        <div class="contact-page-wrapper" style="display:grid; grid-template-columns: 1fr 1fr; gap:40px;">

            <!-- Info Card -->
            <div class="contact-info-card" style="background:var(--primary); color:#fff; padding:40px; border-radius:15px; display:flex; flex-direction:column; justify-content:center;">
                <h2 style="color:#FACC15; margin-bottom:20px;">@(isAr ? "معلومات التواصل" : "Contact Info")</h2>
                <p style="margin-bottom:30px; opacity:0.9;">@(isAr ? "فريق خدمة عملاء ديسكا جاهز للرد على استفساراتكم ومساعدتكم في أي وقت." : "Diska support team is ready to answer your questions.")</p>

                <div class="info-item" style="margin-bottom:20px; display:flex; align-items:center; gap:15px;">
                    <div style="width:40px; height:40px; background:rgba(255,255,255,0.1); border-radius:50%; display:flex; align-items:center; justify-content:center;">
                        <i class="fas fa-phone-alt"></i>
                    </div>
                    <div>
                        <span style="display:block; font-size:0.8rem; opacity:0.7;">@(isAr ? "اتصل بنا" : "Call Us")</span>
                        <strong style="font-size:1.1rem;">01000000000</strong>
                    </div>
                </div>

                <div class="info-item" style="margin-bottom:20px; display:flex; align-items:center; gap:15px;">
                    <div style="width:40px; height:40px; background:rgba(255,255,255,0.1); border-radius:50%; display:flex; align-items:center; justify-content:center;">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div>
                        <span style="display:block; font-size:0.8rem; opacity:0.7;">@(isAr ? "البريد الإلكتروني" : "Email")</span>
                        <strong style="font-size:1.1rem;">support@diska.com</strong>
                    </div>
                </div>

                <div class="info-item" style="display:flex; align-items:center; gap:15px;">
                    <div style="width:40px; height:40px; background:rgba(255,255,255,0.1); border-radius:50%; display:flex; align-items:center; justify-content:center;">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div>
                        <span style="display:block; font-size:0.8rem; opacity:0.7;">@(isAr ? "العنوان" : "Address")</span>
                        <strong style="font-size:1.1rem;">@(isAr ? "القاهرة، التجمع الخامس" : "Cairo, New Cairo")</strong>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="contact-form-card" style="background:#fff; padding:40px; border-radius:15px; border:1px solid #eee;">
                <h2 style="color:var(--primary); margin-bottom:20px;">@(isAr ? "أرسل لنا رسالة" : "Send us a message")</h2>
                <form>
                    <div class="form-group mb-3">
                        <label>@(isAr ? "الاسم" : "Name")</label>
                        <input type="text" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;">
                    </div>
                    <div class="form-group mb-3">
                        <label>@(isAr ? "رقم الهاتف" : "Phone")</label>
                        <input type="text" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;">
                    </div>
                    <div class="form-group mb-3">
                        <label>@(isAr ? "الرسالة" : "Message")</label>
                        <textarea rows="4" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;"></textarea>
                    </div>
                    <button type="button" class="btn primary w-100" onclick="alert('@(isAr ? "تم الإرسال بنجاح" : "Sent successfully")')">@(isAr ? "إرسال" : "Send")</button>
                </form>
            </div>

        </div>
    </div>
</section>