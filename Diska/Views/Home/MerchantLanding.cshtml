@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "بع معنا" : "Sell with Us";
}

<section class="hero-section" style="background: linear-gradient(rgba(15, 23, 42, 0.9), rgba(15, 23, 42, 0.9)), url('/images/merchant-bg.jpg'); background-size: cover; background-position: center; color: #fff; padding: 80px 0; text-align: center;">
    <div class="container">
        <h1 style="font-size: 3rem; margin-bottom: 20px; color: #FACC15;">@(isAr ? "زود مبيعاتك مع ديسكا" : "Boost Your Sales with Diska")</h1>
        <p style="font-size: 1.2rem; max-width: 700px; margin: 0 auto 40px;">
            @(isAr ? "انضم لأكبر شبكة تجار جملة في مصر. وصل منتجاتك لآلاف المحلات والسوبر ماركت بضغطة زر." : "Join Egypt's largest wholesale network. Reach thousands of shops and supermarkets with a click.")
        </p>
        <a asp-controller="Account" asp-action="Signup" class="btn primary big" style="padding: 15px 40px; font-size: 1.2rem;">@(isAr ? "سجل كتاجر الآن" : "Register as Merchant")</a>
    </div>
</section>

<section class="section-padding">
    <div class="container">
        <div class="features-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px;">

            <div class="feature-card" style="text-align: center; padding: 30px; background: #fff; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                <i class="fas fa-users fa-3x" style="color: var(--primary); margin-bottom: 20px;"></i>
                <h3>@(isAr ? "قاعدة عملاء ضخمة" : "Huge Customer Base")</h3>
                <p style="color: #666;">@(isAr ? "وصل لآلاف تجار التجزئة في مكان واحد بدون مصاريف تسويق." : "Reach thousands of retailers in one place without marketing costs.")</p>
            </div>

            <div class="feature-card" style="text-align: center; padding: 30px; background: #fff; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                <i class="fas fa-chart-line fa-3x" style="color: var(--primary); margin-bottom: 20px;"></i>
                <h3>@(isAr ? "لوحة تحكم ذكية" : "Smart Dashboard")</h3>
                <p style="color: #666;">@(isAr ? "تابع مبيعاتك، مخزونك، وأرباحك لحظة بلحظة من خلال لوحة تحكم متطورة." : "Track sales, inventory, and profits in real-time via advanced dashboard.")</p>
            </div>

            <div class="feature-card" style="text-align: center; padding: 30px; background: #fff; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                <i class="fas fa-truck-loading fa-3x" style="color: var(--primary); margin-bottom: 20px;"></i>
                <h3>@(isAr ? "لوجستيات متكاملة" : "Integrated Logistics")</h3>
                <p style="color: #666;">@(isAr ? "ركز في تجارتك وسيب التوصيل والتحصيل علينا." : "Focus on trading and leave delivery and collection to us.")</p>
            </div>

        </div>
    </div>
</section>

<section class="cta-section" style="background: #f8fafc; padding: 60px 0; text-align: center;">
    <div class="container">
        <h2>@(isAr ? "جاهز تبدأ؟" : "Ready to Start?")</h2>
        <p style="margin-bottom: 30px;">@(isAr ? "التسجيل مجاني ولا يأخذ أكثر من دقيقتين." : "Registration is free and takes less than 2 minutes.")</p>
        <a asp-controller="Account" asp-action="Signup" class="btn primary">@(isAr ? "ابدأ رحلة البيع" : "Start Selling")</a>
    </div>
</section>