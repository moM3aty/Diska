@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "الأسئلة الشائعة" : "FAQ";
}

<section class="section-padding">
    <div class="container">
        <h2 class="page-title" style="text-align:center; margin-bottom:40px;">@(isAr ? "الأسئلة الشائعة" : "Frequently Asked Questions")</h2>

        <div class="faq-container" style="max-width:800px; margin:0 auto;">

            <div class="faq-item" style="margin-bottom:15px; border:1px solid #eee; border-radius:8px; overflow:hidden;">
                <button class="faq-question" onclick="toggleFaq(this)" style="width:100%; padding:20px; background:#fff; border:none; text-align:inherit; font-weight:bold; cursor:pointer; display:flex; justify-content:space-between; align-items:center;">
                    @(isAr ? "كيف يمكنني التسجيل كتاجر؟" : "How to register as a merchant?")
                    <i class="fas fa-chevron-down transition-icon"></i>
                </button>
                <div class="faq-answer" style="display:none; padding:20px; background:#f9f9f9; border-top:1px solid #eee; line-height:1.6;">
                    @(isAr ?
                                        "يمكنك التسجيل بسهولة عبر الضغط على 'حساب التاجر' في القائمة العلوية، وملء النموذج ببياناتك وبيانات المحل. سيتم مراجعة الطلب وتفعيله خلال 24 ساعة." :
                                        "Simply click on 'Merchant Panel' or 'Sell with Us', fill out the form with your shop details. Approvals usually take 24 hours.")
                </div>
            </div>

            <div class="faq-item" style="margin-bottom:15px; border:1px solid #eee; border-radius:8px; overflow:hidden;">
                <button class="faq-question" onclick="toggleFaq(this)" style="width:100%; padding:20px; background:#fff; border:none; text-align:inherit; font-weight:bold; cursor:pointer; display:flex; justify-content:space-between; align-items:center;">
                    @(isAr ? "ما هو الحد الأدنى للطلب؟" : "What is the minimum order?")
                    <i class="fas fa-chevron-down transition-icon"></i>
                </button>
                <div class="faq-answer" style="display:none; padding:20px; background:#f9f9f9; border-top:1px solid #eee; line-height:1.6;">
                    @(isAr ?
                                        "الحد الأدنى يختلف حسب المنتج والتاجر، ولكن معظم المنتجات تباع بنظام الكرتونة أو الجملة (نصف جملة)." :
                                        "Minimums vary by product, but usually items are sold by carton or wholesale units.")
                </div>
            </div>

            <div class="faq-item" style="margin-bottom:15px; border:1px solid #eee; border-radius:8px; overflow:hidden;">
                <button class="faq-question" onclick="toggleFaq(this)" style="width:100%; padding:20px; background:#fff; border:none; text-align:inherit; font-weight:bold; cursor:pointer; display:flex; justify-content:space-between; align-items:center;">
                    @(isAr ? "هل يوجد شحن للمحافظات؟" : "Do you ship to all governorates?")
                    <i class="fas fa-chevron-down transition-icon"></i>
                </button>
                <div class="faq-answer" style="display:none; padding:20px; background:#f9f9f9; border-top:1px solid #eee; line-height:1.6;">
                    @(isAr ?
                                        "نعم، نقوم بالتوصيل لجميع محافظات الجمهورية بالتعاون مع شركات شحن متخصصة." :
                                        "Yes, we deliver to all governorates via our shipping partners.")
                </div>
            </div>

            <div class="faq-item" style="margin-bottom:15px; border:1px solid #eee; border-radius:8px; overflow:hidden;">
                <button class="faq-question" onclick="toggleFaq(this)" style="width:100%; padding:20px; background:#fff; border:none; text-align:inherit; font-weight:bold; cursor:pointer; display:flex; justify-content:space-between; align-items:center;">
                    @(isAr ? "كيف استخدم المحفظة؟" : "How to use the wallet?")
                    <i class="fas fa-chevron-down transition-icon"></i>
                </button>
                <div class="faq-answer" style="display:none; padding:20px; background:#f9f9f9; border-top:1px solid #eee; line-height:1.6;">
                    @(isAr ?
                                        "يتم إضافة رصيد للمحفظة في حالة المرتجعات أو العروض الخاصة. يمكنك استخدام الرصيد للدفع كلياً أو جزئياً عند إتمام الطلب." :
                                        "Wallet credit is added from refunds or promotions. You can use it to pay fully or partially at checkout.")
                </div>
            </div>

        </div>
    </div>
</section>

<script>
    function toggleFaq(btn) {
        const answer = btn.nextElementSibling;
        const icon = btn.querySelector('i');

        if (answer.style.display === 'block') {
            answer.style.display = 'none';
            icon.style.transform = 'rotate(0deg)';
        } else {
            answer.style.display = 'block';
            icon.style.transform = 'rotate(180deg)';
        }
    }
</script>