@{
    ViewData["Title"] = "من نحن";
}

<section class="section-padding">
    <div class="container">
        <div class="about-content" style="background: #fff; padding: 40px; border-radius: 15px; text-align: center; box-shadow: 0 5px 20px rgba(0,0,0,0.05);">

            <div class="logo-icon" style="margin: 0 auto 20px; width: 80px; height: 80px; font-size: 2.5rem; background: var(--accent); color: var(--primary); border-radius: 20px; display: flex; align-items: center; justify-content: center;">%</div>

            <h1 style="color: var(--primary); margin-bottom: 20px; font-weight: 800;">عن منصة DISKA</h1>

            <p style="font-size: 1.1rem; line-height: 1.8; color: #555; max-width: 800px; margin: 0 auto;">
                ديسكا هي المنصة الأولى من نوعها في سوق الجملة (B2B)، تهدف لربط التجار والموردين وأصحاب المصانع بمحلات التجزئة والسوبر ماركت بشكل مباشر.
                <br><br>
                نسعى لتوفير أفضل الأسعار من خلال تجميع الطلبات (الصفقات) وإلغاء الحلقات الوسيطة، مما يضمن هامش ربح أعلى للتاجر وتوفير أكبر للمشتري.
            </p>

            <div class="stats-grid" style="margin-top: 50px;">
                <div class="stat-box">
                    <h3 style="color: var(--accent); font-size: 2rem; font-weight: 900;">+5000</h3>
                    <p style="font-weight: bold; color: var(--primary);">منتج متنوع</p>
                </div>
                <div class="stat-box">
                    <h3 style="color: var(--accent); font-size: 2rem; font-weight: 900;">+1000</h3>
                    <p style="font-weight: bold; color: var(--primary);">تاجر ومورد</p>
                </div>
                <div class="stat-box">
                    <h3 style="color: var(--accent); font-size: 2rem; font-weight: 900;">24/7</h3>
                    <p style="font-weight: bold; color: var(--primary);">دعم فني</p>
                </div>
            </div>
        </div>
    </div>
</section>