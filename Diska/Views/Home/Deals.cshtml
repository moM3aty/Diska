@model IEnumerable<Diska.Models.GroupDeal>
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "صفقات الجملة" : "Deals";
}

<section class="section-padding">
    <div class="container">
        <div style="text-align:center; margin-bottom:40px;">
            <h2 class="page-title" style="justify-content:center;">@(isAr ? "🔥 صفقات الكميات الكبيرة" : "🔥 Bulk Deals")</h2>
            <p style="color:#666;">@(isAr ? "اتحد مع تجار آخرين واطلبوا كميات كبيرة لتحصلوا على أقل سعر في السوق!" : "Join forces with other merchants to unlock the lowest prices!")</p>
        </div>

        <div class="products-grid">
            @if (!Model.Any())
            {
                <div style="grid-column: 1/-1; text-align:center; padding:50px; background:#fff; border-radius:15px;">
                    <i class="fas fa-hourglass-half fa-3x" style="color:#ddd; margin-bottom:15px;"></i>
                    <p>@(isAr ? "لا توجد صفقات نشطة حالياً. تابعنا قريباً!" : "No active deals at the moment.")</p>
                </div>
            }
            else
            {
                @foreach (var deal in Model)
                {
                    double progress = (deal.TargetQuantity > 0) ? ((double)deal.ReservedQuantity / deal.TargetQuantity) * 100 : 0;
                    var timeLeft = deal.EndDate - DateTime.Now;

                    <div class="product-card deal-card" style="border:2px solid #FACC15;">
                        <div class="flash-badge" style="background:#FACC15; color:#0F172A;">@(isAr ? "صفقة تجميعية" : "Group Deal")</div>

                        <div class="product-img">
                            <img src="~/@(deal.Product?.ImageUrl ?? "images/default.png")" alt="@deal.Product?.Name">
                        </div>

                        <div class="product-info">
                            <h4>@(isAr? deal.Product?.Name : (deal.Product?.NameEn ?? deal.Product?.Name))</h4>

                            <!-- الأسعار -->
                            <div class="pricing" style="justify-content:center; margin:10px 0;">
                                <div style="text-align:center;">
                                    <span style="display:block; font-size:0.8rem; color:#666;">@(isAr ? "السعر العادي" : "Regular Price")</span>
                                    <span class="old-price" style="font-size:1rem;">@deal.Product?.Price.ToString("N0")</span>
                                </div>
                                <div style="font-size:1.5rem; margin:0 15px;">&rarr;</div>
                                <div style="text-align:center;">
                                    <span style="display:block; font-size:0.8rem; color:var(--danger); font-weight:bold;">@(isAr ? "سعر الصفقة" : "Deal Price")</span>
                                    <span class="current-price" style="font-size:1.3rem; color:var(--danger);">@deal.DealPrice.ToString("N0")</span>
                                </div>
                            </div>

                            <!-- شريط التقدم -->
                            <div style="margin:15px 0;">
                                <div style="display:flex; justify-content:space-between; font-size:0.8rem; margin-bottom:5px;">
                                    <span>@(isAr ? "تم حجز:" : "Reserved:") <strong id="reserved-@deal.Id">@deal.ReservedQuantity</strong></span>
                                    <span>@(isAr ? "الهدف:" : "Target:") <strong>@deal.TargetQuantity</strong></span>
                                </div>
                                <div style="height:10px; background:#eee; border-radius:5px; overflow:hidden;">
                                    <div id="progress-@deal.Id" style="height:100%; width:@progress%; background:var(--success); transition:width 0.5s;"></div>
                                </div>
                            </div>

                            <!-- العداد والزر -->
                            <div style="display:flex; gap:10px; align-items:center;">
                                <input type="number" id="qty-@deal.Id" value="1" min="1" style="width:60px; padding:10px; border:1px solid #ddd; border-radius:8px; text-align:center; font-weight:bold;">
                                <button class="btn primary" onclick="joinDeal(@deal.Id)" style="flex:1;">@(isAr ? "انضم للصفقة" : "Join Deal")</button>
                            </div>

                            <div style="text-align:center; margin-top:10px; font-size:0.8rem; color:#666;">
                                <i class="far fa-clock"></i> @(isAr ? "ينتهي خلال:" : "Ends in:") @timeLeft.Days @(isAr ? "يوم" : "d")
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        async function joinDeal(dealId) {
            const qtyInput = document.getElementById(`qty-${dealId}`);
            const qty = parseInt(qtyInput.value);

            if (qty < 1) return;

            try {
                const formData = new FormData();
                formData.append('dealId', dealId);
                formData.append('quantity', qty);

                const response = await fetch('/Deals/JoinDeal', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    // تحديث الواجهة بدون Reload
                    document.getElementById(`reserved-${dealId}`).innerText = result.newReserved;
                    document.getElementById(`progress-${dealId}`).style.width = result.newProgress + '%';
                } else {
                    alert(result.message);
                }
            } catch (err) {
                console.error(err);
                alert('@(isAr ? "حدث خطأ في الاتصال" : "Connection Error")');
            }
        }
    </script>
}