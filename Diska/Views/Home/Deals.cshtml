@{
    ViewData["Title"] = "صفقات الجملة";
}

<section class="section-padding">
    <div class="container">
        <h2 class="page-title" style="padding-top: 20px;">🔥 صفقات الكميات الكبيرة</h2>
        <p style="text-align: center; margin-bottom: 30px;">اشتري مع غيرك وحققوا التارجت عشان السعر ينزل!</p>

        <div class="products-grid">
            <!-- صفقة وهمية 1 -->
            <div class="product-card deal-card">
                <div class="deal-badge">صفقة نشطة</div>
                <div class="product-img"><img src="~/images/pepsi.webp" alt="بيبسي"></div>
                <div class="product-info">
                    <h4>بالتة بيبسي (100 كرتونة)</h4>
                    <div class="pricing">
                        <span class="current-price">180.00 ج.م</span>
                        <span class="old-price">191.99 ج.م</span>
                    </div>

                    <div class="timer-box">
                        <div class="time-unit"><strong class="days">02</strong><span>يوم</span></div>:
                        <div class="time-unit"><strong class="hours">14</strong><span>ساعة</span></div>:
                        <div class="time-unit"><strong class="mins">30</strong><span>دقيقة</span></div>
                    </div>

                    <div style="font-size: 0.8rem; display: flex; justify-content: space-between;">
                        <span>تم حجز: 750</span>
                        <span>الهدف: 1000</span>
                    </div>
                    <div class="progress-container">
                        <div class="progress-bar" style="width: 75%;"></div>
                    </div>

                    <button class="btn primary w-100">احجز كميتك الآن</button>
                </div>
            </div>

            <!-- صفقة وهمية 2 -->
            <div class="product-card deal-card">
                <div class="deal-badge">باقي قليل</div>
                <div class="product-img"><img src="~/images/زيت.webp" alt="زيت"></div>
                <div class="product-info">
                    <h4>زيت كريستال (500 كرتونة)</h4>
                    <div class="pricing">
                        <span class="current-price">420.00 ج.م</span>
                        <span class="old-price">450.00 ج.م</span>
                    </div>

                    <div class="timer-box">
                        <div class="time-unit"><strong class="days">00</strong><span>يوم</span></div>:
                        <div class="time-unit"><strong class="hours">05</strong><span>ساعة</span></div>:
                        <div class="time-unit"><strong class="mins">12</strong><span>دقيقة</span></div>
                    </div>

                    <div style="font-size: 0.8rem; display: flex; justify-content: space-between;">
                        <span>تم حجز: 450</span>
                        <span>الهدف: 500</span>
                    </div>
                    <div class="progress-container">
                        <div class="progress-bar" style="width: 90%;"></div>
                    </div>

                    <button class="btn primary w-100">احجز كميتك الآن</button>
                </div>
            </div>
        </div>
    </div>
</section>