@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "شكراً لك" : "Thank You";
}

<section class="section-padding" style="min-height: 70vh; display: flex; align-items: center;">
    <div class="container text-center">
        <div style="background: #fff; padding: 60px 40px; max-width: 600px; margin: 0 auto; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.05); border: 1px solid #e2e8f0;">

            <div style="width: 80px; height: 80px; background: #dcfce7; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 25px;">
                <i class="fas fa-check fa-3x" style="color: #16a34a;"></i>
            </div>

            <h2 style="color: var(--primary); margin-bottom: 15px; font-weight:800;">@(isAr ? "شكراً لمشاركتك!" : "Thank You!")</h2>
            <p style="color: #666; font-size: 1.1rem; margin-bottom: 40px; line-height:1.6;">
                @(isAr ? "تم استلام إجاباتك بنجاح. رأيك يساعدنا على تحسين خدماتنا وتقديم الأفضل لك دائماً." : "Your responses have been received successfully. Your feedback helps us improve our services for you.")
            </p>

            <a asp-controller="Home" asp-action="Index" class="btn primary" style="padding:12px 40px; border-radius:50px; text-decoration:none;">
                @(isAr ? "العودة للرئيسية" : "Back to Home")
            </a>

        </div>
    </div>
</section>