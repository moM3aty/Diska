@model Diska.Models.Survey
@using System.Globalization
@{
    // تحديد اللغة
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");

    // تحديد النصوص بناءً على اللغة
    string title = isAr ? Model.Title : (Model.TitleEn ?? Model.Title);
    string desc = Model.Description;

    ViewData["Title"] = title;
    Layout = "_Layout";
}

<style>
    /* =========================================
           PREMIUM SURVEY STYLES
           ========================================= */
    :root {
        --s-primary: #0F172A;
        --s-accent: #FACC15;
        --s-bg: #F8FAFC;
        --s-text: #334155;
        --s-border: #E2E8F0;
        --s-danger: #ef4444;
    }

    body {
        background-color: var(--s-bg);
    }

    .survey-container {
        max-width: 800px;
        margin: 40px auto;
        animation: fadeIn 0.6s ease-out;
    }

    /* --- Header --- */
    .survey-header {
        background: var(--s-primary);
        color: #fff;
        padding: 50px 30px;
        border-radius: 24px 24px 0 0;
        text-align: center;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(15, 23, 42, 0.2);
    }

        .survey-header::before {
            content: '';
            position: absolute;
            top: -50px;
            right: -50px;
            width: 150px;
            height: 150px;
            background: rgba(255,255,255,0.05);
            border-radius: 50%;
        }

    .survey-title {
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 10px;
        line-height: 1.3;
    }

    .survey-desc {
        color: rgba(255,255,255,0.8);
        font-size: 1.1rem;
    }

    /* --- Body --- */
    .survey-body {
        background: #fff;
        padding: 40px;
        border-radius: 0 0 24px 24px;
        border: 1px solid var(--s-border);
        box-shadow: 0 20px 40px rgba(0,0,0,0.05);
    }

    /* --- Question Card --- */
    .q-card {
        background: #fff;
        padding: 30px;
        border-radius: 16px;
        border: 1px solid var(--s-border);
        margin-bottom: 25px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .q-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.04);
            border-color: #cbd5e1;
        }

    .q-label {
        font-weight: 800;
        color: var(--s-primary);
        font-size: 1.2rem;
        margin-bottom: 20px;
        display: block;
    }

    .q-req {
        color: var(--s-danger);
        margin-inline-start: 5px;
    }

    /* --- Controls --- */
    .form-control-prem {
        border: 2px solid var(--s-border);
        border-radius: 12px;
        padding: 15px;
        width: 100%;
        background: var(--s-bg);
        transition: 0.3s;
        font-size: 1rem;
    }

        .form-control-prem:focus {
            background: #fff;
            border-color: var(--s-primary);
            box-shadow: 0 0 0 4px rgba(15, 23, 42, 0.1);
            outline: none;
        }

    /* --- Option Box (Radio) --- */
    .option-label {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 15px 20px;
        border: 2px solid var(--s-border);
        border-radius: 12px;
        margin-bottom: 12px;
        cursor: pointer;
        transition: 0.2s;
        background: var(--s-bg);
        font-weight: 600;
        color: var(--s-text);
    }

        .option-label:hover {
            background: #fff;
            border-color: #94a3b8;
        }

        .option-label input {
            accent-color: var(--s-primary);
            width: 20px;
            height: 20px;
            cursor: pointer;
        }

        /* Active State */
        .option-label:has(input:checked) {
            border-color: var(--s-primary);
            background-color: #fff;
            color: var(--s-primary);
            box-shadow: 0 4px 12px rgba(15, 23, 42, 0.1);
        }

    /* --- Star Rating --- */
    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
        gap: 10px;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            font-size: 2.5rem;
            color: #e2e8f0;
            cursor: pointer;
            transition: 0.2s;
        }

            .star-rating label:hover,
            .star-rating label:hover ~ label,
            .star-rating input:checked ~ label {
                color: var(--s-accent);
                text-shadow: 0 2px 10px rgba(250, 204, 21, 0.4);
            }

    /* --- Buttons --- */
    .btn-submit {
        background: var(--s-primary);
        color: #fff;
        border: none;
        padding: 18px;
        width: 100%;
        border-radius: 50px;
        font-weight: 800;
        font-size: 1.1rem;
        transition: 0.3s;
        box-shadow: 0 10px 30px rgba(15, 23, 42, 0.2);
        cursor: pointer;
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(15, 23, 42, 0.3);
            background: #1e293b;
        }

    .btn-cancel {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #94a3b8;
        font-weight: 600;
        text-decoration: none;
    }

        .btn-cancel:hover {
            color: var(--s-primary);
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="survey-container">
    <div class="survey-header">
        <h1 class="survey-title">@title</h1>
     
    </div>

    <div class="survey-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center mb-4 border-0 rounded-3" style="background:#fee2e2; color:#ef4444;">
                <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            </div>
        }

        <form asp-action="Submit" method="post">
            <input type="hidden" name="surveyId" value="@Model.Id" />

            @foreach (var q in Model.Questions)
            {
                // عرض السؤال حسب اللغة
                string qText = isAr ? q.QuestionText : (q.QuestionTextEn ?? q.QuestionText);

                <div class="q-card">
                    <label class="q-label">@qText <span class="q-req">*</span></label>

                    @if (q.Type == "Text")
                    {
                        <textarea name="q_@q.Id" rows="3" class="form-control-prem"
                          placeholder="@(isAr ? "اكتب إجابتك هنا..." : "Type your answer here...")" required></textarea>
                    }
                    else if (q.Type == "Star")
                    {
                        <div class="star-rating">
                            @for (int i = 5; i >= 1; i--)
                            {
                                <input type="radio" id="q_@(q.Id)_@i" name="q_@q.Id" value="@i" required>
                                <label for="q_@(q.Id)_@i"><i class="fas fa-star"></i></label>
                            }
                        </div>
                    }
                    else if (q.Type == "YesNo")
                    {
                        <div class="row g-3">
                            <div class="col-6">
                                <label class="option-label">
                                    <input type="radio" name="q_@q.Id" value="Yes" required>
                                    <span>@(isAr ? "نعم" : "Yes")</span>
                                </label>
                            </div>
                            <div class="col-6">
                                <label class="option-label">
                                    <input type="radio" name="q_@q.Id" value="No">
                                    <span>@(isAr ? "لا" : "No")</span>
                                </label>
                            </div>
                        </div>
                    }
                    else if (q.Type == "MCQ" && !string.IsNullOrEmpty(q.Options))
                    {
                        
                        var opts = q.Options.Split(',');
                        foreach (var opt in opts)
                        {
                            var parts = opt.Trim().Split('|');
                            var val = parts[0].Trim();
                            var displayVal = isAr ? val : (parts.Length > 1 ? parts[1].Trim() : val);

                            <label class="option-label">
                                <input type="radio" name="q_@q.Id" value="@val" required>
                                <span>@displayVal</span>
                            </label>
                        }
                    }
                </div>
            }

            <button type="submit" class="btn-submit mt-2">
                @(isAr ? "إرسال الإجابات" : "Submit Survey") <i class="fas fa-paper-plane ms-2"></i>
            </button>
            <a asp-action="Index" class="btn-cancel">@(isAr ? "إلغاء والعودة" : "Cancel and Return")</a>
        </form>
    </div>
</div>