@model IEnumerable<Diska.Models.Order>
@using System.Globalization
@{
    Layout = "_Layout";
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "طلباتي" : "My Orders";

    // Pagination & Filter Data
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    string currentStatus = ViewBag.CurrentStatus;

    // Stats
    int totalOrders = ViewBag.TotalOrdersCount;
    int activeOrders = ViewBag.ActiveOrdersCount;
    decimal totalSpent = ViewBag.TotalSpent;
}

<style>
    :root {
        --o-primary: #0F172A;
        --o-accent: #FACC15;
        --o-bg: #f8fafc;
        --o-text: #334155;
        --o-border: #e2e8f0;
    }

    .orders-page {
        background-color: var(--o-bg);
        padding: 50px 0;
        min-height: 80vh;
        font-family: 'Cairo', sans-serif;
    }

    /* Header & Stats */
    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 40px;
        flex-wrap: wrap;
        gap: 20px;
    }

    .page-title h1 {
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--o-primary);
        margin: 0;
    }

    .page-title p {
        color: #64748b;
        margin: 5px 0 0;
    }

    .stats-row {
        display: flex;
        gap: 20px;
    }

    .stat-badge {
        background: #fff;
        padding: 10px 20px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        border: 1px solid var(--o-border);
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .stat-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: rgba(15, 23, 42, 0.05);
        color: var(--o-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .stat-info span {
        display: block;
        font-size: 0.75rem;
        color: #64748b;
        font-weight: 600;
        text-transform: uppercase;
    }

    .stat-info strong {
        font-size: 1.1rem;
        color: var(--o-primary);
        font-weight: 800;
    }

    /* Tabs (Filters) */
    .orders-tabs {
        display: flex;
        gap: 10px;
        border-bottom: 2px solid var(--o-border);
        margin-bottom: 30px;
        overflow-x: auto;
        padding-bottom: 2px;
    }

    .tab-link {
        background: none;
        border: none;
        padding: 12px 25px;
        font-weight: 700;
        color: #94a3b8;
        text-decoration: none;
        position: relative;
        transition: 0.3s;
        white-space: nowrap;
    }

        .tab-link.active {
            color: var(--o-primary);
        }

            .tab-link.active::after {
                content: '';
                position: absolute;
                bottom: -4px;
                left: 0;
                width: 100%;
                height: 4px;
                background: var(--o-accent);
                border-radius: 4px 4px 0 0;
            }

    /* Order Card */
    .order-card {
        background: #fff;
        border-radius: 16px;
        border: 1px solid var(--o-border);
        padding: 25px;
        margin-bottom: 20px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

        .order-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px -5px rgba(0,0,0,0.06);
            border-color: #cbd5e1;
        }

    .card-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px dashed var(--o-border);
    }

    .order-id {
        font-size: 1.1rem;
        font-weight: 800;
        color: var(--o-primary);
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .order-id i {
            color: var(--o-accent);
        }

    .order-date {
        font-size: 0.9rem;
        color: #64748b;
        font-weight: 500;
    }

    .card-body-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr auto;
        gap: 20px;
        align-items: center;
    }

    .info-block span {
        display: block;
        font-size: 0.8rem;
        color: #94a3b8;
        margin-bottom: 5px;
    }

    .info-block strong {
        display: block;
        font-size: 1.1rem;
        color: var(--o-text);
        font-weight: 700;
    }

    /* Status Badge */
    .status-pill {
        padding: 6px 14px;
        border-radius: 30px;
        font-size: 0.85rem;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .st-Pending {
        background: #fffbeb;
        color: #b45309;
    }

    .st-Confirmed {
        background: #eff6ff;
        color: #1d4ed8;
    }

    .st-Shipped {
        background: #f0f9ff;
        color: #0284c7;
    }

    .st-Delivered {
        background: #dcfce7;
        color: #16a34a;
    }

    .st-Cancelled {
        background: #fef2f2;
        color: #dc2626;
    }

    .btn-view {
        background: var(--o-primary);
        color: #fff;
        padding: 10px 25px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 700;
        transition: 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-view:hover {
            background: #1e293b;
            color: #fff;
            transform: translateX( @(isAr ? "-5px" : "5px") );
        }

    /* Pagination */
    .pagination-wrapper {
        margin-top: 40px;
        display: flex;
        justify-content: center;
    }

    .page-link-custom {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 10px;
        margin: 0 5px;
        background: #fff;
        border: 1px solid var(--o-border);
        color: var(--o-text);
        text-decoration: none;
        font-weight: 700;
        transition: 0.2s;
    }

        .page-link-custom:hover {
            border-color: var(--o-primary);
            color: var(--o-primary);
        }

        .page-link-custom.active {
            background: var(--o-primary);
            color: #fff;
            border-color: var(--o-primary);
        }

        .page-link-custom.disabled {
            opacity: 0.5;
            cursor: default;
            pointer-events: none;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: #fff;
        border-radius: 20px;
        border: 2px dashed var(--o-border);
    }

    .empty-icon {
        width: 80px;
        height: 80px;
        background: #f1f5f9;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 2rem;
        color: #94a3b8;
    }

    @@media (max-width: 768px) {
        .card-body-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .btn-view {
            width: 100%;
            justify-content: center;
        }

        .stats-row {
            width: 100%;
            overflow-x: auto;
            padding-bottom: 10px;
        }

        .stat-badge {
            min-width: 160px;
        }
    }
</style>

<div class="orders-page">
    <div class="container">

        <!-- Header -->
        <div class="dashboard-header fade-up">
            <div class="page-title">
                <h1>@(isAr ? "سجل طلباتي" : "My Orders")</h1>
                <p>@(isAr ? "تتبع مشترياتك وحالة الطلبات السابقة" : "Track your purchases and order history")</p>
            </div>

            <div class="stats-row">
                <div class="stat-badge">
                    <div class="stat-icon"><i class="fas fa-shopping-bag"></i></div>
                    <div class="stat-info">
                        <span>@(isAr ? "إجمالي الطلبات" : "Total Orders")</span>
                        <strong>@totalOrders</strong>
                    </div>
                </div>
                <div class="stat-badge">
                    <div class="stat-icon" style="color:#d97706; background:#fffbeb;"><i class="fas fa-clock"></i></div>
                    <div class="stat-info">
                        <span>@(isAr ? "طلبات نشطة" : "Active")</span>
                        <strong>@activeOrders</strong>
                    </div>
                </div>
                <div class="stat-badge">
                    <div class="stat-icon" style="color:#16a34a; background:#dcfce7;"><i class="fas fa-coins"></i></div>
                    <div class="stat-info">
                        <span>@(isAr ? "إجمالي الإنفاق" : "Total Spent")</span>
                        <strong>@totalSpent.ToString("N0")</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Tabs (Links to Controller) -->
        <div class="orders-tabs fade-up" style="animation-delay: 0.1s;">
            <a href="@Url.Action("Index", new { status = "all" })" class="tab-link @(currentStatus == "all" ? "active" : "")">
                @(isAr ? "الكل" : "All Orders")
            </a>
            <a href="@Url.Action("Index", new { status = "active" })" class="tab-link @(currentStatus == "active" ? "active" : "")">
                @(isAr ? "قيد التنفيذ" : "In Progress")
            </a>
            <a href="@Url.Action("Index", new { status = "completed" })" class="tab-link @(currentStatus == "completed" ? "active" : "")">
                @(isAr ? "مكتملة" : "Completed")
            </a>
            <a href="@Url.Action("Index", new { status = "cancelled" })" class="tab-link @(currentStatus == "cancelled" ? "active" : "")">
                @(isAr ? "ملغاة" : "Cancelled")
            </a>
        </div>

        <!-- Orders List -->
        <div class="orders-list fade-up" style="animation-delay: 0.2s;">
            @if (!Model.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon"><i class="fas fa-box-open"></i></div>
                    <h3>@(isAr ? "لا توجد طلبات هنا" : "No orders here")</h3>
                    <p class="text-muted mb-4">@(isAr ? "لم تقم بأي طلبات مطابقة لهذا الفلتر" : "You haven't placed any orders matching this filter")</p>
                    <a asp-controller="Home" asp-action="Index" class="btn-view" style="width:auto; padding:12px 30px;">
                        @(isAr ? "تسوق الآن" : "Shop Now")
                    </a>
                </div>
            }
            else
            {
                foreach (var order in Model)
                {
                    <div class="order-card">
                        <div class="card-top">
                            <div class="order-id">
                                <i class="fas fa-hashtag"></i> @order.Id
                            </div>
                            <div class="order-date">
                                <i class="far fa-calendar-alt me-1"></i> @order.OrderDate.ToString("dd MMMM yyyy, hh:mm tt")
                            </div>
                        </div>

                        <div class="card-body-grid">
                            <div class="info-block">
                                <span>@(isAr ? "عدد المنتجات" : "Items")</span>
                                <strong>@order.OrderItems.Count</strong>
                            </div>

                            <div class="info-block">
                                <span>@(isAr ? "الإجمالي" : "Total Amount")</span>
                                <strong>@order.TotalAmount.ToString("N0") <small style="font-size:0.8rem; color:#94a3b8;">@(isAr ? "ج.م" : "EGP")</small></strong>
                            </div>

                            <div class="info-block">
                                <span>@(isAr ? "الحالة" : "Status")</span>
                                <div class="status-pill st-@order.Status">
                                    @if (order.Status == "Delivered")
                                    {
                                        <i class="fas fa-check-circle"></i>
                                    }
                                    else if (order.Status == "Cancelled")
                                    {

                                        <i class="fas fa-times-circle"></i>
                                    }
                                    else if (order.Status == "Shipped")
                                    {

                                        <i class="fas fa-truck"></i>
                                    }
                                    else
                                    {

                                        <i class="fas fa-spinner fa-spin"></i>
                                    }
                                    @order.Status
                                </div>
                            </div>

                            <div class="text-end">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn-view">
                                    @(isAr ? "تفاصيل الطلب" : "View Details") <i class="fas @(isAr ? "fa-arrow-left" : "fa-arrow-right")"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Pagination Controls -->
        @if (totalPages > 1)
        {
            <div class="pagination-wrapper fade-up" style="animation-delay: 0.3s;">
                <!-- Prev -->
                <a href="@Url.Action("Index", new { status = currentStatus, page = currentPage - 1 })" class="page-link-custom @(currentPage == 1 ? "disabled" : "")">
                    <i class="fas fa-chevron-right"></i>
                </a>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <a href="@Url.Action("Index", new { status = currentStatus, page = i })" class="page-link-custom @(i == currentPage ? "active" : "")">
                        @i
                    </a>
                }

                <!-- Next -->
                <a href="@Url.Action("Index", new { status = currentStatus, page = currentPage + 1 })" class="page-link-custom @(currentPage == totalPages ? "disabled" : "")">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </div>
        }

    </div>
</div>