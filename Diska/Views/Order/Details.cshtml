@model Diska.Models.Order
@using System.Globalization
@{
    Layout = "_Layout";
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? $"طلب #{Model.Id}" : $"Order #{Model.Id}";

    // منطق تتبع الحالة
    var statuses = new[] { "Pending", "Confirmed", "Shipped", "Delivered" };
    int currentStep = Array.IndexOf(statuses, Model.Status);
    if (Model.Status == "Cancelled") currentStep = -1;

    // حسابات الضريبة والأرقام
    decimal itemsSum = Model.OrderItems.Sum(i => i.UnitPrice * i.Quantity);
    decimal taxAmount = itemsSum * 0.14m;
}

<style>
    /* =========================================
           PREMIUM DETAILS STYLES (Light & Dark)
           ========================================= */
    :root {
        /* Light Theme */
        --d-bg-body: #f8fafc;
        --d-card-bg: #ffffff;
        --d-text-main: #0f172a;
        --d-text-muted: #64748b;
        --d-border: #e2e8f0;
        --d-primary: #0F172A;
        --d-accent: #FACC15;
        --d-header-bg: #f8fafc;
        --d-shadow: 0 4px 20px rgba(0,0,0,0.03);
        --d-step-bg: #f1f5f9;
        --d-step-border: #ffffff;
        --d-item-hover: #fcfcfd;
    }

    [data-bs-theme="dark"] {
        /* Dark Theme */
        --d-bg-body: #020617;
        --d-card-bg: #1e293b;
        --d-text-main: #f1f5f9;
        --d-text-muted: #94a3b8;
        --d-border: rgba(255, 255, 255, 0.08);
        --d-primary: #818cf8;
        --d-accent: #facc15;
        --d-header-bg: #0f172a;
        --d-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.5);
        --d-step-bg: #334155;
        --d-step-border: #1e293b;
        --d-item-hover: rgba(255, 255, 255, 0.03);
    }

    body {
        background-color: var(--d-bg-body);
        color: var(--d-text-main);
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .order-details-page {
        padding: 50px 0;
        min-height: 90vh;
        font-family: 'Cairo', sans-serif;
    }

    /* Navbar */
    .nav-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-head h1 {
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--d-primary);
        margin: 0;
    }

    .page-head span {
        color: var(--d-text-muted);
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }

    .back-link {
        color: var(--d-text-muted);
        text-decoration: none;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: 0.2s;
    }

        .back-link:hover {
            color: var(--d-primary);
            transform: translateX( @(isAr ? "5px" : "-5px") );
        }

    /* Layout */
    .details-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
    }

    /* Cards */
    .info-card {
        background: var(--d-card-bg);
        border-radius: 20px;
        box-shadow: var(--d-shadow);
        border: 1px solid var(--d-border);
        overflow: hidden;
        margin-bottom: 30px;
        transition: 0.3s;
    }

    .card-head {
        padding: 20px 30px;
        border-bottom: 1px solid var(--d-border);
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: var(--d-header-bg);
    }

        .card-head h3 {
            margin: 0;
            font-size: 1.1rem;
            font-weight: 800;
            color: var(--d-primary);
            display: flex;
            align-items: center;
            gap: 10px;
        }

    [data-bs-theme="dark"] .card-head h3 {
        color: var(--d-text-main);
    }

    /* Stepper */
    .stepper-wrapper {
        padding: 40px 20px;
    }

    .stepper {
        display: flex;
        justify-content: space-between;
        position: relative;
    }

        .stepper::before {
            content: '';
            position: absolute;
            top: 15px;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--d-step-bg);
            z-index: 1;
            border-radius: 4px;
        }

    .step-item {
        position: relative;
        z-index: 2;
        text-align: center;
        flex: 1;
    }

    .step-circle {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        background: var(--d-step-bg);
        margin: 0 auto 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--d-text-muted);
        border: 4px solid var(--d-step-border);
        transition: 0.4s;
    }

    .step-item.active .step-circle {
        background: var(--d-primary);
        color: #fff;
        transform: scale(1.2);
        box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.2);
        border-color: var(--d-card-bg);
    }

    [data-bs-theme="dark"] .step-item.active .step-circle {
        background: var(--d-accent);
        color: #000;
        box-shadow: 0 0 0 4px rgba(250, 204, 21, 0.2);
    }

    .step-item.completed .step-circle {
        background: #10b981;
        color: #fff;
        border-color: var(--d-card-bg);
    }

    .step-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--d-text-muted);
        margin-top: 8px;
    }

    .step-item.active .step-label {
        color: var(--d-primary);
        font-weight: 800;
    }

    [data-bs-theme="dark"] .step-item.active .step-label {
        color: var(--d-text-main);
    }

    /* Items Table */
    .item-row {
        display: flex;
        gap: 20px;
        padding: 20px 30px;
        border-bottom: 1px solid var(--d-border);
        align-items: center;
    }

        .item-row:last-child {
            border-bottom: none;
        }

    .item-img {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        border: 1px solid var(--d-border);
        padding: 5px;
        background: #fff;
        object-fit: contain;
    }

    .item-details {
        flex: 1;
    }

    .item-name {
        font-weight: 700;
        color: var(--d-text-main);
        margin-bottom: 5px;
    }

    .item-meta {
        font-size: 0.85rem;
        color: var(--d-text-muted);
    }

    .item-price {
        text-align: end;
    }

    .price-val {
        font-size: 1.1rem;
        font-weight: 800;
        color: var(--d-primary);
    }

    [data-bs-theme="dark"] .price-val {
        color: var(--d-accent);
    }

    .color-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: inline-block;
        border: 1px solid var(--d-border);
    }

    /* Sidebar Info */
    .sidebar-info {
        padding: 25px;
    }

    .info-group {
        margin-bottom: 25px;
    }

        .info-group h4 {
            font-size: 0.85rem;
            color: var(--d-text-muted);
            text-transform: uppercase;
            font-weight: 700;
            margin-bottom: 12px;
        }

    .info-text {
        color: var(--d-text-main);
        font-weight: 600;
        line-height: 1.6;
        font-size: 0.95rem;
    }

    /* Summary */
    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        color: var(--d-text-muted);
        border-bottom: 1px dashed var(--d-border);
        background:transparent;
    }

        .summary-row:last-child {
            border-bottom: none;
        }

        .summary-row.total {
            border-top: 2px solid var(--d-primary);
            margin-top: 15px;
            padding-top: 15px;
            font-size: 1.3rem;
            font-weight: 800;
            color: var(--d-primary);
        }

    [data-bs-theme="dark"] .summary-row.total {
        border-top-color: var(--d-accent);
        color: var(--d-accent);
    }

    .btn-outline {
        background: transparent;
        border: 2px solid var(--d-primary);
        color: var(--d-primary);
        padding: 8px 20px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.9rem;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-outline:hover {
            background: var(--d-primary);
            color: #fff;
        }

    [data-bs-theme="dark"] .btn-outline {
        border-color: var(--d-border);
        color: var(--d-text-main);
    }

        [data-bs-theme="dark"] .btn-outline:hover {
            background: var(--d-header-bg);
            color: #fff;
        }

    /* --- Media Queries --- */
    @@media (max-width: 992px) {
        .details-grid {
            grid-template-columns: 1fr;
        }
    }

    /* --- Animation --- */
    .fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* --- Print --- */
    @@media print {
        .nav-bar, .btn-outline, .stepper {
            display: none !important;
        }

        .order-details-page {
            background: #fff !important;
            padding: 0 !important;
            color: #000 !important;
        }

        .info-card {
            border: 1px solid #000 !important;
            box-shadow: none !important;
        }

        * {
            color: #000 !important;
        }
    }
</style>

<div class="order-details-page">
    <div class="container">

        <!-- Header -->
        <div class="nav-bar fade-up">
            <div class="page-head">
                <h1>@(isAr ? "تفاصيل الطلب" : "Order Details") #@Model.Id</h1>
                <span>@Model.OrderDate.ToString("dd MMMM yyyy - hh:mm tt")</span>
            </div>
            <a asp-action="Index" class="back-link">
                <i class="fas @(isAr ? "fa-arrow-right" : "fa-arrow-left")"></i> @(isAr ? "العودة للطلبات" : "Back to Orders")
            </a>
        </div>

        <!-- Status Stepper -->
        <div class="info-card fade-up">
            <div class="stepper-wrapper">
                @if (Model.Status == "Cancelled")
                {
                    <div class="text-center text-danger">
                        <i class="fas fa-times-circle fa-3x mb-3"></i>
                        <h3>@(isAr ? "تم إلغاء هذا الطلب" : "This order has been cancelled")</h3>
                    </div>
                }
                else
                {
                    <div class="stepper">
                        @{
                            string[] steps = { "Pending", "Confirmed", "Shipped", "Delivered" };
                            string[] labelsAr = { "قيد المراجعة", "تم التأكيد", "تم الشحن", "تم التسليم" };
                            string[] icons = { "fa-clock", "fa-check", "fa-truck", "fa-box-open" };

                            for (int i = 0; i < steps.Length; i++)
                            {
                                var stepClass = "";
                                if (i < currentStep) { stepClass = "completed"; }
                                else if (i == currentStep) { stepClass = "active"; }

                                <div class="step-item @stepClass">
                                    <div class="step-circle"><i class="fas @icons[i]"></i></div>
                                    <div class="step-label">@(isAr? labelsAr[i] : steps[i])</div>
                                </div>
                            }
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Main Content -->
        <div class="details-grid fade-up" style="animation-delay: 0.1s;">

            <!-- Left Column: Items & Prices -->
            <div class="left-col">
                <div class="info-card">
                    <div class="card-head">
                        <h3><i class="fas fa-shopping-basket text-primary"></i> @(isAr ? "المنتجات" : "Items") <span class="badge bg-light text-dark ms-2">@Model.OrderItems.Count</span></h3>
                        <button onclick="window.print()" class="btn-outline">
                            <i class="fas fa-print me-2"></i> @(isAr ? "طباعة" : "Print")
                        </button>
                    </div>

                    <!-- Items List -->
                    <div>
                        @foreach (var item in Model.OrderItems)
                        {
                            <div class="item-row">
                                <img src="~/@item.Product?.ImageUrl" class="item-img" onerror="this.src='/images/default.png'">
                                <div class="item-details">
                                    <div class="item-name">@(isAr? item.Product?.Name : item.Product?.NameEn)</div>
                                    <div class="item-meta">
                                        <span>SKU: @item.Product?.SKU</span>
                                        @if (!string.IsNullOrEmpty(item.SelectedColorHex))
                                        {
                                            <span class="d-flex align-items-center gap-1">
                                                <span class="color-dot" style="background:@item.SelectedColorHex"></span>
                                                @item.SelectedColorName
                                            </span>
                                        }
                                    </div>
                                </div>
                                <div class="item-price">
                                    <div class="price-val">@((item.UnitPrice * item.Quantity).ToString("N0")) <small>ج.م</small></div>
                                    <div class="price-qty">@item.UnitPrice.ToString("N0") x @item.Quantity</div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Price Breakdown (With Tax) -->
                    <div class="p-4" style="background: var(--d-header-bg);">
                        <div class="row justify-content-end text-end">
                            <div class="col-md-6 col-lg-5">
                                <div class="summary-row">
                                    <span>@(isAr ? "المجموع الفرعي" : "Subtotal")</span>
                                    <span class="fw-bold">@itemsSum.ToString("N2")</span>
                                </div>
                                <div class="summary-row">
                                    <span>@(isAr ? "الضريبة (14%)" : "Tax (14%)")</span>
                                    <span class="fw-bold">@taxAmount.ToString("N2")</span>
                                </div>
                                <div class="summary-row">
                                    <span>@(isAr ? "الشحن" : "Shipping")</span>
                                    <span class="fw-bold">@Model.ShippingCost.ToString("N2")</span>
                                </div>
                                <div class="summary-row total">
                                    <span>@(isAr ? "الإجمالي الكلي" : "Grand Total")</span>
                                    <span>@Model.TotalAmount.ToString("N0") <small style="font-size:0.8rem">ج.م</small></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Shipping & Info -->
            <div class="right-col">

                <!-- Payment Summary -->
                <div class="info-card">
                    <div class="card-head">
                        <h3><i class="fas fa-file-invoice text-primary"></i> @(isAr ? "ملخص الطلب" : "Order Summary")</h3>
                    </div>
                    <div class="sidebar-info">
                        <div class="summary-row">
                            <span>@(isAr ? "رقم الطلب" : "Order ID")</span>
                            <span class="fw-bold">#@Model.Id</span>
                        </div>
                        <div class="summary-row">
                            <span>@(isAr ? "طريقة الدفع" : "Payment")</span>
                            <span class="badge @(Model.PaymentMethod == "Wallet" ? "bg-primary-subtle text-primary" : "bg-success-subtle text-success") py-1 px-3">
                                @(isAr ? (Model.PaymentMethod == "Wallet" ? "محفظة" : "كاش") : Model.PaymentMethod)
                            </span>
                        </div>
                        <div class="summary-row">
                            <span>@(isAr ? "الإجمالي" : "Total")</span>
                            <span class="fw-bold text-primary" style="font-size:1.1rem">@Model.TotalAmount.ToString("N0") <small>ج.م</small></span>
                        </div>
                    </div>
                </div>

                <!-- Shipping Address -->
                <div class="info-card">
                    <div class="card-head">
                        <h3><i class="fas fa-truck text-secondary"></i> @(isAr ? "معلومات التوصيل" : "Delivery Info")</h3>
                    </div>
                    <div class="sidebar-info">
                        <div class="info-group">
                            <h4>@(isAr ? "العنوان" : "Address")</h4>
                            <div class="info-text">
                                @Model.Address<br>
                                @Model.City, @Model.Governorate
                            </div>
                        </div>
                        <div class="info-group">
                            <h4>@(isAr ? "المستلم" : "Receiver")</h4>
                            <div class="info-text">
                                <i class="fas fa-user me-1 text-muted"></i> @Model.CustomerName<br>
                                <i class="fas fa-phone me-1 text-muted"></i> <a href="tel:@Model.Phone" class="text-decoration-none" style="color:var(--d-primary)">@Model.Phone</a>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="info-group">
                                <h4>@(isAr ? "ملاحظات" : "Notes")</h4>
                                <div class="info-text fst-italic text-muted">"@Model.Notes"</div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>