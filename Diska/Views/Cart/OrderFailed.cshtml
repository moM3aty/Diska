@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "فشل الطلب" : "Order Failed";
    int orderId = ViewBag.OrderId ?? 0;
}

<section class="section-padding" style="min-height: 70vh; display: flex; align-items: center;">
    <div class="container text-center">
        <div class="order-summary-box" style="background: #fff; padding: 50px; max-width: 600px; margin: 0 auto; border-radius:16px; border:1px solid #fee2e2; box-shadow:0 10px 30px rgba(0,0,0,0.05);">

            <div style="width: 80px; height: 80px; background: #fee2e2; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px;">
                <i class="fas fa-times fa-3x" style="color: #dc2626;"></i>
            </div>

            <h2 style="color: #dc2626; margin-bottom: 10px;">@(isAr ? "عفواً، لم يتم تنفيذ الطلب" : "Order Failed")</h2>
            <p style="color: #666; font-size: 1.1rem; margin-bottom: 30px;">
                @(isAr ? "حدث خطأ أثناء معالجة عملية الدفع أو إنشاء الطلب. يرجى المحاولة مرة أخرى." : "An error occurred while processing your payment or creating the order. Please try again.")
            </p>

            <div style="display: flex; gap: 15px; justify-content: center; flex-wrap: wrap;">
                <a asp-action="Checkout" class="btn primary" style="padding:12px 30px; border-radius:8px; text-decoration:none;">
                    <i class="fas fa-redo"></i> @(isAr ? "محاولة مرة أخرى" : "Try Again")
                </a>
                <a asp-controller="Home" asp-action="Contact" class="btn" style="border: 1px solid #ccc; color:#555; padding:12px 30px; border-radius:8px; text-decoration:none;">
                    <i class="fas fa-headset"></i> @(isAr ? "الدعم الفني" : "Support")
                </a>
            </div>

        </div>
    </div>
</section>