@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "فشل الطلب" : "Order Failed";
    int orderId = ViewBag.OrderId ?? 0;
    Layout = "_Layout";
}

<style>
    /* Premium Fail Styles */
    .failed-page-wrapper {
        background-color: var(--ua-bg-body, #f8fafc);
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .failed-card {
        background: var(--ua-card-bg, #ffffff);
        border: 1px solid var(--ua-border, #e2e8f0);
        border-radius: 24px;
        padding: 60px 40px;
        max-width: 600px;
        width: 100%;
        text-align: center;
        box-shadow: 0 20px 40px -10px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
        animation: shake 0.5s ease-in-out;
    }

        /* Red Top Line */
        .failed-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #ef4444, #f87171);
        }

    .icon-wrapper {
        width: 100px;
        height: 100px;
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        font-size: 3rem;
        position: relative;
        z-index: 1;
        box-shadow: 0 0 0 10px rgba(239, 68, 68, 0.05);
    }

    .failed-title {
        font-size: 2rem;
        font-weight: 800;
        color: #ef4444;
        margin-bottom: 15px;
    }

    .failed-desc {
        font-size: 1.1rem;
        color: var(--ua-text-muted, #64748b);
        line-height: 1.6;
        margin-bottom: 40px;
    }

    .btn-retry {
        background-color: #ef4444;
        color: #fff;
        padding: 14px 35px;
        border-radius: 50px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 10px 20px -5px rgba(239, 68, 68, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 10px;
        border: none;
    }

        .btn-retry:hover {
            background-color: #dc2626;
            transform: translateY(-3px);
            box-shadow: 0 15px 30px -5px rgba(239, 68, 68, 0.4);
            color: #fff;
        }

    .btn-support {
        background-color: transparent;
        color: var(--ua-text-main, #0f172a);
        padding: 14px 35px;
        border-radius: 50px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid var(--ua-border, #e2e8f0);
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

        .btn-support:hover {
            background-color: var(--ua-bg-body, #f8fafc);
            border-color: var(--ua-text-muted, #64748b);
            color: var(--ua-text-main, #0f172a);
        }

    @@keyframes shake {
        0%, 100%

    {
        transform: translateX(0);
    }

    10%, 30%, 50%, 70%, 90% {
        transform: translateX(-5px);
    }

    20%, 40%, 60%, 80% {
        transform: translateX(5px);
    }

    }

    /* Dark Mode Specifics */
    [data-bs-theme="dark"] .failed-card {
        background: #1e293b;
        border-color: rgba(255,255,255,0.05);
    }

    [data-bs-theme="dark"] .failed-title {
        color: #f87171;
    }

    [data-bs-theme="dark"] .icon-wrapper {
        background: rgba(248, 113, 113, 0.1);
        color: #f87171;
        box-shadow: 0 0 0 10px rgba(248, 113, 113, 0.05);
    }

    [data-bs-theme="dark"] .btn-retry {
        background-color: #f87171;
        color: #000;
        box-shadow: 0 10px 20px -5px rgba(248, 113, 113, 0.3);
    }

        [data-bs-theme="dark"] .btn-retry:hover {
            background-color: #ef4444;
        }

    [data-bs-theme="dark"] .btn-support {
        color: #f8fafc;
        border-color: rgba(255,255,255,0.1);
    }

        [data-bs-theme="dark"] .btn-support:hover {
            background-color: rgba(255,255,255,0.05);
        }
</style>

<div class="failed-page-wrapper">
    <div class="failed-card">

        <div class="icon-wrapper">
            <i class="fas fa-times-circle"></i>
        </div>

        <h1 class="failed-title">@(isAr ? "عفواً، لم يتم تنفيذ الطلب" : "Order Failed")</h1>

        <p class="failed-desc">
            @(isAr ? "حدث خطأ أثناء معالجة عملية الدفع أو إنشاء الطلب. يرجى المحاولة مرة أخرى أو التواصل مع الدعم الفني." : "An error occurred while processing your payment or creating the order. Please try again or contact support.")
        </p>

        <div class="d-flex flex-wrap justify-content-center gap-3">
            <a asp-action="Checkout" class="btn-retry">
                <i class="fas fa-redo"></i> @(isAr ? "محاولة مرة أخرى" : "Try Again")
            </a>

            <a asp-controller="Home" asp-action="Contact" class="btn-support">
                <i class="fas fa-headset"></i> @(isAr ? "الدعم الفني" : "Support")
            </a>
        </div>

    </div>
</div>