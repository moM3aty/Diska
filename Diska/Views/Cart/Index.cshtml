@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "سلة المشتريات" : "Shopping Cart";
    var dir = isAr ? "rtl" : "ltr";
}

<style>
    /* =========================================
           PREMIUM CART STYLES
           ========================================= */
    :root {
        --cart-bg-body: #f8fafc;
        --cart-card-bg: #ffffff;
        --cart-text-main: #1e293b;
        --cart-text-muted: #64748b;
        --cart-border: #e2e8f0;
        --cart-primary: #4f46e5;
        --cart-accent: #facc15;
        --cart-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02), 0 2px 4px -1px rgba(0, 0, 0, 0.02);
        --cart-input-bg: #f8fafc;
    }

    [data-bs-theme="dark"] {
        --cart-bg-body: #020617;
        --cart-card-bg: #1e293b;
        --cart-text-main: #f8fafc;
        --cart-text-muted: #94a3b8;
        --cart-border: rgba(255, 255, 255, 0.08);
        --cart-primary: #818cf8;
        --cart-accent: #facc15;
        --cart-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
        --cart-input-bg: #0f172a;
    }

    body {
        background-color: var(--cart-bg-body);
        transition: background-color 0.3s ease;
    }

    .cart-page-wrapper {
        min-height: 85vh;
        padding: 50px 0;
        font-family: 'Cairo', sans-serif;
    }

    .cart-grid {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 40px;
        align-items: start;
    }

    .cart-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 25px;
        border-bottom: 2px solid var(--cart-border);
        padding-bottom: 15px;
    }

        .cart-header h2 {
            font-weight: 800;
            color: var(--cart-primary);
            font-size: 1.8rem;
            margin: 0;
        }

    .cart-count {
        color: var(--cart-text-muted);
        font-weight: 600;
        font-size: 1rem;
    }

    .item-card {
        background: var(--cart-card-bg);
        border-radius: 16px;
        box-shadow: var(--cart-shadow);
        padding: 25px;
        display: flex;
        gap: 25px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        border: 1px solid var(--cart-border);
        align-items: center;
    }

        .item-card:hover {
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05);
            transform: translateY(-3px);
            border-color: var(--cart-border);
        }

    [data-bs-theme="dark"] .item-card:hover {
        border-color: var(--cart-primary);
    }

    .item-img-wrapper {
        width: 110px;
        height: 110px;
        flex-shrink: 0;
        background: #fff;
        border-radius: 12px;
        border: 1px solid var(--cart-border);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .item-img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        transition: transform 0.3s;
    }

    .item-card:hover .item-img {
        transform: scale(1.05);
    }

    .item-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .item-title {
        font-weight: 700;
        color: var(--cart-text-main);
        font-size: 1.15rem;
        text-decoration: none;
        margin-bottom: 8px;
        display: block;
        line-height: 1.4;
        transition: 0.2s;
    }

        .item-title:hover {
            color: var(--cart-primary);
        }

    .item-meta {
        font-size: 0.85rem;
        color: var(--cart-text-muted);
        margin-bottom: 15px;
    }

    .item-actions-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: auto;
    }

    .item-price {
        font-weight: 800;
        color: var(--cart-primary);
        font-size: 1.3rem;
    }

    /* --- New Quantity Selector Style (Matching Product Page) --- */
    .qty-input-group {
        display: flex;
        align-items: center;
        border: 1px solid var(--cart-border);
        border-radius: 50px;
        overflow: hidden;
        background: var(--cart-input-bg);
        height: 40px;
        width: fit-content;
    }

    .qty-btn {
        background: transparent;
        border: none;
        width: 35px;
        height: 100%;
        font-weight: bold;
        color: var(--cart-text-main);
        cursor: pointer;
        transition: 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .qty-btn:hover {
            background: rgba(0,0,0,0.05);
            color: var(--cart-primary);
        }

    [data-bs-theme="dark"] .qty-btn:hover {
        background: rgba(255,255,255,0.1);
    }

    .qty-input {
        width: 45px;
        text-align: center;
        border: none;
        background: transparent;
        font-weight: 700;
        color: var(--cart-text-main);
        outline: none;
        -moz-appearance: textfield;
        font-size: 1rem;
        height: 100%;
        cursor: text;
    }

        .qty-input:focus {
            background: var(--cart-card-bg);
        }

        .qty-input::-webkit-outer-spin-button, .qty-input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    /* --------------------------------------------------------- */

    .remove-btn {
        color: var(--cart-text-muted);
        background: transparent;
        border: none;
        font-size: 1.1rem;
        cursor: pointer;
        transition: 0.2s;
        padding: 8px;
        border-radius: 8px;
    }

        .remove-btn:hover {
            color: #ef4444;
            background: rgba(239, 68, 68, 0.1);
        }

    .cart-summary {
        background: var(--cart-card-bg);
        padding: 25px;
        border: 1px solid var(--cart-border);
        border-radius: 10px;
        height: fit-content;
        box-shadow: var(--cart-shadow);
    }

        .cart-summary h3 {
            margin-bottom: 20px;
            border-bottom: 1px solid var(--cart-border);
            padding-bottom: 10px;
            color: var(--cart-text-main);
            font-weight: 800;
        }

    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
        font-size: 0.95rem;
        color: var(--cart-text-muted);
    }

        .summary-row span.fw-bold {
            color: var(--cart-text-main);
        }

        .summary-row.total {
            font-weight: 900;
            font-size: 1.2rem;
            color: var(--cart-primary);
            border-top: 1px solid var(--cart-border);
            padding-top: 15px;
        }

    .checkout-btn {
        background: var(--cart-primary);
        color: #fff;
        width: 100%;
        padding: 15px;
        border-radius: 12px;
        font-weight: 700;
        border: none;
        margin-top: 20px;
        cursor: pointer;
        transition: 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
        font-size: 1.05rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

        .checkout-btn:hover {
            background: #1e293b;
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            color: var(--cart-accent);
        }

    [data-bs-theme="dark"] .checkout-btn:hover {
        background: #fff;
        color: #000;
    }

    .empty-cart-state {
        text-align: center;
        padding: 80px 20px;
        background: var(--cart-card-bg);
        border-radius: 20px;
        border: 2px dashed var(--cart-border);
        box-shadow: var(--cart-shadow);
    }

    .empty-icon-box {
        width: 100px;
        height: 100px;
        background: var(--cart-input-bg);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px;
        color: var(--cart-text-muted);
        font-size: 3rem;
    }

    @@media (max-width: 992px) {
        .cart-grid {
            grid-template-columns: 1fr;
        }

        .cart-summary {
            position: static;
            margin-top: 30px;
        }
    }

    @@media (max-width: 768px) {
        .item-card {
            flex-direction: column;
            align-items: flex-start;
        }

        .item-img-wrapper {
            width: 100%;
            height: 180px;
        }

        .item-actions-row {
            width: 100%;
            margin-top: 15px;
        }
    }
</style>

<div class="cart-page-wrapper">
    <div class="container">
        <div id="cartContentWrapper">
            <div class="text-center py-5">
                <i class="fas fa-spinner fa-spin fa-3x" style="color:var(--cart-primary);"></i>
                <p class="mt-4 text-muted fw-bold">@(isAr ? "جاري تحميل السلة..." : "Loading cart...")</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const CART_KEY_LOCAL = 'DISKA_CART';
        const isArPage = '@isAr' === 'True';
        const getCartDetailsUrl = '@Url.Action("GetCartDetails", "Cart", new { area = "" })';

        // 1. مزامنة البيانات عند التحميل
        async function initCartPage() {
            const container = document.getElementById('cartContentWrapper');
            let cart = [];

            try {
                const stored = localStorage.getItem(CART_KEY_LOCAL);
                if (stored) cart = JSON.parse(stored);
            } catch (e) { console.error(e); }

            if (!cart || cart.length === 0) {
                renderEmptyState(container);
                return;
            }

            // عرض مبدئي
            renderCartFromLocal(container);

            try {
                const payload = cart.map(item => ({
                    Id: String(item.id),
                    Qty: parseInt(item.qty),
                    ColorName: item.colorName,
                    ColorHex: item.colorHex
                }));

                const response = await fetch(getCartDetailsUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    const serverItems = await response.json();

                    if (serverItems && serverItems.length > 0) {
                        let updated = false;
                        cart.forEach(localItem => {
                            const serverItem = serverItems.find(si =>
                                String(si.id) === String(localItem.id) &&
                                (si.colorName || '') === (localItem.colorName || '') &&
                                (si.colorHex || '') === (localItem.colorHex || '')
                            );

                            if (serverItem) {
                                // تحديث المخزون والسعر من السيرفر
                                localItem.maxStock = parseInt(serverItem.stock);
                                localItem.price = serverItem.price;

                                // تصحيح الكمية إذا تجاوزت المخزون الجديد
                                if (localItem.qty > localItem.maxStock) {
                                    localItem.qty = localItem.maxStock;
                                    updated = true;
                                }
                            }
                        });
                        localStorage.setItem(CART_KEY_LOCAL, JSON.stringify(cart));
                        // إعادة رسم السلة بالبيانات المحدثة
                        renderCartFromLocal(container);
                    }
                }
            } catch (e) {
                console.error("Failed to sync cart", e);
            }
        }

        // 2. دالة العرض
        function renderCartFromLocal(container) {
            const cart = JSON.parse(localStorage.getItem(CART_KEY_LOCAL)) || [];

            if (cart.length === 0) {
                renderEmptyState(container);
                return;
            }

            let itemsHtml = '';
            let subtotal = 0;

            cart.forEach((item, index) => {
                let itemTotal = item.price * item.qty;
                subtotal += itemTotal;

                // إضافة max للـ input
                const maxAttr = item.maxStock ? `max="${item.maxStock}"` : '';

                itemsHtml += `
                    <div class="item-card">
                        <div class="item-img-wrapper"><img src="/${item.image}" onerror="this.src='/images/default.png'" class="item-img" alt="${item.name}"></div>
                        <div class="item-details">
                            <div style="display:flex; justify-content:space-between; align-items:start; width:100%;">
                                <div><a href="/Product/Details/${item.id}" class="item-title">${item.name}</a><div class="item-meta">SKU: #${item.id}</div></div>
                                <button type="button" class="remove-btn" onclick="removeItemModern(${index})"><i class="fas fa-trash-alt"></i></button>
                            </div>
                            <div class="item-actions-row">
                                <!-- نفس ستايل صفحة المنتج بالضبط -->
                                <div class="qty-input-group">
                                    <button type="button" class="qty-btn" onclick="changeQtyModern(${index}, -1)">-</button>
                                    <input type="number" class="qty-input" value="${item.qty}" min="1" ${maxAttr} onchange="updateQtyManual(${index}, this)" onkeyup="if(event.key === 'Enter') updateQtyManual(${index}, this)">
                                    <button type="button" class="qty-btn" onclick="changeQtyModern(${index}, 1)">+</button>
                                </div>
                                <div class="item-price">${itemTotal.toLocaleString()} <small style="font-size:0.85rem; font-weight:600; color:var(--cart-text-muted);">@(isAr ? "ج.م" : "EGP")</small></div>
                            </div>
                        </div>
                    </div>`;
            });

            const tax = subtotal * 0.14;
            const total = subtotal + tax;

            const summaryHtml = `
                <div class="cart-summary">
                    <h3 class="summary-title">@(isAr ? "ملخص الطلب" : "Order Summary")</h3>
                    <div class="summary-row"><span>@(isAr ? "عدد المنتجات" : "Items Count")</span><span class="fw-bold">${cart.length}</span></div>
                    <div class="summary-row"><span>@(isAr ? "المجموع الفرعي" : "Subtotal")</span><span>${subtotal.toLocaleString()} @(isAr ? "ج.م" : "EGP")</span></div>
                    <div class="summary-row">
                        <span>@(isAr ? "الضريبة (14%)" : "VAT (14%)")</span>
                        <span class="fw-bold" style="color:var(--cart-text-main)">${tax.toLocaleString()} @(isAr ? "ج.م" : "EGP")</span>
                    </div>
                    <div class="summary-row total">
                        <span>@(isAr ? "الإجمالي" : "Total")</span>
                        <span>${total.toLocaleString()} <small style="font-size:1rem; color:var(--cart-text-muted); font-weight:600;">@(isAr ? "ج.م" : "EGP")</small></span>
                    </div>
                    <a href="/Cart/Checkout" class="checkout-btn">@(isAr ? "إتمام الشراء" : "Checkout") <i class="fas @(isAr ? "fa-arrow-left" : "fa-arrow-right")"></i></a>
                    <div style="text-align:center; margin-top:20px; color:var(--cart-text-muted); font-size:0.85rem; display:flex; align-items:center; justify-content:center; gap:6px;">
                        <i class="fas fa-shield-alt" style="color:#10b981;"></i> @(isAr ? "تسوق آمن ومحمي 100%" : "100% Secure Checkout")
                    </div>
                </div>`;

            container.innerHTML = `<div class="cart-grid"><div><div class="cart-header"><h2>@(isAr ? "عربة التسوق" : "My Cart")</h2><span class="cart-count">${cart.length} @(isAr ? "عناصر" : "Items")</span></div>${itemsHtml}</div><div>${summaryHtml}</div></div>`;
            if(typeof updateCartBadge === 'function') updateCartBadge();
        }

        function renderEmptyState(container) {
             container.innerHTML = `
                <div class="empty-cart-state">
                    <div class="empty-icon-box"><i class="fas fa-shopping-cart"></i></div>
                    <h2 style="color:var(--cart-text-main); font-weight:800; margin-bottom:15px;">@(isAr ? "سلة المشتريات فارغة" : "Your Cart is Empty")</h2>
                    <p style="color:var(--cart-text-muted); margin-bottom:35px; font-size:1.1rem;">@(isAr ? "يبدو أنك لم تضف أي منتجات بعد." : "Looks like you haven't added anything yet.")</p>
                    <a href="/" class="btn" style="background:var(--cart-primary); color:#fff; padding:15px 50px; font-size:1.1rem; border-radius:50px; text-decoration:none; font-weight:bold;">@(isAr ? "ابدأ التسوق" : "Start Shopping")</a>
                </div>`;
        }

        // 3. التغيير عبر الأزرار
        function changeQtyModern(index, change) {
            let cart = JSON.parse(localStorage.getItem(CART_KEY_LOCAL)) || [];
            let item = cart[index];
            let newQty = parseInt(item.qty) + change;

            let maxStock = parseInt(item.maxStock);

            if (!isNaN(maxStock) && newQty > maxStock) {
                Swal.fire({
                    icon: 'warning',
                    title: isArPage ? 'تنبيه' : 'Warning',
                    text: isArPage ? `الكمية المتاحة فقط ${maxStock} قطعة` : `Only ${maxStock} items available`,
                    confirmButtonColor: '#4f46e5',
                    timer: 2000
                });
                return;
            }

            if (newQty < 1) { removeItemModern(index); return; }

            item.qty = newQty;
            localStorage.setItem(CART_KEY_LOCAL, JSON.stringify(cart));
            renderCartFromLocal(document.getElementById('cartContentWrapper'));
        }

        // 4. التغيير اليدوي عبر الـ Input
        function updateQtyManual(index, input) {
            let cart = JSON.parse(localStorage.getItem(CART_KEY_LOCAL)) || [];
            let item = cart[index];
            let newQty = parseInt(input.value);
            let maxStock = parseInt(item.maxStock);

            if (isNaN(newQty) || newQty < 1) {
                newQty = 1;
                input.value = 1;
            }

            if (!isNaN(maxStock) && newQty > maxStock) {
                newQty = maxStock;
                input.value = maxStock;
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'warning',
                    title: isArPage ? `عفواً، الكمية المتاحة ${maxStock} فقط` : `Only ${maxStock} available`,
                    showConfirmButton: false,
                    timer: 2000
                });
            }

            item.qty = newQty;
            localStorage.setItem(CART_KEY_LOCAL, JSON.stringify(cart));
            renderCartFromLocal(document.getElementById('cartContentWrapper'));
        }

        function removeItemModern(index) {
            Swal.fire({
                title: isArPage ? 'حذف المنتج؟' : 'Remove Item?',
                text: isArPage ? 'هل أنت متأكد من حذف هذا المنتج؟' : 'Are you sure?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#64748b',
                confirmButtonText: isArPage ? 'نعم، احذفه' : 'Yes',
                cancelButtonText: isArPage ? 'إلغاء' : 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    let cart = JSON.parse(localStorage.getItem(CART_KEY_LOCAL)) || [];
                    cart.splice(index, 1);
                    localStorage.setItem(CART_KEY_LOCAL, JSON.stringify(cart));
                    renderCartFromLocal(document.getElementById('cartContentWrapper'));
                    Swal.fire({ title: isArPage ? 'تم الحذف!' : 'Deleted!', icon: 'success', confirmButtonColor: '#4f46e5', timer: 1500, showConfirmButton: false });
                }
            });
        }

        document.addEventListener('DOMContentLoaded', initCartPage);
    </script>
}