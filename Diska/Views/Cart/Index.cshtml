@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "سلة المشتريات" : "Shopping Cart";
}

<section class="cart-section">
    <div class="container">
        <h2 style="margin-bottom: 20px;">@(isAr ? "سلة المشتريات" : "Shopping Cart")</h2>

        <div class="cart-layout">
            <div class="cart-items">
                <!-- Items injected via JS -->
                <p style="text-align:center; padding: 20px;">@(isAr ? "جاري تحميل السلة..." : "Loading cart...")</p>
            </div>

            <div class="cart-summary">
                <h3>@(isAr ? "ملخص الطلب" : "Order Summary")</h3>
                <div class="summary-row">
                    <span>@(isAr ? "المجموع الفرعي" : "Subtotal")</span>
                    <span id="cartSubTotal">0.00 @(isAr ? "ج.م" : "EGP")</span>
                </div>
                <div class="summary-row">
                    <span>@(isAr ? "الضريبة (14%)" : "VAT (14%)")</span>
                    <span>@(isAr ? "مشمولة" : "Included")</span>
                </div>
                <div class="summary-row total">
                    <span>@(isAr ? "الإجمالي" : "Total")</span>
                    <span id="cartTotal">0.00 @(isAr ? "ج.م" : "EGP")</span>
                </div>
                <a asp-action="Checkout" class="btn primary w-100 checkout-btn" style="text-align: center; text-decoration: none;">
                    @(isAr ? "إتمام الشراء" : "Proceed to Checkout")
                </a>
                <a asp-controller="Home" asp-action="Index" class="continue-shopping">@(isAr ? "متابعة التسوق" : "Continue Shopping")</a>
            </div>
        </div>
    </div>
</section>