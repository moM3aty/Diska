@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "سلة المشتريات" : "Shopping Cart";
    var dir = isAr ? "rtl" : "ltr";
}

<style>
    /* ... (نفس الستايل Premium Dark Mode السابق) ... */
    :root {
        --cart-bg-body: #f8fafc;
        --cart-card-bg: #ffffff;
        --cart-text-main: #1e293b;
        --cart-text-muted: #64748b;
        --cart-border: #e2e8f0;
        --cart-primary: #4f46e5;
        --cart-accent: #facc15;
        --cart-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02), 0 2px 4px -1px rgba(0, 0, 0, 0.02);
        --cart-input-bg: #f8fafc;
    }

    [data-bs-theme="dark"] {
        --cart-bg-body: #020617;
        --cart-card-bg: #1e293b;
        --cart-text-main: #f8fafc;
        --cart-text-muted: #94a3b8;
        --cart-border: rgba(255, 255, 255, 0.08);
        --cart-primary: #818cf8;
        --cart-accent: #facc15;
        --cart-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
        --cart-input-bg: #0f172a;
    }

    body {
        background-color: var(--cart-bg-body);
        transition: background-color 0.3s ease;
    }

    .cart-page-wrapper {
        background-color: var(--cart-bg-body);
        min-height: 85vh;
        padding: 50px 0;
        font-family: 'Cairo', sans-serif;
    }

    .cart-grid {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 40px;
        align-items: start;
    }

    .cart-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 25px;
        border-bottom: 2px solid var(--cart-border);
        padding-bottom: 15px;
    }

        .cart-header h2 {
            font-weight: 800;
            color: var(--cart-primary);
            font-size: 1.8rem;
            margin: 0;
        }

    .cart-count {
        color: var(--cart-text-muted);
        font-weight: 600;
        font-size: 1rem;
    }

    .item-card {
        background: var(--cart-card-bg);
        border-radius: 16px;
        box-shadow: var(--cart-shadow);
        padding: 25px;
        display: flex;
        gap: 25px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        border: 1px solid var(--cart-border);
        align-items: center;
    }

        .item-card:hover {
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05);
            transform: translateY(-3px);
            border-color: var(--cart-border);
        }

    [data-bs-theme="dark"] .item-card:hover {
        border-color: var(--cart-primary);
    }

    .item-img-wrapper {
        width: 110px;
        height: 110px;
        flex-shrink: 0;
        background: #fff;
        border-radius: 12px;
        border: 1px solid var(--cart-border);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .item-img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        transition: transform 0.3s;
    }

    .item-card:hover .item-img {
        transform: scale(1.05);
    }

    .item-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .item-title {
        font-weight: 700;
        color: var(--cart-text-main);
        font-size: 1.15rem;
        text-decoration: none;
        margin-bottom: 8px;
        display: block;
        line-height: 1.4;
        transition: 0.2s;
    }

        .item-title:hover {
            color: var(--cart-primary);
        }

    .item-meta {
        font-size: 0.85rem;
        color: var(--cart-text-muted);
        margin-bottom: 15px;
    }

    .item-actions-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: auto;
    }

    .item-price {
        font-weight: 800;
        color: var(--cart-primary);
        font-size: 1.3rem;
    }

    .qty-selector {
        display: inline-flex;
        align-items: center;
        background: var(--cart-input-bg);
        border: 1px solid var(--cart-border);
        border-radius: 50px;
        padding: 4px;
    }

    .qty-btn {
        width: 32px;
        height: 32px;
        border: none;
        background: var(--cart-card-bg);
        border-radius: 50%;
        cursor: pointer;
        font-weight: bold;
        color: var(--cart-text-main);
        box-shadow: 0 1px 2px rgba(0,0,0,0.05);
        transition: 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .qty-btn:hover {
            background: var(--cart-accent);
            color: #000;
        }

    .qty-input {
        width: 45px;
        text-align: center;
        border: none;
        background: transparent;
        font-weight: 700;
        color: var(--cart-text-main);
        font-size: 1rem;
        pointer-events: none;
    }

    .remove-btn {
        color: var(--cart-text-muted);
        background: transparent;
        border: none;
        font-size: 1.1rem;
        cursor: pointer;
        transition: 0.2s;
        padding: 8px;
        border-radius: 8px;
    }

        .remove-btn:hover {
            color: #ef4444;
            background: rgba(239, 68, 68, 0.1);
        }

    .cart-summary {
        background: var(--cart-card-bg);
        padding: 25px;
        border: 1px solid var(--cart-border);
        border-radius: 10px;
        height: fit-content;
        box-shadow: var(--cart-shadow);
    }

        .cart-summary h3 {
            margin-bottom: 20px;
            border-bottom: 1px solid var(--cart-border);
            padding-bottom: 10px;
            color: var(--cart-text-main);
            font-weight: 800;
        }

    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
        font-size: 0.95rem;
        color: var(--cart-text-muted);
    }

        .summary-row span.fw-bold {
            color: var(--cart-text-main);
        }

        .summary-row.total {
            font-weight: 900;
            font-size: 1.2rem;
            color: var(--cart-primary);
            border-top: 1px solid var(--cart-border);
            padding-top: 15px;
        }

    .continue-shopping {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: var(--cart-text-muted);
        font-size: 0.9rem;
    }

        .continue-shopping:hover {
            color: var(--cart-primary);
        }

    .checkout-btn {
        background: var(--cart-primary);
        color: #fff;
        width: 100%;
        padding: 15px;
        border-radius: 12px;
        font-weight: 700;
        border: none;
        margin-top: 20px;
        cursor: pointer;
        transition: 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
        font-size: 1.05rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

        .checkout-btn:hover {
            background: #1e293b;
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            color: var(--cart-accent);
        }

    [data-bs-theme="dark"] .checkout-btn:hover {
        background: #fff;
        color: #000;
    }

    .empty-cart-state {
        text-align: center;
        padding: 80px 20px;
        background: var(--cart-card-bg);
        border-radius: 20px;
        border: 2px dashed var(--cart-border);
        box-shadow: var(--cart-shadow);
    }

    .empty-icon-box {
        width: 100px;
        height: 100px;
        background: var(--cart-input-bg);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px;
        color: var(--cart-text-muted);
        font-size: 3rem;
    }

    @@media (max-width: 992px) {
        .cart-grid {
            grid-template-columns: 1fr;
        }

        .cart-summary {
            position: static;
            margin-top: 30px;
        }
    }

    @@media (max-width: 768px) {
        .item-card {
            flex-direction: column;
            align-items: flex-start;
        }

        .item-img-wrapper {
            width: 100%;
            height: 180px;
        }

        .item-actions-row {
            width: 100%;
            margin-top: 15px;
        }
    }
</style>

<div class="cart-page-wrapper">
    <div class="container">
        <div id="cartContentWrapper">
            <div class="text-center py-5">
                <i class="fas fa-spinner fa-spin fa-3x" style="color:var(--cart-primary);"></i>
                <p class="mt-4 text-muted fw-bold">@(isAr ? "جاري تحميل السلة..." : "Loading cart...")</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const CART_KEY_LOCAL = 'DISKA_CART';
        const isArPage = '@isAr' === 'True';

        function renderCartPageModern() {
            const container = document.getElementById('cartContentWrapper');
            const cart = JSON.parse(localStorage.getItem(CART_KEY_LOCAL)) || [];

            if (cart.length === 0) {
                container.innerHTML = `
                    <div class="empty-cart-state">
                        <div class="empty-icon-box"><i class="fas fa-shopping-cart"></i></div>
                        <h2 style="color:var(--cart-text-main); font-weight:800; margin-bottom:15px;">@(isAr ? "سلة المشتريات فارغة" : "Your Cart is Empty")</h2>
                        <p style="color:var(--cart-text-muted); margin-bottom:35px; font-size:1.1rem;">@(isAr ? "يبدو أنك لم تضف أي منتجات بعد." : "Looks like you haven't added anything yet.")</p>
                        <a href="/" class="btn" style="background:var(--cart-primary); color:#fff; padding:15px 50px; font-size:1.1rem; border-radius:50px; text-decoration:none; font-weight:bold;">@(isAr ? "ابدأ التسوق" : "Start Shopping")</a>
                    </div>`;
                return;
            }

            let itemsHtml = '';
            let subtotal = 0;

            cart.forEach((item, index) => {
                let itemTotal = item.price * item.qty;
                subtotal += itemTotal;
                itemsHtml += `
                    <div class="item-card">
                        <div class="item-img-wrapper"><img src="/${item.image}" onerror="this.src='/images/default.png'" class="item-img" alt="${item.name}"></div>
                        <div class="item-details">
                            <div style="display:flex; justify-content:space-between; align-items:start; width:100%;">
                                <div><a href="/Product/Details/${item.id}" class="item-title">${item.name}</a><div class="item-meta">SKU: #${item.id}</div></div>
                                <button type="button" class="remove-btn" onclick="removeItemModern(${index})"><i class="fas fa-trash-alt"></i></button>
                            </div>
                            <div class="item-actions-row">
                                <div class="qty-selector">
                                    <button type="button" class="qty-btn" onclick="changeQtyModern(${index}, -1)"><i class="fas fa-minus" style="font-size:0.7rem;"></i></button>
                                    <input type="text" class="qty-input" value="${item.qty}">
                                    <button type="button" class="qty-btn" onclick="changeQtyModern(${index}, 1)"><i class="fas fa-plus" style="font-size:0.7rem;"></i></button>
                                </div>
                                <div class="item-price">${itemTotal.toLocaleString()} <small style="font-size:0.85rem; font-weight:600; color:var(--cart-text-muted);">@(isAr ? "ج.م" : "EGP")</small></div>
                            </div>
                        </div>
                    </div>`;
            });

            // حساب الضريبة (14%)
            const tax = subtotal * 0.14;
            const total = subtotal + tax;

            const summaryHtml = `
                <div class="cart-summary">
                    <h3 class="summary-title">@(isAr ? "ملخص الطلب" : "Order Summary")</h3>
                    <div class="summary-row"><span>@(isAr ? "عدد المنتجات" : "Items Count")</span><span class="fw-bold">${cart.length}</span></div>
                    <div class="summary-row"><span>@(isAr ? "المجموع الفرعي" : "Subtotal")</span><span>${subtotal.toLocaleString()} @(isAr ? "ج.م" : "EGP")</span></div>
                    <div class="summary-row">
                        <span>@(isAr ? "الضريبة (14%)" : "VAT (14%)")</span>
                        <span class="fw-bold" style="color:var(--cart-text-main)">${tax.toLocaleString()} @(isAr ? "ج.م" : "EGP")</span>
                    </div>
                    <div class="summary-row total">
                        <span>@(isAr ? "الإجمالي" : "Total")</span>
                        <span>${total.toLocaleString()} <small style="font-size:1rem; color:var(--cart-text-muted); font-weight:600;">@(isAr ? "ج.م" : "EGP")</small></span>
                    </div>
                    <a href="/Cart/Checkout" class="checkout-btn">@(isAr ? "إتمام الشراء" : "Checkout") <i class="fas @(isAr ? "fa-arrow-left" : "fa-arrow-right")"></i></a>
                    <div style="text-align:center; margin-top:20px; color:var(--cart-text-muted); font-size:0.85rem; display:flex; align-items:center; justify-content:center; gap:6px;">
                        <i class="fas fa-shield-alt" style="color:var(--cart-success);"></i> @(isAr ? "تسوق آمن ومحمي 100%" : "100% Secure Checkout")
                    </div>
                </div>`;

            container.innerHTML = `<div class="cart-grid"><div><div class="cart-header"><h2>@(isAr ? "عربة التسوق" : "My Cart")</h2><span class="cart-count">${cart.length} @(isAr ? "عناصر" : "Items")</span></div>${itemsHtml}</div><div>${summaryHtml}</div></div>`;
            if(typeof updateCartBadge === 'function') updateCartBadge();
        }

        function changeQtyModern(index, change) {
            let cart = JSON.parse(localStorage.getItem(CART_KEY_LOCAL)) || [];
            let item = cart[index];
            let newQty = parseInt(item.qty) + change;
            if (item.maxStock && newQty > item.maxStock) { Swal.fire({ icon: 'warning', title: isArPage ? 'عفواً' : 'Oops', text: isArPage ? 'لقد وصلت للحد الأقصى للمخزون' : 'Max stock reached', confirmButtonColor: '#4f46e5' }); return; }
            if (newQty < 1) { removeItemModern(index); return; }
            item.qty = newQty;
            localStorage.setItem(CART_KEY_LOCAL, JSON.stringify(cart));
            renderCartPageModern();
        }

        function removeItemModern(index) {
            Swal.fire({
                title: isArPage ? 'حذف المنتج؟' : 'Remove Item?',
                text: isArPage ? 'هل أنت متأكد من حذف هذا المنتج؟' : 'Are you sure?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#64748b',
                confirmButtonText: isArPage ? 'نعم، احذفه' : 'Yes',
                cancelButtonText: isArPage ? 'إلغاء' : 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    let cart = JSON.parse(localStorage.getItem(CART_KEY_LOCAL)) || [];
                    cart.splice(index, 1);
                    localStorage.setItem(CART_KEY_LOCAL, JSON.stringify(cart));
                    renderCartPageModern();
                    Swal.fire({ title: isArPage ? 'تم الحذف!' : 'Deleted!', icon: 'success', confirmButtonColor: '#4f46e5' });
                }
            });
        }
        document.addEventListener('DOMContentLoaded', renderCartPageModern);
    </script>
}