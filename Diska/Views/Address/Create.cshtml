@model Diska.Models.UserAddress
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "إضافة عنوان جديد" : "Add New Address";
    Layout = "_Layout";
}

<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
<!-- FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* =========================================
           PREMIUM STYLES (Light & Dark)
           ========================================= */
    :root {
        /* Light Theme */
        --ua-bg: #f3f4f6;
        --ua-card-bg: #ffffff;
        --ua-text-main: #1f2937;
        --ua-text-muted: #6b7280;
        --ua-border: #e5e7eb;
        --ua-input-bg: #f9fafb;
        --ua-primary: #4f46e5;
        --ua-primary-hover: #4338ca;
        --ua-primary-light: rgba(79, 70, 229, 0.1);
        --ua-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.05);
        --ua-map-bg: #ddd;
    }

    [data-bs-theme="dark"] {
        /* Dark Theme */
        --ua-bg: #0f172a;
        --ua-card-bg: #1e293b;
        --ua-text-main: #f8fafc;
        --ua-text-muted: #9ca3af;
        --ua-border: rgba(255, 255, 255, 0.08);
        --ua-input-bg: #0f172a;
        --ua-primary: #818cf8;
        --ua-primary-hover: #6366f1;
        --ua-primary-light: rgba(129, 140, 248, 0.15);
        --ua-shadow: 0 20px 40px -5px rgba(0, 0, 0, 0.3);
        --ua-map-bg: #333;
    }

    body {
        background-color: var(--ua-bg);
        color: var(--ua-text-main);
        font-family: 'Cairo', sans-serif;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    /* Container & Header */
    .page-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 0 20px;
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .header-nav {
        margin-bottom: 25px;
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: var(--ua-text-muted);
        text-decoration: none;
        font-weight: 700;
        transition: 0.2s;
        padding: 8px 16px;
        border-radius: 50px;
        background: var(--ua-card-bg);
        border: 1px solid var(--ua-border);
    }

        .back-btn:hover {
            color: var(--ua-primary);
            border-color: var(--ua-primary);
            background: var(--ua-primary-light);
            transform: translateX(isAr ? 5px : -5px);
        }

    /* Form Card */
    .form-card {
        background: var(--ua-card-bg);
        border-radius: 16px;
        box-shadow: var(--ua-shadow);
        border: 1px solid var(--ua-border);
        overflow: hidden;
    }

    .form-header {
        padding: 30px;
        border-bottom: 1px solid var(--ua-border);
        background: linear-gradient(to right, var(--ua-primary-light), transparent);
    }

        .form-header h2 {
            margin: 0;
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--ua-text-main);
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .form-header h2 i {
                color: var(--ua-primary);
            }

    .form-body {
        padding: 30px;
    }

    /* Grid Layout */
    .address-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }

    @@media (max-width: 992px) {
        .address-grid

    {
        grid-template-columns: 1fr;
    }

    }

    /* Form Controls */
    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: 700;
        color: var(--ua-text-main);
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        @(isAr ? "right" : "left") : 15px;
        color: var(--ua-text-muted);
        pointer-events: none;
        transition: 0.3s;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 14px 35px;
        padding- @(isAr ? "right" : "left") : 45px;
        border: 1px solid var(--ua-border);
        background-color: var(--ua-input-bg);
        color: var(--ua-text-main);
        border-radius: 12px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        appearance: none;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--ua-primary);
            box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.15);
            outline: none;
            background-color: var(--ua-card-bg);
        }

            .form-control:focus + .input-icon {
                color: var(--ua-primary);
            }

    /* Select Options Dark Mode Fix */
    [data-bs-theme="dark"] select option {
        background-color: var(--ua-card-bg);
        color: var(--ua-text-main);
    }

    /* Map */
    .map-box {
        border-radius: 16px;
        overflow: hidden;
        border: 2px solid var(--ua-border);
        position: relative;
        height: 100%;
        min-height: 350px;
        background: var(--ua-map-bg);
    }

    #map {
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .map-overlay {
        position: absolute;
        bottom: 15px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 400;
        background: var(--ua-card-bg);
        padding: 8px 16px;
        border-radius: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        font-size: 0.85rem;
        font-weight: bold;
        color: var(--ua-text-main);
        white-space: nowrap;
        border: 1px solid var(--ua-border);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    [data-bs-theme="dark"] .leaflet-layer,
    [data-bs-theme="dark"] .leaflet-control-zoom-in,
    [data-bs-theme="dark"] .leaflet-control-zoom-out,
    [data-bs-theme="dark"] .leaflet-control-attribution {
        filter: invert(100%) hue-rotate(180deg) brightness(95%) contrast(90%);
    }

    /* Checkbox */
    .checkbox-wrapper {
        display: flex;
        align-items: center;
        background: var(--ua-input-bg);
        padding: 15px 20px;
        border-radius: 12px;
        border: 1px solid var(--ua-border);
        cursor: pointer;
        transition: 0.3s;
        margin-top: 10px;
    }

        .checkbox-wrapper:hover {
            border-color: var(--ua-primary);
        }

    .custom-checkbox {
        accent-color: var(--ua-primary);
        width: 20px;
        height: 20px;
        cursor: pointer;
    }

    /* Submit Button */
    .btn-submit {
        width: 100%;
        padding: 16px;
        font-size: 1.1rem;
        font-weight: 800;
        border-radius: 50px;
        background: var(--ua-primary);
        color: #fff;
        border: none;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
        margin-top: 30px;
    }

        .btn-submit:hover {
            background: var(--ua-primary-hover);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(79, 70, 229, 0.4);
        }

    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="page-container">
    <div class="header-nav">
        <a asp-action="Index" class="back-btn">
            <i class="fas @(isAr ? "fa-arrow-right" : "fa-arrow-left")"></i>
            <span>@(isAr ? "العودة للعناوين" : "Back to Addresses")</span>
        </a>
    </div>

    <div class="form-card">
        <div class="form-header">
            <h2>
                <i class="fas fa-map-marker-alt"></i>
                @(isAr ? "إضافة عنوان جديد" : "Add New Address")
            </h2>
        </div>

        <div class="form-body">
            <form asp-action="Create" method="post">
                <div class="address-grid">

                    <!-- Right Column -->
                    <div class="form-section">
                        <div class="form-group">
                            <label class="form-label">@(isAr ? "مسمى العنوان" : "Label")</label>
                            <div class="input-wrapper">
                                <i class="fas fa-tag input-icon"></i>
                                <input asp-for="Title" class="form-control" required placeholder="@(isAr ? "المنزل، العمل..." : "Home, Office...")" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">@(isAr ? "رقم الهاتف" : "Phone Number")</label>
                            <div class="input-wrapper">
                                <i class="fas fa-phone input-icon"></i>
                                <input asp-for="PhoneNumber" class="form-control" required type="tel" placeholder="01xxxxxxxxx" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">@(isAr ? "المحافظة" : "Governorate")</label>
                            <div class="input-wrapper">
                                <i class="fas fa-map input-icon"></i>
                                <select asp-for="Governorate" id="govSelect" class="form-select" required>
                                    <option value="">@(isAr ? "-- اختر المحافظة --" : "-- Select Governorate --")</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">@(isAr ? "المدينة / المنطقة" : "City / Area")</label>
                            <div class="input-wrapper">
                                <i class="fas fa-city input-icon"></i>
                                <select asp-for="City" id="citySelect" class="form-select" required disabled>
                                    <option value="">@(isAr ? "-- اختر المنطقة --" : "-- Select Area --")</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">@(isAr ? "العنوان بالتفصيل" : "Detailed Address")</label>
                            <div class="input-wrapper">
                                <i class="fas fa-home input-icon" style="top: 20px;"></i>
                                <textarea asp-for="Street" class="form-control" rows="3" required placeholder="@(isAr ? "اسم الشارع، رقم العقار..." : "Street name, building no...")"></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Left Column: Map -->
                    <div class="map-section">
                        <div class="form-label mb-2 d-flex justify-content-between">
                            <span>@(isAr ? "تحديد الموقع" : "Pin Location")</span>
                            <span style="font-weight:400; font-size:0.8rem; color:var(--ua-primary);">
                                <i class="fas fa-crosshairs"></i> @(isAr ? "تحديد تلقائي" : "Locate Me")
                            </span>
                        </div>
                        <div class="map-box">
                            <div id="map"></div>
                            <div class="map-overlay">
                                <i class="fas fa-hand-pointer text-warning"></i> @(isAr ? "اضغط لتحديد الموقع" : "Click map to pin")
                            </div>
                        </div>
                        <input type="hidden" asp-for="Latitude" id="lat" />
                        <input type="hidden" asp-for="Longitude" id="lng" />
                    </div>
                </div>

                <label class="checkbox-wrapper">
                    <input asp-for="IsDefault" type="checkbox" class="custom-checkbox">
                    <span class="ms-3 me-3" style="font-weight:600; color:var(--ua-text-main);">
                        @(isAr ? "تعيين كعنوان افتراضي" : "Set as default address")
                    </span>
                </label>

                <button type="submit" class="btn-submit">
                    <span>@(isAr ? "حفظ العنوان" : "Save Address")</span>
                    <i class="fas fa-check-circle"></i>
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="~/js/checkout-data.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var map = L.map('map').setView([30.0444, 31.2357], 10);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        var marker;

        map.on('click', function(e) {
            var lat = e.latlng.lat;
            var lng = e.latlng.lng;
            if (marker) marker.setLatLng(e.latlng);
            else marker = L.marker(e.latlng).addTo(map);

            document.getElementById('lat').value = lat;
            document.getElementById('lng').value = lng;
        });

        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                map.setView([position.coords.latitude, position.coords.longitude], 13);
            });
        }

        if(typeof govData !== 'undefined') {
             const govSelect = document.getElementById('govSelect');
             const citySelect = document.getElementById('citySelect');
             const lang = '@(isAr ? "ar" : "en")';

             Object.keys(govData).forEach(key => {
                 const opt = document.createElement('option');
                 opt.value = govData[key][lang];
                 opt.textContent = govData[key][lang];
                 opt.dataset.id = key;
                 govSelect.appendChild(opt);
             });

             govSelect.addEventListener('change', function() {
                 citySelect.innerHTML = '<option value="">@(isAr ? "-- اختر المنطقة --" : "-- Select Area --")</option>';
                 citySelect.disabled = true;

                 const selectedOpt = this.options[this.selectedIndex];
                 const govId = selectedOpt.dataset.id;

                 if(govId && cityData[govId]) {
                     citySelect.disabled = false;
                     cityData[govId].forEach(city => {
                         const opt = document.createElement('option');
                         opt.value = city[lang];
                         opt.textContent = city[lang];
                         citySelect.appendChild(opt);
                     });
                 }
             });
        }
    });
</script>