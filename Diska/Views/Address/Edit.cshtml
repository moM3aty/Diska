@model Diska.Models.UserAddress
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تعديل العنوان" : "Edit Address";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />

<style>
    .form-card {
        background: #fff;
        padding: 30px;
        border-radius: 16px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 4px 15px rgba(0,0,0,0.02);
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #cbd5e1;
        border-radius: 8px;
        font-size: 1rem;
        transition: 0.3s;
        margin-bottom: 15px;
    }

        .form-control:focus {
            border-color: var(--primary);
            outline: none;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

    label {
        font-weight: bold;
        color: #334155;
        margin-bottom: 8px;
        display: block;
    }
</style>

<section class="section-padding" style="background-color: #f9fafb;">
    <div class="container">
        <div style="max-width: 800px; margin: 0 auto;">
            <div style="margin-bottom: 20px;">
                <a asp-action="Index" style="text-decoration:none; color:#64748b; font-weight:bold;">
                    <i class="fas @(isAr ? "fa-arrow-right" : "fa-arrow-left")"></i> @(isAr ? "العودة للعناوين" : "Back to Addresses")
                </a>
            </div>

            <div class="form-card">
                <h2 style="margin-top:0; margin-bottom:25px; color:var(--primary); text-align:center;">
                    @(isAr ? "تعديل العنوان" : "Edit Address")
                </h2>

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />

                    <div style="display:grid; grid-template-columns: 1fr 1fr; gap:20px;">
                        <div>
                            <label>@(isAr ? "مسمى العنوان" : "Label")</label>
                            <input asp-for="Title" class="form-control" required />

                            <label>@(isAr ? "رقم الهاتف" : "Phone")</label>
                            <input asp-for="PhoneNumber" class="form-control" required type="tel" />

                            <label>@(isAr ? "المحافظة" : "Governorate")</label>
                            <select asp-for="Governorate" id="govSelect" class="form-control" required>
                                <option value="">@(isAr ? "-- اختر --" : "-- Select --")</option>
                            </select>
                            <input type="hidden" id="savedGov" value="@Model.Governorate" />

                            <label>@(isAr ? "المدينة" : "City")</label>
                            <select asp-for="City" id="citySelect" class="form-control" required disabled></select>
                            <input type="hidden" id="savedCity" value="@Model.City" />
                        </div>

                        <div>
                            <label>@(isAr ? "الموقع" : "Location")</label>
                            <div id="map" style="height: 300px; border-radius: 10px; border: 2px solid #e2e8f0;"></div>
                            <input type="hidden" asp-for="Latitude" id="lat" />
                            <input type="hidden" asp-for="Longitude" id="lng" />
                        </div>
                    </div>

                    <label>@(isAr ? "العنوان بالتفصيل" : "Detailed Address")</label>
                    <textarea asp-for="Street" class="form-control" rows="2" required></textarea>

                    <div style="background:#f8fafc; padding:15px; border-radius:8px; margin-bottom:25px; border:1px solid #eee;">
                        <label style="display:flex; align-items:center; gap:10px; cursor:pointer; margin:0;">
                            <input asp-for="IsDefault" type="checkbox" style="width:20px; height:20px;">
                            <span>@(isAr ? "تعيين كعنوان افتراضي" : "Set as default")</span>
                        </label>
                    </div>

                    <button type="submit" class="btn primary add-btn" style="width:100%; padding:12px; font-size:1.1rem; font-weight:bold;">
                        @(isAr ? "حفظ التعديلات" : "Save Changes")
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="~/js/checkout-data.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Map Init
        var lat = @(Model.Latitude ?? 30.0444);
        var lng = @(Model.Longitude ?? 31.2357);
        var map = L.map('map').setView([lat, lng], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
        var marker = L.marker([lat, lng]).addTo(map);

        map.on('click', function(e) {
            marker.setLatLng(e.latlng);
            document.getElementById('lat').value = e.latlng.lat;
            document.getElementById('lng').value = e.latlng.lng;
        });

        // Load Saved Gov/City
        setTimeout(() => {
            const savedGov = document.getElementById('savedGov').value;
            const savedCity = document.getElementById('savedCity').value;
            const govSelect = document.getElementById('govSelect');

            if(savedGov) {
                govSelect.value = savedGov;
                govSelect.dispatchEvent(new Event('change'));
                setTimeout(() => {
                    document.getElementById('citySelect').value = savedCity;
                }, 100);
            }
        }, 500);
    });
</script>