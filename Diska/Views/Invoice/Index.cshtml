@model IEnumerable<Diska.Controllers.InvoiceViewModel>
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "الفواتير" : "Invoices";
}

<section class="section-padding">
    <div class="container">
        <h2 class="page-title">@(isAr ? "فواتير المشتريات" : "My Invoices") 🧾</h2>

        @if (!Model.Any())
        {
            <div style="text-align:center; padding:60px; background:#fff; border-radius:15px; border:1px solid #eee;">
                <i class="fas fa-file-invoice-dollar fa-4x" style="color:#e2e8f0; margin-bottom:20px;"></i>
                <h3 style="color:#64748b;">@(isAr ? "لا توجد فواتير حالياً." : "No invoices found.")</h3>
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">@(isAr ? "رقم الفاتورة" : "Invoice #")</th>
                                <th>@(isAr ? "التاريخ" : "Date")</th>
                                <th>@(isAr ? "المبلغ" : "Amount")</th>
                                <th>@(isAr ? "طريقة الدفع" : "Payment")</th>
                                <th>@(isAr ? "الحالة" : "Status")</th>
                                <th class="text-end pe-4">@(isAr ? "إجراءات" : "Actions")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">INV-@item.Id.ToString("D5")</td>
                                    <td class="text-muted small">@item.Date.ToString("yyyy-MM-dd")</td>
                                    <td class="fw-bold text-dark">@item.TotalAmount.ToString("N0") ج.م</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@item.PaymentMethod</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-success bg-opacity-75">@(isAr ? "مدفوعة" : "Paid")</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Print" asp-route-id="@item.Id" target="_blank" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-download"></i> PDF
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</section>