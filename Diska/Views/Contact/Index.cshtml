@model Diska.Models.ContactMessage
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تواصل معنا" : "Contact Us";
    Layout = "_Layout";
}

<style>
    /* Premium Variables */
    :root {
        --c-primary: #0F172A;
        --c-accent: #FACC15;
        --c-bg: #F8FAFC;
        --c-card: #ffffff;
        --c-text: #334155;
        --c-text-light: #64748b;
        --c-border: #E2E8F0;
        --c-shadow: 0 10px 40px -10px rgba(0,0,0,0.08);
    }

    [data-bs-theme="dark"] {
        --c-primary: #f8fafc;
        --c-bg: #0f172a; /* Deep Dark */
        --c-card: #1e293b; /* Slate 800 */
        --c-text: #f1f5f9;
        --c-text-light: #94a3b8;
        --c-border: rgba(255,255,255,0.08);
        --c-shadow: 0 10px 40px -10px rgba(0,0,0,0.5);
    }

    body {
        background-color: var(--c-bg);
    }

    .section-header {
        text-align: center;
        margin-bottom: 50px;
        position: relative;
        padding-top: 40px;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--c-primary);
        margin-bottom: 15px;
    }

    .section-subtitle {
        color: var(--c-text-light);
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto;
    }

    /* Layout */
    .contact-wrapper {
        display: grid;
        grid-template-columns: 1fr 1.5fr;
        gap: 30px;
        align-items: start;
    }

    /* Info Card */
    .info-card {
        background: var(--c-card);
        border-radius: 24px;
        padding: 40px;
        border: 1px solid var(--c-border);
        box-shadow: var(--c-shadow);
        height: 100%;
    }

    .info-item {
        display: flex;
        align-items: flex-start;
        gap: 20px;
        margin-bottom: 35px;
    }

    .info-icon {
        width: 50px;
        height: 50px;
        background: rgba(15, 23, 42, 0.05);
        color: #0F172A; /* Always dark icon for contrast in light mode */
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        transition: 0.3s;
        flex-shrink: 0;
    }

    [data-bs-theme="dark"] .info-icon {
        background: rgba(255, 255, 255, 0.08);
        color: #FACC15;
    }

    .info-item:hover .info-icon {
        background: #0F172A;
        color: #FACC15;
        transform: rotate(-5deg) scale(1.1);
    }

    [data-bs-theme="dark"] .info-item:hover .info-icon {
        background: #FACC15;
        color: #0F172A;
    }

    .info-content h5 {
        font-weight: 700;
        margin: 0 0 5px;
        color: var(--c-primary);
    }

    .info-content p, .info-content a {
        color: var(--c-text-light);
        margin: 0;
        font-size: 0.95rem;
        line-height: 1.6;
        text-decoration: none;
        transition: 0.2s;
    }

        .info-content a:hover {
            color: var(--c-primary);
            text-decoration: underline;
        }

    /* Map */
    .map-box {
        border-radius: 16px;
        overflow: hidden;
        height: 250px;
        border: 1px solid var(--c-border);
        margin-top: 30px;
    }

    /* Form Card */
    .form-card {
        background: var(--c-card);
        border-radius: 24px;
        padding: 40px;
        border: 1px solid var(--c-border);
        box-shadow: var(--c-shadow);
    }

    .form-label {
        font-weight: 700;
        color: var(--c-primary);
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    .form-control-prem {
        background-color: var(--c-bg);
        border: 2px solid var(--c-border);
        border-radius: 12px;
        padding: 15px;
        font-size: 1rem;
        color: var(--c-text);
        transition: 0.3s;
        width: 100%;
    }

        .form-control-prem:focus {
            background-color: var(--c-card);
            border-color: #0F172A; /* Primary */
            box-shadow: 0 0 0 4px rgba(15, 23, 42, 0.1);
            outline: none;
        }

    [data-bs-theme="dark"] .form-control-prem:focus {
        border-color: #FACC15;
        box-shadow: 0 0 0 4px rgba(250, 204, 21, 0.15);
    }

    .btn-send {
        background-color: #0F172A;
        color: #fff;
        font-weight: 700;
        padding: 16px 30px;
        border-radius: 50px;
        border: none;
        width: 100%;
        font-size: 1.1rem;
        transition: 0.3s;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-send:hover {
            background-color: #1e293b;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px -5px rgba(15, 23, 42, 0.3);
            color: #fff;
        }

    [data-bs-theme="dark"] .btn-send {
        background-color: #FACC15;
        color: #0F172A;
    }

        [data-bs-theme="dark"] .btn-send:hover {
            background-color: #fbbf24;
        }

    /* Responsive */
    @@media (max-width: 992px) {
        .contact-wrapper {
            grid-template-columns: 1fr;
        }

        .info-card {
            order: 2;
        }

        .form-card {
            order: 1;
        }
    }
</style>

<section class="section-padding">
    <div class="container">

        <!-- Header -->
        <div class="section-header">
            <h1 class="section-title">@(isAr ? "تواصل معنا" : "Contact Us")</h1>
            <p class="section-subtitle">@(isAr ? "نحن هنا لمساعدتك. لا تتردد في الاتصال بنا لأي استفسار أو اقتراح." : "We are here to help. Feel free to contact us for any inquiries or suggestions.")</p>
        </div>

        <div class="contact-wrapper">

            <!-- Left: Info -->
            <div class="info-card">
                <div class="info-item">
                    <div class="info-icon"><i class="fas fa-map-marker-alt"></i></div>
                    <div class="info-content">
                        <h5>@(isAr ? "العنوان" : "Address")</h5>
                        <p>@(isAr ? "123 شارع التسعين، التجمع الخامس، القاهرة، مصر" : "123 Teseen St, 5th Settlement, Cairo, Egypt")</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon"><i class="fas fa-phone-alt"></i></div>
                    <div class="info-content">
                        <h5>@(isAr ? "الهاتف" : "Phone")</h5>
                        <p><a href="tel:+201000000000">+20 100 000 0000</a></p>
                        <p><a href="tel:+201100000000">+20 110 000 0000</a></p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon"><i class="fas fa-envelope"></i></div>
                    <div class="info-content">
                        <h5>@(isAr ? "البريد الإلكتروني" : "Email")</h5>
                        <p><a href="mailto:support@diska.com">support@diska.com</a></p>
                        <p><a href="mailto:sales@diska.com">sales@diska.com</a></p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon"><i class="fas fa-clock"></i></div>
                    <div class="info-content">
                        <h5>@(isAr ? "مواعيد العمل" : "Working Hours")</h5>
                        <p>@(isAr ? "يومياً: 9:00 ص - 6:00 م" : "Daily: 9:00 AM - 6:00 PM")</p>
                    </div>
                </div>

                <!-- Google Map -->
                <div class="map-box">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3453.665363714578!2d31.343167!3d30.046534!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzDCsDAyJzQ3LjUiTiAzMcKwMjAnMzUuNCJF!5e0!3m2!1sar!2seg!4v1635000000000!5m2!1sar!2seg" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>

            <!-- Right: Form -->
            <div class="form-card">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success d-flex align-items-center mb-4" style="background:#dcfce7; color:#166534; border:none; border-radius:12px;">
                        <i class="fas fa-check-circle fa-lg me-2"></i> <strong>@TempData["Success"]</strong>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger d-flex align-items-center mb-4" style="background:#fee2e2; color:#b91c1c; border:none; border-radius:12px;">
                        <i class="fas fa-exclamation-circle fa-lg me-2"></i> <strong>@TempData["Error"]</strong>
                    </div>
                }

                <form asp-controller="Contact" asp-action="SendMessage" method="post">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label">@(isAr ? "الاسم" : "Name")</label>
                            <input asp-for="Name" class="form-control-prem" placeholder="@(isAr ? "الاسم بالكامل" : "Full Name")" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@(isAr ? "رقم الهاتف" : "Phone")</label>
                            <input asp-for="Phone" class="form-control-prem" placeholder="01xxxxxxxxx" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label">@(isAr ? "البريد الإلكتروني" : "Email")</label>
                            <input asp-for="Email" type="email" class="form-control-prem" placeholder="example@mail.com">
                        </div>
                        <div class="col-12">
                            <label class="form-label">@(isAr ? "الموضوع" : "Subject")</label>
                            <select asp-for="Subject" class="form-control-prem" style="height:auto;">
                                <option value="Inquiry">@(isAr ? "استفسار عام" : "General Inquiry")</option>
                                <option value="Order">@(isAr ? "مشكلة في طلب" : "Order Issue")</option>
                                <option value="MerchantRequest">@(isAr ? "طلب تسجيل تاجر" : "Merchant Registration")</option>
                                <option value="Complaint">@(isAr ? "شكوى" : "Complaint")</option>
                                <option value="Suggestion">@(isAr ? "اقتراح" : "Suggestion")</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label">@(isAr ? "الرسالة" : "Message")</label>
                            <textarea asp-for="Message" rows="5" class="form-control-prem" placeholder="@(isAr ? "اكتب تفاصيل رسالتك هنا..." : "Write your details...")" required></textarea>
                        </div>
                        <div class="col-12 mt-4">
                            <button type="submit" class="btn-send">
                                <span>@(isAr ? "إرسال الرسالة" : "Send Message")</span>
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>