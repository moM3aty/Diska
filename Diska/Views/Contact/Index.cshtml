@model Diska.Models.ContactMessage
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تواصل معنا" : "Contact Us";
    Layout = "_Layout";
}

<style>
    .contact-page-wrapper {
        display: grid;
        grid-template-columns: 1fr 1.5fr;
        gap: 40px;
        margin-top: 30px;
    }

    .contact-info-card {
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        border: 1px solid #e2e8f0;
        height: fit-content;
        box-shadow: 0 4px 6px rgba(0,0,0,0.02);
    }

    .c-item {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        margin-bottom: 25px;
    }

        .c-item .icon {
            width: 50px;
            height: 50px;
            background: #f0f9ff;
            color: var(--primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .c-item h4 {
            margin: 0 0 5px;
            color: #1e293b;
            font-weight: bold;
        }

        .c-item p, .c-item a {
            margin: 0;
            color: #64748b;
            font-size: 0.95rem;
            line-height: 1.6;
            text-decoration: none;
        }

            .c-item a:hover {
                color: var(--primary);
            }

    .map-container {
        margin-top: 20px;
        border-radius: 12px;
        overflow: hidden;
        height: 250px;
        border: 1px solid #e2e8f0;
    }

    .contact-form-card {
        background: #fff;
        padding: 40px;
        border-radius: 15px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.02);
    }

        .contact-form-card h2 {
            color: var(--primary);
            margin-bottom: 10px;
        }

    .form-control {
        background-color: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 12px 15px;
        font-size: 0.95rem;
        transition: 0.3s;
    }

        .form-control:focus {
            background-color: #fff;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            outline: none;
        }

    @@media (max-width: 768px) {
        .contact-page-wrapper

    {
        grid-template-columns: 1fr;
    }

    .contact-form-card {
        order: -1;
    }

    }
</style>

<section class="section-padding" style="background-color: #f9fafb;">
    <div class="container">

        <div class="breadcrumb" style="margin-bottom: 20px;">
            <a asp-controller="Home" asp-action="Index" style="text-decoration:none; color:#64748b;">@(isAr ? "الرئيسية" : "Home")</a>
            <span style="margin: 0 5px;">/</span>
            <span style="color:var(--primary); font-weight:bold;">@(isAr ? "تواصل معنا" : "Contact Us")</span>
        </div>

        <div class="contact-page-wrapper">

            <!-- Info & Map -->
            <div class="contact-info-card">
                <div class="c-item">
                    <div class="icon"><i class="fas fa-map-marker-alt"></i></div>
                    <div>
                        <h4>@(isAr ? "المقر الرئيسي" : "Headquarters")</h4>
                        <p>@(isAr ? "123 شارع التسعين، التجمع الخامس، القاهرة" : "123 Teseen St, 5th Settlement, Cairo")</p>
                    </div>
                </div>

                <div class="c-item">
                    <div class="icon"><i class="fas fa-phone-alt"></i></div>
                    <div>
                        <h4>@(isAr ? "أرقام الهاتف" : "Phone Numbers")</h4>
                        <p><a href="tel:01000000000">01000000000</a></p>
                        <p><a href="tel:01100000000">01100000000</a></p>
                    </div>
                </div>

                <div class="c-item">
                    <div class="icon"><i class="fas fa-envelope"></i></div>
                    <div>
                        <h4>@(isAr ? "البريد الإلكتروني" : "Email Address")</h4>
                        <p><a href="mailto:support@diska.com">support@diska.com</a></p>
                        <p><a href="mailto:sales@diska.com">sales@diska.com</a></p>
                    </div>
                </div>

                <div class="c-item">
                    <div class="icon"><i class="fas fa-clock"></i></div>
                    <div>
                        <h4>@(isAr ? "مواعيد العمل" : "Working Hours")</h4>
                        <p>@(isAr ? "يومياً من 9:00 ص إلى 6:00 م" : "Daily 9:00 AM to 6:00 PM")</p>
                    </div>
                </div>

                <div class="map-container">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3453.665363714578!2d31.343167!3d30.046534!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzDCsDAyJzQ3LjUiTiAzMcKwMjAnMzUuNCJF!5e0!3m2!1sar!2seg!4v1635000000000!5m2!1sar!2seg"
                            width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>

            <!-- Form -->
            <div class="contact-form-card">
                <h2>@(isAr ? "هل لديك استفسار؟" : "Have an Inquiry?")</h2>
                <p style="color:#666; margin-bottom:30px;">@(isAr ? "املأ النموذج التالي وسيتم الرد عليك في أقرب وقت ممكن." : "Fill out the form below and we will get back to you as soon as possible.")</p>

                @if (TempData["Success"] != null)
                {
                    <div style="background:#dcfce7; color:#166534; padding:15px; border-radius:8px; margin-bottom:20px; display:flex; align-items:center; gap:10px;">
                        <i class="fas fa-check-circle"></i> @TempData["Success"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div style="background:#fee2e2; color:#b91c1c; padding:15px; border-radius:8px; margin-bottom:20px; display:flex; align-items:center; gap:10px;">
                        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    </div>
                }

                <form asp-controller="Contact" asp-action="SendMessage" method="post">
                    <div style="display:grid; grid-template-columns: 1fr 1fr; gap:20px; margin-bottom:20px;">
                        <div>
                            <label style="font-weight:bold; margin-bottom:8px; display:block; color:#334155;">@(isAr ? "الاسم" : "Name")</label>
                            <input asp-for="Name" class="form-control" placeholder="@(isAr ? "الاسم بالكامل" : "Full Name")" required>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div>
                            <label style="font-weight:bold; margin-bottom:8px; display:block; color:#334155;">@(isAr ? "رقم الهاتف" : "Phone")</label>
                            <input asp-for="Phone" class="form-control" placeholder="01xxxxxxxxx" required>
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                    </div>

                    <div style="margin-bottom:20px;">
                        <label style="font-weight:bold; margin-bottom:8px; display:block; color:#334155;">@(isAr ? "البريد الإلكتروني" : "Email")</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="example@mail.com">
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div style="margin-bottom:20px;">
                        <label style="font-weight:bold; margin-bottom:8px; display:block; color:#334155;">@(isAr ? "الموضوع" : "Subject")</label>
                        <select asp-for="Subject" class="form-control">
                            <option value="Inquiry">@(isAr ? "استفسار عام" : "General Inquiry")</option>
                            <option value="Order">@(isAr ? "مشكلة في طلب" : "Order Issue")</option>
                            <option value="MerchantRequest">@(isAr ? "طلب تسجيل تاجر" : "Merchant Registration")</option>
                            <option value="Complaint">@(isAr ? "شكوى" : "Complaint")</option>
                            <option value="Suggestion">@(isAr ? "اقتراح" : "Suggestion")</option>
                        </select>
                    </div>

                    <div style="margin-bottom:20px;">
                        <label style="font-weight:bold; margin-bottom:8px; display:block; color:#334155;">@(isAr ? "الرسالة" : "Message")</label>
                        <textarea asp-for="Message" rows="5" class="form-control" placeholder="@(isAr ? "اكتب تفاصيل رسالتك هنا..." : "Write your message details here...")" required></textarea>
                        <span asp-validation-for="Message" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn primary w-100" style="padding:12px; font-weight:bold; font-size:1.1rem; border-radius:8px;">
                        @(isAr ? "إرسال الرسالة" : "Send Message") <i class="fas fa-paper-plane ms-2"></i>
                    </button>
                </form>
            </div>

        </div>
    </div>
</section>