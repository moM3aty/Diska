@model Diska.Models.ProductReview
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تعديل التقييم" : "Edit Review";
    Layout = "_Layout";
}

<style>
    /* ... Reusing Premium Styles from Create ... */
    :root {
        --rev-bg: #f8fafc;
        --rev-card-bg: #ffffff;
        --rev-text-main: #0f172a;
        --rev-text-muted: #64748b;
        --rev-border: #e2e8f0;
        --rev-primary: #0F172A;
        --rev-accent: #FACC15;
        --rev-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.05);
        --rev-input-bg: #f8fafc;
    }

    [data-bs-theme="dark"] {
        --rev-bg: #020617;
        --rev-card-bg: #1e293b;
        --rev-text-main: #f8fafc;
        --rev-text-muted: #94a3b8;
        --rev-border: rgba(255, 255, 255, 0.08);
        --rev-primary: #f8fafc;
        --rev-accent: #FACC15;
        --rev-shadow: 0 10px 40px -5px rgba(0, 0, 0, 0.4);
        --rev-input-bg: #0f172a;
    }

    body {
        background-color: var(--rev-bg);
        transition: background-color 0.3s ease;
    }

    .section-padding {
        padding: 60px 0;
        min-height: 80vh;
        display: flex;
        align-items: center;
    }

    .review-card {
        background: var(--rev-card-bg);
        padding: 40px;
        border-radius: 20px;
        border: 1px solid var(--rev-border);
        box-shadow: var(--rev-shadow);
        max-width: 650px;
        margin: 0 auto;
        position: relative;
        overflow: hidden;
    }

        .review-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, var(--rev-accent), var(--rev-primary));
        }

    .page-title {
        margin: 0;
        color: var(--rev-primary);
        font-weight: 800;
        font-size: 1.8rem;
        text-align: center;
    }

    .page-subtitle {
        color: var(--rev-text-muted);
        margin-top: 5px;
        font-size: 1rem;
        text-align: center;
        margin-bottom: 30px;
    }

    .rating-group {
        display: inline-flex;
        flex-direction: row-reverse;
        gap: 8px;
        background: var(--rev-input-bg);
        padding: 10px 20px;
        border-radius: 50px;
        border: 1px solid var(--rev-border);
    }

        .rating-group input {
            display: none;
        }

        .rating-group label {
            font-size: 2rem;
            color: #cbd5e1;
            cursor: pointer;
            transition: 0.2s;
        }

    [data-bs-theme="dark"] .rating-group label {
        color: #475569;
    }

    .rating-group label:hover, .rating-group label:hover ~ label, .rating-group input:checked ~ label {
        color: var(--rev-accent);
        transform: scale(1.1);
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        margin-bottom: 10px;
        font-weight: 700;
        color: var(--rev-text-main);
        font-size: 0.95rem;
    }

    .form-control {
        width: 100%;
        padding: 15px;
        border: 1px solid var(--rev-border);
        border-radius: 12px;
        background-color: var(--rev-input-bg);
        color: var(--rev-text-main);
        font-size: 1rem;
        transition: 0.3s;
        outline: none;
    }

        .form-control:focus {
            border-color: var(--rev-accent);
            box-shadow: 0 0 0 4px rgba(250, 204, 21, 0.15);
            background-color: var(--rev-card-bg);
        }

    .btn-submit {
        width: 100%;
        background: #0F172A;
        color: #fff;
        padding: 14px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1rem;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    [data-bs-theme="dark"] .btn-submit {
        background: var(--rev-accent);
        color: #0F172A;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    .btn-cancel {
        display: block;
        text-align: center;
        width: 100%;
        padding: 14px;
        border-radius: 12px;
        border: 1px solid var(--rev-border);
        color: var(--rev-text-muted);
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s;
        background: transparent;
    }

        .btn-cancel:hover {
            border-color: var(--rev-text-main);
            color: var(--rev-text-main);
            background-color: var(--rev-input-bg);
        }

    .alert-error {
        background: #fee2e2;
        color: #ef4444;
        padding: 12px;
        border-radius: 10px;
        margin-bottom: 20px;
        border: 1px solid #fecaca;
        text-align: center;
        font-weight: 600;
    }

    [data-bs-theme="dark"] .alert-error {
        background: rgba(239, 68, 68, 0.15);
        color: #f87171;
        border-color: rgba(239, 68, 68, 0.2);
    }

    .fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }
    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<section class="section-padding fade-up">
    <div class="container">
        <div class="review-card">

            <div class="text-center">
                <h2 class="page-title">@(isAr ? "تعديل تقييمك" : "Edit Your Review")</h2>
                <p class="page-subtitle">@(isAr? Model.Product?.Name : Model.Product?.NameEn)</p>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert-error">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                </div>
            }

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProductId" />

                <div class="form-group text-center">
                    <label class="form-label">@(isAr ? "التقييم العام" : "Overall Rating")</label>
                    <div class="rating-group">
                        <input type="radio" id="star5" name="Rating" value="5" @(Model.Rating == 5 ? "checked" : "") /><label for="star5" title="Excellent"><i class="fas fa-star"></i></label>
                        <input type="radio" id="star4" name="Rating" value="4" @(Model.Rating == 4 ? "checked" : "") /><label for="star4" title="Good"><i class="fas fa-star"></i></label>
                        <input type="radio" id="star3" name="Rating" value="3" @(Model.Rating == 3 ? "checked" : "") /><label for="star3" title="Average"><i class="fas fa-star"></i></label>
                        <input type="radio" id="star2" name="Rating" value="2" @(Model.Rating == 2 ? "checked" : "") /><label for="star2" title="Poor"><i class="fas fa-star"></i></label>
                        <input type="radio" id="star1" name="Rating" value="1" @(Model.Rating == 1 ? "checked" : "") /><label for="star1" title="Bad"><i class="fas fa-star"></i></label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">@(isAr ? "تعليقك" : "Your Comment")</label>
                    <textarea asp-for="Comment" rows="4" class="form-control" required></textarea>
                </div>

                <div style="display:grid; grid-template-columns: 2fr 1fr; gap:15px;">
                    <button type="submit" class="btn-submit">
                        <i class="fas fa-save me-2"></i> @(isAr ? "حفظ التعديلات" : "Save Changes")
                    </button>
                    <a asp-action="MyReviews" class="btn-cancel">
                        @(isAr ? "إلغاء" : "Cancel")
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>