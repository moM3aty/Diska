@model IEnumerable<Diska.Models.DealRequest>
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "طلباتي الخاصة" : "My Requests";
    Layout = "_Layout";
}

<style>
    /* =========================================
           PREMIUM REQUEST LIST STYLES (Light & Dark)
           ========================================= */
    :root {
        /* Light Theme */
        --req-bg: #f8fafc;
        --req-card-bg: #ffffff;
        --req-text-main: #0f172a;
        --req-text-muted: #64748b;
        --req-border: #e2e8f0;
        --req-primary: #0F172A;
        --req-accent: #FACC15;
        --req-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02);
    }

    [data-bs-theme="dark"] {
        /* Dark Theme */
        --req-bg: #020617; /* Deep Dark */
        --req-card-bg: #1e293b; /* Slate 800 */
        --req-text-main: #f8fafc; /* Light Text */
        --req-text-muted: #94a3b8; /* Muted Text */
        --req-border: rgba(255, 255, 255, 0.08);
        --req-primary: #f8fafc; /* White headings */
        --req-accent: #FACC15; /* Gold remains */
        --req-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
    }

    body {
        background-color: var(--req-bg);
        transition: background-color 0.3s ease;
    }

    .section-padding {
        padding: 60px 0;
        min-height: 80vh;
    }

    /* Header */
    .req-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
        border-bottom: 1px solid var(--req-border);
        padding-bottom: 20px;
    }

    .page-title {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--req-primary);
    }

    .page-desc {
        color: var(--req-text-muted);
        margin: 5px 0 0;
    }

    .btn-create {
        background: var(--req-primary);
        color: #fff;
        padding: 10px 25px;
        border-radius: 50px;
        font-weight: 700;
        text-decoration: none;
        transition: 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    [data-bs-theme="dark"] .btn-create {
        background: var(--req-accent);
        color: #000;
    }

    .btn-create:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        color: #fff;
    }

    [data-bs-theme="dark"] .btn-create:hover {
        color: #000;
    }

    /* Grid */
    .req-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 25px;
    }

    /* Card */
    .req-card {
        background: var(--req-card-bg);
        border-radius: 20px;
        border: 1px solid var(--req-border);
        padding: 25px;
        transition: 0.3s;
        position: relative;
        overflow: hidden;
        box-shadow: var(--req-shadow);
        display: flex;
        flex-direction: column;
    }

        .req-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px -5px rgba(0,0,0,0.08);
            border-color: var(--req-text-muted);
        }

    [data-bs-theme="dark"] .req-card:hover {
        box-shadow: 0 15px 30px -5px rgba(0,0,0,0.4);
    }

    .card-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .badge-status {
        padding: 5px 12px;
        border-radius: 30px;
        font-size: 0.75rem;
        font-weight: 800;
    }

    .st-Pending {
        background: #fffbeb;
        color: #b45309;
    }

    .st-Approved {
        background: #e0f2fe;
        color: #0284c7;
    }

    .st-Completed {
        background: #dcfce7;
        color: #166534;
    }

    .st-Rejected {
        background: #fee2e2;
        color: #991b1b;
    }

    /* Dark Mode Badges */
    [data-bs-theme="dark"] .st-Pending {
        background: rgba(245, 158, 11, 0.15);
        color: #fbbf24;
    }

    [data-bs-theme="dark"] .st-Approved {
        background: rgba(14, 165, 233, 0.15);
        color: #38bdf8;
    }

    [data-bs-theme="dark"] .st-Completed {
        background: rgba(34, 197, 94, 0.15);
        color: #4ade80;
    }

    [data-bs-theme="dark"] .st-Rejected {
        background: rgba(239, 68, 68, 0.15);
        color: #f87171;
    }

    .req-date {
        font-size: 0.8rem;
        color: var(--req-text-muted);
    }

    .item-name {
        font-size: 1.2rem;
        font-weight: 800;
        color: var(--req-text-main);
        margin-bottom: 15px;
    }

    .req-stats {
        display: flex;
        gap: 20px;
        font-size: 0.9rem;
        color: var(--req-text-muted);
        margin-bottom: 20px;
    }

    .stat-val {
        font-weight: 700;
        color: var(--req-primary);
    }

    [data-bs-theme="dark"] .stat-val {
        color: var(--req-accent);
    }

    .offers-indicator {
        background: rgba(79, 70, 229, 0.05);
        color: #4f46e5;
        padding: 8px;
        border-radius: 8px;
        text-align: center;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

    [data-bs-theme="dark"] .offers-indicator {
        background: rgba(129, 140, 248, 0.1);
        color: #818cf8;
    }

    .card-actions {
        margin-top: auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid var(--req-border);
        padding-top: 15px;
    }

    .btn-link {
        color: var(--req-primary);
        font-weight: 700;
        text-decoration: none;
        font-size: 0.9rem;
    }

    [data-bs-theme="dark"] .btn-link {
        color: var(--req-text-main);
    }

    .btn-link:hover {
        text-decoration: underline;
    }

    .btn-delete {
        background: transparent;
        border: none;
        color: #ef4444;
        cursor: pointer;
        transition: 0.2s;
    }

        .btn-delete:hover {
            transform: scale(1.2);
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px;
        background: var(--req-card-bg);
        border-radius: 20px;
        border: 2px dashed var(--req-border);
    }

    .empty-icon {
        font-size: 4rem;
        color: var(--req-text-muted);
        opacity: 0.3;
        margin-bottom: 20px;
    }

    /* Animation */
    .fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }
    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<section class="section-padding fade-up">
    <div class="container">

        <div class="req-header">
            <div>
                <h2 class="page-title">@(isAr ? "طلبات الشراء الخاصة" : "Special Requests")</h2>
                <p class="page-desc">@(isAr ? "اطلب كميات خاصة أو منتجات غير متوفرة" : "Request bulk items or unavailable products")</p>
            </div>
            <a asp-action="Create" class="btn-create">
                <i class="fas fa-plus"></i> @(isAr ? "طلب جديد" : "New Request")
            </a>
        </div>

        @if (TempData["Success"] != null)
        {
            <div style="background:rgba(34, 197, 94, 0.1); color:#16a34a; padding:15px; border-radius:12px; margin-bottom:25px; border:1px solid rgba(34, 197, 94, 0.2); display:flex; align-items:center; gap:10px;">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }

        @if (!Model.Any())
        {
            <div class="empty-state">
                <i class="fas fa-bullhorn empty-icon"></i>
                <h3 style="color:var(--req-text-main);">@(isAr ? "ليس لديك طلبات خاصة حالياً." : "No requests yet.")</h3>
                <a asp-action="Create" class="btn-create" style="margin-top:20px;">
                    @(isAr ? "أضف طلبك الأول" : "Create First Request")
                </a>
            </div>
        }
        else
        {
            <div class="req-grid">
                @foreach (var item in Model)
                {
                    <div class="req-card">
                        <div class="card-top">
                            @{
                                var statusClass = item.Status switch
                                {
                                    "Pending" => "st-Pending",
                                    "Approved" => "st-Approved",
                                    "Completed" => "st-Completed",
                                    "Rejected" => "st-Rejected",
                                    _ => "st-Pending"
                                };
                                var statusText = isAr ? (item.Status == "Pending" ? "قيد المراجعة" : item.Status == "Approved" ? "مفتوح للعروض" : item.Status == "Completed" ? "مكتمل" : "مرفوض") : item.Status;
                            }
                            <span class="badge-status @statusClass">@statusText</span>
                            <span class="req-date">@item.RequestDate.ToString("dd/MM/yyyy")</span>
                        </div>

                        <h3 class="item-name">@item.ProductName</h3>

                        <div class="req-stats">
                            <div><i class="fas fa-cubes"></i> @(isAr ? "الكمية:" : "Qty:") <span class="stat-val">@item.TargetQuantity</span></div>
                            <div><i class="fas fa-tag"></i> @(isAr ? "السعر:" : "Price:") <span class="stat-val">@item.DealPrice.ToString("N0")</span></div>
                        </div>

                        <div class="offers-indicator">
                            <i class="fas fa-bell"></i>
                            @(item.Offers != null && item.Offers.Any() ? item.Offers.Count.ToString() : "0")
                            @(isAr ? "عروض مقدمة" : "Offers Received")
                        </div>

                        <div class="card-actions">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-link">
                                @(isAr ? "التفاصيل والعروض" : "Details & Offers") <i class="fas @(isAr ? "fa-arrow-left" : "fa-arrow-right")"></i>
                            </a>

                            @if (item.Status != "Completed")
                            {
                                <form id="deleteForm-@item.Id" asp-action="Delete" method="post" style="margin:0;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="button" class="btn-delete" title="@(isAr ? "حذف" : "Delete")" onclick="confirmDelete(@item.Id)">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        }

    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id) {
            // Check theme for styling
            const isDark = document.documentElement.getAttribute('data-bs-theme') === 'dark';
            const colors = isDark ? {
                bg: '#1e293b', text: '#f8fafc', confirm: '#ef4444', cancel: '#64748b'
            } : {
                bg: '#ffffff', text: '#1f2937', confirm: '#ef4444', cancel: '#6b7280'
            };

            Swal.fire({
                title: '@Html.Raw(isAr ? "هل أنت متأكد؟" : "Are you sure?")',
                text: '@Html.Raw(isAr ? "لن تتمكن من استعادة هذا الطلب!" : "You won\'t be able to revert this!")',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: colors.confirm,
                cancelButtonColor: colors.cancel,
                confirmButtonText: '@Html.Raw(isAr ? "نعم، احذف" : "Yes, delete it!")',
                cancelButtonText: '@Html.Raw(isAr ? "إلغاء" : "Cancel")',
                background: colors.bg,
                color: colors.text,
                customClass: {
                    popup: 'rounded-4 shadow-lg border-0'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm-' + id).submit();
                }
            })
        }
    </script>
}