@model Diska.Models.DealRequest
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "طلب جديد" : "New Request";
    Layout = "_Layout";
}

<style>
    /* =========================================
           PREMIUM REQUEST CREATE STYLES (Light & Dark)
           ========================================= */
    :root {
        --req-bg: #f8fafc;
        --req-card-bg: #ffffff;
        --req-text-main: #0f172a;
        --req-text-muted: #64748b;
        --req-border: #e2e8f0;
        --req-primary: #0F172A;
        --req-accent: #FACC15;
        --req-input-bg: #f8fafc;
        --req-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
    }

    [data-bs-theme="dark"] {
        --req-bg: #020617; /* Deep Dark */
        --req-card-bg: #1e293b; /* Slate 800 */
        --req-text-main: #f8fafc; /* Light Text */
        --req-text-muted: #94a3b8; /* Muted Text */
        --req-border: rgba(255, 255, 255, 0.08);
        --req-primary: #f8fafc; /* White headings */
        --req-accent: #FACC15; /* Gold remains */
        --req-input-bg: #0f172a; /* Slate 900 */
        --req-shadow: 0 10px 40px -5px rgba(0, 0, 0, 0.4);
    }

    body {
        background-color: var(--req-bg);
        transition: background-color 0.3s ease;
    }

    .section-padding {
        padding: 60px 0;
        min-height: 80vh;
    }

    .back-link {
        color: var(--req-text-muted);
        text-decoration: none;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 20px;
        transition: 0.2s;
    }

        .back-link:hover {
            color: var(--req-primary);
            transform: translateX( @(isAr ? "5px" : "-5px") );
        }

    .form-card {
        background: var(--req-card-bg);
        padding: 40px;
        border-radius: 20px;
        border: 1px solid var(--req-border);
        box-shadow: var(--req-shadow);
    }

    .page-title {
        margin-top: 0;
        margin-bottom: 10px;
        color: var(--req-primary);
        text-align: center;
        font-weight: 800;
        font-size: 1.8rem;
    }

    .page-desc {
        text-align: center;
        color: var(--req-text-muted);
        margin-bottom: 40px;
        font-size: 1rem;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 700;
        color: var(--req-text-main);
        margin-bottom: 8px;
        display: block;
        font-size: 0.9rem;
    }

    .form-control {
        width: 100%;
        padding: 14px 16px;
        border: 1px solid var(--req-border);
        border-radius: 12px;
        font-size: 1rem;
        transition: 0.3s;
        background-color: var(--req-input-bg);
        color: var(--req-text-main);
    }

        .form-control:focus {
            border-color: var(--req-primary);
            outline: none;
            box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.15);
            background-color: var(--req-card-bg);
        }

    [data-bs-theme="dark"] .form-control:focus {
        border-color: var(--req-accent);
        box-shadow: 0 0 0 4px rgba(250, 204, 21, 0.15);
    }

    .btn-submit {
        width: 100%;
        padding: 16px;
        font-size: 1.1rem;
        font-weight: 800;
        border-radius: 50px;
        background: var(--req-primary);
        color: #fff;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    [data-bs-theme="dark"] .btn-submit {
        background: var(--req-accent);
        color: #0F172A;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    }

    [data-bs-theme="dark"] .btn-submit:hover {
        background: #fff;
    }

    /* Animation */
    .fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }
    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<section class="section-padding fade-up">
    <div class="container">

        <div style="max-width: 700px; margin: 0 auto;">
            <div>
                <a asp-action="Index" class="back-link">
                    <i class="fas @(isAr ? "fa-arrow-right" : "fa-arrow-left")"></i> @(isAr ? "العودة لطلباتي" : "Back to Requests")
                </a>
            </div>

            <div class="form-card">
                <h2 class="page-title">
                    @(isAr ? "إضافة طلب شراء خاص" : "Create Special Request")
                </h2>
                <p class="page-desc">
                    @(isAr ? "هل تبحث عن كمية كبيرة أو منتج غير متوفر؟ اطلب الآن وسيقوم التجار بتقديم عروضهم." : "Looking for bulk quantity or unavailable item? Request now and merchants will offer you prices.")
                </p>

                <form asp-action="Create" method="post">

                    <div class="form-group">
                        <label class="form-label">@(isAr ? "اسم المنتج المطلوب" : "Product Name")</label>
                        <input asp-for="ProductName" class="form-control" required placeholder="@(isAr ? "مثال: زيت طعام 1 لتر" : "Ex: Cooking Oil 1L")" />
                    </div>

                    <div style="display:grid; grid-template-columns: 1fr 1fr; gap:20px;">
                        <div class="form-group">
                            <label class="form-label">@(isAr ? "الكمية المطلوبة" : "Quantity")</label>
                            <input asp-for="TargetQuantity" type="number" class="form-control" required min="1" placeholder="100" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">@(isAr ? "السعر المستهدف (للقطعة)" : "Target Price (Unit)")</label>
                            <input asp-for="DealPrice" type="number" class="form-control" required step="0.01" placeholder="0.00" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">@(isAr ? "المدينة / مكان التوصيل" : "Location / City")</label>
                        <input asp-for="Location" class="form-control" required placeholder="@(isAr ? "القاهرة، التجمع" : "Cairo")" />
                    </div>

                    <button type="submit" class="btn-submit">
                        @(isAr ? "إرسال الطلب" : "Submit Request")
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>