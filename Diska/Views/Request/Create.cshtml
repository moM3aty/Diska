@model Diska.Models.DealRequest
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "طلب جديد" : "New Request";
    Layout = "_Layout";
}

<style>
    .form-card {
        background: #fff;
        padding: 30px;
        border-radius: 16px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 4px 15px rgba(0,0,0,0.02);
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #cbd5e1;
        border-radius: 8px;
        font-size: 1rem;
        transition: 0.3s;
        margin-bottom: 15px;
    }

        .form-control:focus {
            border-color: var(--primary);
            outline: none;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

    label {
        font-weight: bold;
        color: #334155;
        margin-bottom: 8px;
        display: block;
    }
</style>

<section class="section-padding" style="background-color: #f9fafb;">
    <div class="container">

        <div style="max-width: 700px; margin: 0 auto;">
            <div style="margin-bottom: 20px;">
                <a asp-action="Index" style="text-decoration:none; color:#64748b; font-weight:bold;">
                    <i class="fas @(isAr ? "fa-arrow-right" : "fa-arrow-left")"></i> @(isAr ? "العودة لطلباتي" : "Back to Requests")
                </a>
            </div>

            <div class="form-card">
                <h2 style="margin-top:0; margin-bottom:10px; color:var(--primary); text-align:center;">
                    @(isAr ? "إضافة طلب شراء خاص" : "Create Special Request")
                </h2>
                <p style="text-align:center; color:#666; margin-bottom:30px;">
                    @(isAr ? "هل تبحث عن كمية كبيرة أو منتج غير متوفر؟ اطلب الآن وسيقوم التجار بتقديم عروضهم." : "Looking for bulk quantity or unavailable item? Request now and merchants will offer you prices.")
                </p>

                <form asp-action="Create" method="post">

                    <div class="form-group">
                        <label>@(isAr ? "اسم المنتج المطلوب" : "Product Name")</label>
                        <input asp-for="ProductName" class="form-control" required placeholder="@(isAr ? "مثال: زيت طعام 1 لتر" : "Ex: Cooking Oil 1L")" />
                    </div>

                    <div style="display:grid; grid-template-columns: 1fr 1fr; gap:20px;">
                        <div class="form-group">
                            <label>@(isAr ? "الكمية المطلوبة" : "Quantity")</label>
                            <input asp-for="TargetQuantity" type="number" class="form-control" required min="1" placeholder="100" />
                        </div>
                        <div class="form-group">
                            <label>@(isAr ? "السعر المستهدف (للقطعة)" : "Target Price (Unit)")</label>
                            <input asp-for="DealPrice" type="number" class="form-control" required step="0.01" placeholder="0.00" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label>@(isAr ? "المدينة / مكان التوصيل" : "Location / City")</label>
                        <input asp-for="Location" class="form-control" required placeholder="@(isAr ? "القاهرة، التجمع" : "Cairo")" />
                    </div>

                    <button type="submit" class="btn primary add-btn" style="width:100%; padding:12px; font-size:1.1rem; font-weight:bold;">
                        @(isAr ? "إرسال الطلب" : "Submit Request")
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>