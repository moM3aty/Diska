@model Diska.Models.Order
@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "الدفع" : "Payment";
}

<section class="section-padding" style="min-height: 70vh; display: flex; align-items: center;">
    <div class="container">
        <div class="card border-0 shadow-sm mx-auto" style="max-width: 600px; border-radius: 16px;">
            <div class="card-header bg-white py-3 text-center border-bottom-0">
                <h3 class="mb-0 fw-bold text-primary">@(isAr ? "تأكيد الدفع" : "Confirm Payment") 💳</h3>
            </div>
            <div class="card-body p-4">

                <div class="alert alert-info text-center">
                    @(isAr ? $"أنت على وشك دفع قيمة الطلب رقم #{Model.Id}" : $"You are about to pay for Order #{Model.Id}")
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3 p-3 bg-light rounded">
                    <span class="text-muted">@(isAr ? "قيمة الطلب" : "Subtotal")</span>
                    <span class="fw-bold">@Model.TotalAmount.ToString("N0") <small>@(isAr ? "ج.م" : "EGP")</small></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light rounded">
                    <span class="text-muted">@(isAr ? "رسوم بوابة الدفع" : "Processing Fees")</span>
                    <span class="fw-bold">0.00 <small>@(isAr ? "ج.م" : "EGP")</small></span>
                </div>

                <hr class="my-4">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="mb-0 fw-bold">@(isAr ? "الإجمالي" : "Total")</h4>
                    <h2 class="mb-0 text-success fw-bold">@Model.TotalAmount.ToString("N0") <small class="fs-6">@(isAr ? "ج.م" : "EGP")</small></h2>
                </div>

                <form asp-action="InitiatePayment" method="post">
                    <input type="hidden" name="orderId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow-sm" style="border-radius: 10px; font-size: 1.1rem;">
                        <i class="fas fa-lock me-2"></i> @(isAr ? "ادفع الآن بأمان" : "Pay Now Securely")
                    </button>
                </form>

                <div class="text-center mt-3">
                    <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-muted small">
                        @(isAr ? "إلغاء والعودة للتفاصيل" : "Cancel & Back to Details")
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>