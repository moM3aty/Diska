@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "تم الدفع بنجاح" : "Payment Successful";
    int orderId = ViewBag.OrderId ?? 0;
}

<section class="section-padding" style="min-height: 70vh; display: flex; align-items: center;">
    <div class="container text-center">
        <div class="card border-0 shadow-sm mx-auto p-5" style="max-width: 600px; border-radius: 20px;">

            <div class="mb-4">
                <div style="width: 80px; height: 80px; background: #dcfce7; color: #16a34a; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                    <i class="fas fa-check fa-3x"></i>
                </div>
            </div>

            <h2 class="text-primary mb-3">@(isAr ? "تمت عملية الدفع بنجاح!" : "Payment Successful!")</h2>
            <p class="text-muted mb-4">
                @(isAr ? $"شكراً لك. تم استلام دفعتك للطلب رقم #{orderId} بنجاح. سيتم تجهيز طلبك للشحن فوراً." : $"Thank you. Your payment for Order #{orderId} was successful. We are preparing your order for shipment.")
            </p>

            <div class="d-flex justify-content-center gap-3">
                <a href="/Order/Details/@orderId" class="btn btn-primary px-4 py-2">
                    <i class="fas fa-box me-2"></i> @(isAr ? "تتبع الطلب" : "Track Order")
                </a>
                <a href="/" class="btn btn-outline-secondary px-4 py-2">
                    <i class="fas fa-home me-2"></i> @(isAr ? "الرئيسية" : "Home")
                </a>
            </div>

        </div>
    </div>
</section>