@model Diska.Models.Product

@{
    ViewData["Title"] = "تعديل المنتج والأسعار";
}

<section class="section-padding">
    <div class="container">
        <div class="merchant-form-box">
            <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
                <h2 style="color: var(--primary);">إدارة المنتج: @Model.Name</h2>
                <a asp-action="Index" class="btn btn-outline" style="border:1px solid #ccc;">رجوع</a>
            </div>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-row" style="display:grid; grid-template-columns: 1fr 2fr; gap:30px;">
                    <!-- بيانات أساسية -->
                    <div>
                        <div style="text-align:center; margin-bottom:20px;">
                            <img src="~/@Model.ImageUrl" id="previewImg" style="width:100%; max-height:200px; object-fit:contain; border:1px solid #eee; border-radius:10px; margin-bottom:10px;">
                            <label for="imageFile" class="btn primary small" style="cursor:pointer; display:block;">تغيير الصورة</label>
                            <input type="file" name="imageFile" id="imageFile" style="display:none;" onchange="document.getElementById('previewImg').src = window.URL.createObjectURL(this.files[0])">
                        </div>
                    </div>

                    <div>
                        <div class="form-group">
                            <label>اسم المنتج</label>
                            <input asp-for="Name" class="form-control" required />
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>التصنيف</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
                            </div>
                            <div class="form-group">
                                <label>وحدات الكرتونة</label>
                                <input asp-for="UnitsPerCarton" class="form-control" required placeholder="مثال: 12 قطعة" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>السعر الأساسي (قطاعي)</label>
                                <input asp-for="Price" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>الكمية بالمخزن</label>
                                <input asp-for="StockQuantity" class="form-control" required />
                            </div>
                        </div>
                    </div>
                </div>

                <hr style="margin: 30px 0; border:0; border-top:1px solid #eee;">

                <!-- نظام شرائح الأسعار (Business Logic Core) -->
                <h3 style="margin-bottom:15px; font-size:1.2rem; color:var(--primary);">شرائح أسعار الجملة (Tiered Pricing)</h3>
                <p style="color:#666; font-size:0.9rem; margin-bottom:15px;">حدد أسعاراً أقل للكميات الكبيرة لتشجيع التجار على الشراء.</p>

                <table class="table" style="width:100%; text-align:center; border:1px solid #eee; margin-bottom:15px;">
                    <thead style="background:#f8f9fa;">
                        <tr>
                            <th>من (كمية)</th>
                            <th>إلى (كمية)</th>
                            <th>سعر القطعة (ج.م)</th>
                            <th>حذف</th>
                        </tr>
                    </thead>
                    <tbody id="tiersContainer">
                        <!-- سيتم ملؤها ديناميكياً أو من الداتابيز -->
                        <!-- مثال ثابت للعرض، يجب ربطه بـ Model.PriceTiers في الباك اند -->
                        <tr>
                            <td><input type="number" name="Tiers[0].MinQuantity" value="5" class="form-control small-input"></td>
                            <td><input type="number" name="Tiers[0].MaxQuantity" value="20" class="form-control small-input"></td>
                            <td><input type="number" name="Tiers[0].UnitPrice" value="185.00" class="form-control small-input"></td>
                            <td><button type="button" class="btn-delete" onclick="this.closest('tr').remove()"><i class="fas fa-trash"></i></button></td>
                        </tr>
                    </tbody>
                </table>
                <button type="button" class="btn btn-outline" onclick="addTierRow()">+ إضافة شريحة سعر</button>

                <hr style="margin: 30px 0; border:0; border-top:1px solid #eee;">

                <div class="form-group">
                    <label>وصف تفصيلي</label>
                    <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                </div>

                <button type="submit" class="btn primary w-100" style="padding:15px; font-size:1.1rem;">حفظ كافة التغييرات</button>
            </form>
        </div>
    </div>
</section>

<script>
    function addTierRow() {
        const tbody = document.getElementById('tiersContainer');
        const index = tbody.children.length;
        const row = `
            <tr>
                <td><input type="number" name="Tiers[${index}].MinQuantity" class="form-control small-input"></td>
                <td><input type="number" name="Tiers[${index}].MaxQuantity" class="form-control small-input"></td>
                <td><input type="number" name="Tiers[${index}].UnitPrice" class="form-control small-input"></td>
                <td><button type="button" class="btn-delete" onclick="this.closest('tr').remove()"><i class="fas fa-trash"></i></button></td>
            </tr>
        `;
        tbody.insertAdjacentHTML('beforeend', row);
    }
</script>

<style>
    .small-input {
        padding: 5px;
        text-align: center;
    }
</style>