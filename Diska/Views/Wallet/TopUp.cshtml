@using System.Globalization
@{
    bool isAr = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isAr ? "شحن الرصيد" : "Top Up Wallet";
    Layout = "_Layout";
}

<style>
    /* =========================================
           PREMIUM TOP-UP STYLES (Light & Dark)
           ========================================= */
    :root {
        /* Light Theme Defaults */
        --tu-bg-body: #f8fafc;
        --tu-card-bg: #ffffff;
        --tu-text-main: #0f172a;
        --tu-text-muted: #64748b;
        --tu-border: #e2e8f0;
        --tu-primary: #0F172A;
        --tu-accent: #FACC15;
        --tu-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
        --tu-input-bg: #ffffff;
    }

    [data-bs-theme="dark"] {
        /* Dark Theme Overrides */
        --tu-bg-body: #020617; /* Deep Dark */
        --tu-card-bg: #1e293b; /* Slate 800 */
        --tu-text-main: #f8fafc; /* Light Text */
        --tu-text-muted: #94a3b8; /* Muted Text */
        --tu-border: rgba(255, 255, 255, 0.08);
        --tu-primary: #f8fafc; /* White headings */
        --tu-accent: #FACC15; /* Gold remains */
        --tu-shadow: 0 10px 40px -5px rgba(0, 0, 0, 0.4);
        --tu-input-bg: #0f172a; /* Slate 900 */
    }

    body {
        background-color: var(--tu-bg-body);
        transition: background-color 0.3s ease;
    }

    .section-padding {
        padding: 60px 0;
        min-height: 80vh;
        display: flex;
        align-items: center;
    }

    /* Back Link */
    .back-link {
        text-decoration: none;
        color: var(--tu-text-muted);
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: 0.2s;
    }

        .back-link:hover {
            color: var(--tu-primary);
            transform: translateX( @(isAr ? "5px" : "-5px") );
        }

    /* Main Card */
    .topup-card {
        background: var(--tu-card-bg);
        padding: 50px 40px;
        border-radius: 24px;
        border: 1px solid var(--tu-border);
        box-shadow: var(--tu-shadow);
        max-width: 550px;
        width: 100%;
        margin: 0 auto;
        position: relative;
        overflow: hidden;
    }

        /* Decorative Line */
        .topup-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, var(--tu-primary), var(--tu-accent));
        }

    .icon-box {
        width: 80px;
        height: 80px;
        background: rgba(250, 204, 21, 0.15);
        color: var(--tu-accent);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px;
        font-size: 2rem;
        box-shadow: 0 0 0 8px rgba(250, 204, 21, 0.05);
    }

    .page-title {
        margin: 0;
        color: var(--tu-primary);
        font-weight: 800;
        font-size: 1.8rem;
    }

    .page-desc {
        color: var(--tu-text-muted);
        margin-top: 10px;
        font-size: 1rem;
    }

    /* Form */
    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        margin-bottom: 10px;
        font-weight: 700;
        color: var(--tu-text-main);
        font-size: 0.95rem;
    }

    .form-control {
        width: 100%;
        padding: 16px;
        font-size: 1.3rem;
        border: 1px solid var(--tu-border);
        border-radius: 12px;
        background-color: var(--tu-input-bg);
        color: var(--tu-text-main);
        font-weight: 700;
        text-align: center;
        transition: 0.3s;
        outline: none;
    }

        .form-control:focus {
            border-color: var(--tu-accent);
            box-shadow: 0 0 0 4px rgba(250, 204, 21, 0.15);
            background-color: var(--tu-card-bg);
        }

        .form-control::placeholder {
            color: var(--tu-text-muted);
            opacity: 0.5;
        }

    /* Buttons */
    .btn-confirm {
        width: 100%;
        background: #0F172A;
        color: #fff;
        padding: 16px;
        font-size: 1.1rem;
        font-weight: 800;
        border-radius: 50px;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(15, 23, 42, 0.2);
    }

    [data-bs-theme="dark"] .btn-confirm {
        background: var(--tu-accent);
        color: #0F172A;
    }

    .btn-confirm:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(15, 23, 42, 0.3);
    }

    [data-bs-theme="dark"] .btn-confirm:hover {
        background: #fff;
        box-shadow: 0 8px 25px rgba(255, 255, 255, 0.15);
    }

    /* Alerts */
    .alert-error {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        padding: 12px;
        border-radius: 10px;
        margin-bottom: 25px;
        border: 1px solid rgba(239, 68, 68, 0.2);
        text-align: center;
        font-weight: 600;
    }

    [data-bs-theme="dark"] .alert-error {
        color: #f87171;
        border-color: rgba(248, 113, 113, 0.2);
    }

    /* Secure Badge */
    .secure-badge {
        margin-top: 25px;
        text-align: center;
        font-size: 0.9rem;
        color: var(--tu-text-muted);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

        .secure-badge i {
            color: #22c55e;
        }

    [data-bs-theme="dark"] .secure-badge i {
        color: #4ade80;
    }

    /* Animation */
    .fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<section class="section-padding fade-up">
    <div class="container">

        <div style="max-width: 550px; margin: 0 auto;">
            <div style="margin-bottom: 20px;">
                <a asp-action="Index" class="back-link">
                    <i class="fas @(isAr ? "fa-arrow-right" : "fa-arrow-left")"></i> @(isAr ? "العودة للمحفظة" : "Back to Wallet")
                </a>
            </div>

            <div class="topup-card">

                <div style="text-align: center; margin-bottom: 35px;">
                    <div class="icon-box">
                        <i class="fas fa-plus"></i>
                    </div>
                    <h2 class="page-title">@(isAr ? "شحن الرصيد" : "Top Up Balance")</h2>
                    <p class="page-desc">@(isAr ? "أضف رصيداً لمحفظتك لاستخدامه في الشراء بسهولة." : "Add funds to your wallet for seamless purchases.")</p>
                </div>

                @if (TempData["Error"] != null)
                {
                    <div class="alert-error">
                        <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                    </div>
                }

                <form asp-action="TopUp" method="post">
                    <div class="form-group">
                        <label class="form-label">@(isAr ? "المبلغ المراد شحنه (ج.م)" : "Amount (EGP)")</label>
                        <input type="number" name="amount" class="form-control" required min="1" placeholder="0.00">
                    </div>

                    <button type="submit" class="btn-confirm">
                        @(isAr ? "تأكيد الشحن" : "Confirm Top Up")
                    </button>
                </form>

                <div class="secure-badge">
                    <i class="fas fa-lock"></i> @(isAr ? "عملية دفع آمنة 100%" : "100% Secure Payment")
                </div>
            </div>
        </div>

    </div>
</section>